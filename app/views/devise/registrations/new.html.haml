- content_for :title do
  = "Sign up & get Sublime Video"
  
%h2 Sign up & get Sublime Video

- form_for(:user, resource, :url => registration_path(resource_name)) do |f|
  = f.error_messages
  
  %p= f.label :full_name
  %p= f.text_field :full_name
  
  %p= f.label :email
  %p= f.text_field :email
  
  %p= f.label :password
  %p= f.password_field :password
  
  %p= f.label :password_confirmation
  %p= f.password_field :password_confirmation
  
  %p= f.submit "Sign up"
  
= render :partial => "devise/shared/links"