= content_for :title do
  = "Sign up"
  
%h2 Sign up

= form_for(@resource, :as => :user, :url => registration_path(resource_name)) do |f|
  = f.error_messages
  
  %p= f.label :full_name
  %p= f.text_field :full_name
  
  %p= f.label :email
  %p= f.text_field :email
  
  %p= f.label :password
  %p= f.password_field :password
  
  %p= f.submit "Sign up"
  
%ul
  %li= link_to "Login", new_session_path(:user)