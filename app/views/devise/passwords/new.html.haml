= title "Forgot Password"

%h2= "Forgot your password?"

= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "main_form p_bottom" } do |f|
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true
    
  .entry.submit
    = f.submit "Send"
    %p.big= "You will receive an email with instructions to reset you password."