= content_for :title do
  Login

%h2= "Login"

= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "register" } do |f|
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true

  .entry.password
    = f.label :password, "", :class => "icon"
    = f.password_field :password, :class => "text", :placeholder => "Password", :required => true
  
  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me
    
  %p= f.submit "Login"

= render :partial => "devise/shared/links"