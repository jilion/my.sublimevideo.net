.left
  .entry.card
    .radio_wrap
      = f.radio_button :cc_brand, "visa", id: "user_cc_brand_visa"
      = f.label :cc_brand, content_tag(:span, "Visa"), class: "visa", title: "Visa", for: "user_cc_brand_visa"
    .radio_wrap
      = f.radio_button :cc_brand, "master", id: "user_cc_brand_master"
      = f.label :cc_brand, content_tag(:span, "MasterCard"), class: "master", title: "MasterCard", for: "user_cc_brand_master"
    .spacer

  .entry.first_name
    = f.label :cc_full_name, nil, class: "icon", for: "user_cc_full_name"
    = f.text_field :cc_full_name, class: "text", placeholder: "Name on card", autocomplete: :off, id: "user_cc_full_name"

  .entry.card_number
    = f.label :cc_number, nil, class: "icon", for: "user_cc_number"
    = f.text_field :cc_number, class: "text", placeholder: "Card number", size: 16+3, autocomplete: :off, id: "user_cc_number"

  .entry.select.float
    = f.label :cc_expiration_year
    = f.select :cc_expiration_month, options_for_select([['01',1],['02',2],['03',3],['04',4],['05',5],['06',6],['07',7],['08',8],['09',9],['10',10],['11',11],['12',12]], selected: f.object.credit_card.month), {}, { id: "user_cc_expiration_month" }
    = f.select :cc_expiration_year, options_for_select((Time.now.year..Time.now.year+20), selected: f.object.credit_card.year), {}, { id: "user_cc_expiration_year" }

  .entry.small_field
    = f.label :cc_verification_value, "Security Code", for: "user_cc_verification_value"
    = f.text_field :cc_verification_value, class: "text", placeholder: "CSC", autocomplete: :off, id: "user_cc_verification_value"

.right
  .billing_info
    %p
      = "Your credit card information is protected with secure socket layer (SSL) encryption."
      %br
      = link_to "Questions about billing?", new_ticket_path(anchor: "billing")
.spacer
