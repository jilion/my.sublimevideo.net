-#  Link to the "Next" page
-#  available local variables
-#    url:           url to the next page
-#    current_page:  a page object for the currently displayed page
-#    total_pages:     total number of pages
-#    per_page:      number of items to fetch per page
-#    remote:        data-remote
- link_options = params.merge(page: current_page + 1, format: nil)
- html_options = { remote: true, class: 'next remote', rel: 'next', onclick: 'jQuery(document.body).animate({ scrollTop: 0 })' }

%span.next{ class: current_page.last? ? 'disabled' : nil }
  = link_to_unless current_page.last?, raw(t 'views.pagination.next'), link_options, html_options
