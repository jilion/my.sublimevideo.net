%table#detail
  %tr
    %th.left= "Plan"
    %th.left= "Details"
    %th= "Amount (US $)"
  - invoice.invoice_items.each do |invoice_item|
    %tr
      %td.title
        %h3= invoice_item.item.title(always_with_cycle: true)
      %td
        %p.period= "Period: #{invoice_item_dates(invoice_item)}"
      %td.total= display_amount(invoice_item.amount, :decimals => 2)

  - if invoice.vat_amount > 0
    %tr.pre_total
      %td.right{ :colspan => 2 }= "VAT #{display_percentage(invoice.vat_rate)}:"
      %td.total= display_amount(invoice.vat_amount, :decimals => 2)

  %tr.final_total
    %td.right{ :colspan => 2 }
      %strong Total
    %td.total
      %strong= display_amount(invoice.amount, :decimals => 2)
