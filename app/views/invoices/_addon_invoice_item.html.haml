%table
  %tr
    %td.date
      %span= invoice_item_dates(addon_invoice_item)
    %td.calculation
      %span= "#{number_to_currency(addon_invoice_item.price/100.0)} per month * #{number_to_percentage(addon_invoice_item.percentage*100, :precision => 2)}"
    %td.amount
      %span= number_to_currency(addon_invoice_item.amount/100.0)