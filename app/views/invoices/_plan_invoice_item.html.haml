%h4= "Plan - #{plan_invoice_item.item.name.humanize}"
%table{ :border => 1 }
  %tr
    %td.date
      %span= invoice_item_dates(plan_invoice_item)
    %td.calculation
      %span= "#{number_to_currency(plan_invoice_item.price/100.0)} per month x #{number_to_percentage(plan_invoice_item.percentage*100, :precision => 2)} ="
    %td.amount
      %span= number_to_currency(plan_invoice_item.amount/100.0)