%h3 Plan & Cycle

%p
  = "Trial:"
  - if site.trial_started_at?
    %strong= site.trial_ended? ? "ended" : "in trial"
    = ": #{l(site.trial_started_at, format: :d_b_Y)} - #{l(site.trial_end, format: :d_b_Y)}"
  - else
    = "not started"
%p
  = "Plan:"
  %strong= site.plan ? site.plan.title : "–"
  %strong= "|"
  = "Pending plan:"
  = site.pending_plan ? site.pending_plan.title : "–"
  %strong= "|"
  = "Recommended plan:"
  = site.recommended_plan_name ? site.recommended_plan_name.titleize : "–"
  %strong= "|"
  = "Next plan:"
  = site.next_cycle_plan ? site.next_cycle_plan.title : "–"

%p
  = "First paid plan started at:"
  = display_date(site.first_paid_plan_started_at)

%p
  = "Plan started at:"
  = display_date(site.plan_started_at)
  %strong= "|"
  = "Current cycle:"
  = display_date(site.plan_cycle_started_at)
  = "–"
  = display_date(site.plan_cycle_ended_at)

%p
  = "Pending plan started at:"
  = display_date(site.pending_plan_started_at)
  %strong= "|"
  = "Pending cycle:"
  = display_date(site.pending_plan_cycle_started_at)
  = "–"
  = display_date(site.pending_plan_cycle_ended_at)

%p
  = "Overusage notification sent at:"
  = display_date(site.overusage_notification_sent_at)
  %strong= "|"
  = "First paid plan upgrade required alert sent at:"
  = display_date(site.first_plan_upgrade_required_alert_sent_at)