<%
require_dependency 'stat_timeline'

stats_timeline = StatTimeline::SiteDayStat.new(token: site.token, from: graph_start_date, to: graph_end_date)

graph = Graph.new do |g|
  g.option(chart: chart('timeline_usage'))
  g.option(title: { text: "Video plays for #{truncated_hostname(site)}" })
  g.option(subtitle: usage_date_subtitle(start_at: range_start_date, end_at: range_end_date))
  g.option(legend: legend)
  g.option(xAxis: x_axis(start_at: range_start_date, end_at: range_end_date))
  g.raw_option(y_axis(""))
  g.raw_option(tooltip(formatter: %(
    var date  = "<strong>" + Highcharts.dateFormat("%B %e,  %Y", this.x) + "</strong><br/><br/>";
    var label = "<strong>" + Highcharts.numberFormat(this.y, 0) + "</strong>";

    if (["Invalid", "Dev", "Dev cached", "Extra", "Main"].indexOf(this.series.name) != -1)
      label += " of " + Highcharts.numberFormat(this.total, 0) + " (" + Highcharts.numberFormat(this.percentage, 1) + "%)";

    return date + this.series.name + ":<br/>" + label;
  )))

  g.option(series: [
    serie(stats_timeline.d_vv[moving_average_length-1..-1], 'Dev', type: 'column', visible: false, stack: 3),
    serie(stats_timeline.m_vv[moving_average_length-1..-1], 'Main', type: 'column', stack: 3),
    serie(stats_timeline.e_vv[moving_average_length-1..-1], 'Extra', type: 'column', stack: 3),
    serie(stats_timeline.em_vv[moving_average_length-1..-1], 'Embed', type: 'column', stack: 3),
    serie(moving_average(stats_timeline.billable_vv, moving_average_length), 'AVG Billable', type: 'line', stack: 4)
    ])
  g.option(plotOptions: plot_options(range_start_date))
  g.option(credits: credits)
end
%>

<div id="timeline_usage" style="width: 100%; height: 300px;"><%= raw graph.draw %></div>
