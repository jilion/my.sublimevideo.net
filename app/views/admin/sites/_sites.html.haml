.pagination_wrap
  = page_entries_info @sites
  = paginate @sites, theme: 'admin'

%table.main#sites
  %tr
    %th ID
    %th Token
    %th= link_to_sort :hostname
    %th= link_to_sort :user
    %th= link_to_sort :state
    %th= link_to_sort :last_30_days_admin_starts, default_way: 'desc', label: "Last 30d starts"
    %th= link_to_sort :last_30_days_video_tags, default_way: 'desc', label: "Last 30d video tags"
    %th= link_to_sort :date, default_way: 'desc', label: "Created"
  = render @sites

.pagination_wrap
  = paginate @sites, theme: 'admin'
  = page_entries_info @sites
