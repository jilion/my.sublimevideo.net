- title "Site: ##{@site.id} | #{@site.token} - #{link_to(admin_pretty_hostname(@site, @site.hostname), url_with_protocol(@site.hostname))}"
= content_header("##{@site.id} | #{@site.token} - #{link_to(admin_pretty_hostname(@site, @site.hostname), url_with_protocol(@site.hostname))}")

= render 'admin/shared/tags', object: @site
%br
%hr
%br

= render 'basic_info', site: @site
%br
%hr
%br

= render 'settings', site: @site
%br

= render 'loader', site: @site
%br
%hr
%br

#more_info
  %h3= link_to 'View more info', more_info_admin_site_path(@site), data: { remote: true }
%br
%hr
%br

#stats= render 'stats', site: @site
%br
%hr
%br

= render 'kits', site: @site
%br
%hr
%br

- if has_role?('god')
  %table.crado
    %tr
      %td#subscribe_design= render 'subscribe_design', site: @site
      %td#subscribe_addon_plan= render 'subscribe_addon_plan', site: @site

#billable_items= render 'billable_items', site: @site
#billable_items_activities= render 'billable_items_activities', site: @site
%br
%hr
%br

- if has_role?('invoices')
  #invoices
    %h3= link_to 'View invoices', invoices_admin_site_path(@site), data: { remote: true }
%br
%hr
%br

#active_pages
  %h3= link_to 'View active pages', active_pages_admin_site_path(@site), data: { remote: true }
%br
%hr
%br

%p= link_to "Back to sites", [:admin, :sites]
