%tr[site]{ :class => cycle("", "alt") }
  %td.hostname
    = links_to_hostnames(site)
  %td.user
    %small
      = link_to site.user.full_name, [:admin, site.user], :title => "#{site.user.full_name} <#{site.user.email}>"
  %td.state
    %small= site.state
  %td.rank
    %small= site.alexa_rank
  %td.rank
    %small= site.google_rank
  %td
    %small= display_date(site.created_at)
