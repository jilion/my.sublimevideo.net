= title_and_content_header(admin_sites_page_title(@sites))

.search_form
  = form_tag [:admin, :sites], method: :get, id: 'search_form' do
    = text_field_tag :search, '', value: params[:search], id: 'search_input', placeholder: "Search", type: "search", autofocus: true, autocomplete: 'off', autosave: "admin_search", results: "5"
.spacer

- cache 'sites_filter_links', expires_in: 15.minutes do
  = render 'filter_links'

%br

#sites_table_wrap= render 'sites'
