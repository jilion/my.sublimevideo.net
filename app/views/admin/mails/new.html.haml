= title_and_content_header("Send a mail")

= form_for [:admin, @mail_log], :url => admin_mails_path do |f|
  .entry.template
    = f.label :template_id, "Template"
    = f.select :template_id, MailTemplate.all.map { |t| [t.title, t.id] }, :selected => params[:template_id]

  .entry.criteria
    = f.label :criteria
    = "Users: "
    = f.select :criteria, [["dev team only", "dev"], ["with activity", "with_activity"], ["active and billable", "active_and_billable"], ["active and not billable", "active_and_not_billable"], ["all", "all"]]

  %br

  .entry.submit.send
    = f.submit "Send mail", :confirm => 'Are you sure?'
    .spacer