= image_tag "/images/embed/spinner.gif", :class => "spinner", :id => "table_spinner", :style => "display:none"
%table.main#users
  %tr
    %th= link_to_sort :name_or_email, :label => "Full name / email"
    %th= link_to_sort :beta, :default_way => 'desc', :label => "In beta"
    %th= "Personal"
    %th= "Company"
    %th= "Clients"
    %th= "# Sites"
    %th= link_to_sort :player_hits, :default_way => 'desc'
    %th= link_to_sort :traffic, :default_way => 'desc'
    %th= link_to_sort :date, :default_way => 'desc', :default => true, :label => "Created at"
  = render @users
  
.pagination_wrap
  = remote_will_paginate(@users, :params => params.merge(:format => nil))
  = page_entries_info(@users)