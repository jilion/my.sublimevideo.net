%ul.filters
  %li
    = link_to "#{content_tag(:strong, display_integer(User.active.size))} Active".html_safe, admin_users_path(with_state: 'active'), remote: true, class: 'remote'
    %ul{ style: 'padding:5px 0 5px 18px;' }
      %li= link_to "#{content_tag(:strong, display_integer(User.active.free.size))} Free".html_safe, admin_users_path(with_state: 'active', free: true), remote: true, class: 'remote'
      %li= link_to "#{content_tag(:strong, display_integer(User.active.paying.size))} Paying".html_safe, admin_users_path(with_state: 'active', paying: true), remote: true, class: 'remote'
  %li= link_to "#{content_tag(:strong, display_integer(User.with_state(:suspended).size))} Suspended".html_safe, admin_users_path(with_state: 'suspended'), remote: true, class: 'remote'
  %li= link_to "#{content_tag(:strong, display_integer(User.with_state(:archived).size))} Archived".html_safe, admin_users_path(with_state: 'archived'), remote: true, class: 'remote'

= "-----------------------"

%p.filters
  = link_to "#{content_tag(:strong, User.active.vip.count)} VIP".html_safe, admin_users_path(with_state: 'active', vip: true), remote: true, class: 'remote'
  |
  = link_to "#{content_tag(:strong, User.active.with_balance.count)} With a balance".html_safe, admin_users_path(with_state: 'active', with_balance: true), remote: true, class: 'remote'

= "-----------------------------------------------"

%p.filters
  Tagged with:
  = display_tags_list(@user_tags)

%p.filters
  Having sites tagged with:
  = display_tags_list(@site_tags, :sites_tagged_with)
