%p
  = link_to "#{content_tag(:strong, User.active.count)} Active".html_safe, admin_users_path(with_state: 'active')
  %ul
    %li= link_to "#{content_tag(:strong, User.select("DISTINCT(users.id)").free.count)} Free".html_safe, admin_users_path(free: true)
    %li= link_to "#{content_tag(:strong, User.select("DISTINCT(users.id)").paying.count)} Paying".html_safe, admin_users_path(paying: true)

%p
  = link_to "#{content_tag(:strong, User.with_state(:suspended).count)} Suspended".html_safe, admin_users_path(with_state: 'suspended')
  |
  = link_to "#{content_tag(:strong, User.with_state(:archived).count)} Archived".html_safe, admin_users_path(with_state: 'archived')

%p= link_to "#{content_tag(:strong, User.with_balance.count)} With a balance".html_safe, admin_users_path(with_balance: true)
