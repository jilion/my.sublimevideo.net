%tr[user]{ :class => cycle("", "alt") }
  %td.full_name
    = link_to_user(user)
  %td.beta
    %small= display_bool(user.use_personal)
  %td.beta
    %small= display_bool(user.use_company)
  %td.beta
    %small= display_bool(user.use_clients)
  %td.sites
    %small
      %ul.no_bullet
        - sites = user.sites.not_archived
        - sites[0,2].each do |site|
          = content_tag :li do
            = links_to_hostnames(site)
        %li= link_to("#{sites.size-2} more", admin_user_path(user)) if sites.size > 2
  %td
    %small= display_date(user.created_at)
