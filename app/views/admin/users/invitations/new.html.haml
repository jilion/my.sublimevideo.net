= title_and_content_header("Invite a user")

= form_for resource, :as => resource_name, :url => "/admin/users/invitation", :html => { :method => :post } do |f|
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true
    
  .entry.send
    = f.submit "Send", :class => "submit small"