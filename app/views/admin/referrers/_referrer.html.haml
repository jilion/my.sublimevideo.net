%tr[referrer]{ class: cycle("", "alt") }
  %td.url
    = link_to truncate(referrer.url, length: 60), referrer.url
    = "(#{link_to("site details", edit_admin_site_path(referrer.site.token))})".html_safe
  - if action_name == 'pages'
    %td.hits= number_with_delimiter(referrer.hits || 0)
  - else
    %td.hits= number_with_delimiter(referrer.badge_hits || 0)
    %td.hits= number_with_delimiter(referrer.contextual_hits || 0)
  %td
    %small= display_time(referrer.created_at)
  %td
    %small= display_time(referrer.updated_at)
