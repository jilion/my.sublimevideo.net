#header
  %h1
    = link_to admin_path do
      = "#{"DEV" if Rails.env.development?} MySublimeVideo"
      %em= "Admin"
  - if admin_signed_in?
    .popup_menu
      %h3= link_to "Menu", "", :onclick => "return false"
      %ul
        - [:plans, :addons, :referrers, :mails, :admins].each do |name|
          = activable_menu_item(:li, name, {}.reverse_merge!(:namespace => 'admin'))
    %ul#favorite_links
      - [:sites, :users, [:releases, { :link_text => "Player" }], [:delayed_jobs, { :urls => %w[djs], :link_text => "DJs" }]].each do |r|
        - name = r.is_a?(Array) ? r[0] : r
        - if zeno? || name != :releases || Rails.env.development?
          = activable_menu_item(:li, name, (r.is_a?(Array) ? r[1] : {}).reverse_merge!(:namespace => 'admin'))

  .right
    %ul.extra_links
      - if admin_signed_in?
        %li= link_to "Logout", destroy_admin_session_path
        %li= link_to current_admin.email, edit_admin_registration_path
      - else
        = link_to "Login", new_admin_session_path, :class => "user"
  .spacer
