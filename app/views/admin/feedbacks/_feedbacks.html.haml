%table.main#feedbacks
  %tr
    %th ID
    %th User
    %th= link_to_sort :kind
    %th= link_to_sort :reason
    %th Comment
    %th Next player
    %th= link_to_sort :created_at, default_way: 'asc', default: true
  = render @feedbacks

.pagination_wrap
  = paginate @feedbacks, theme: 'admin'
  = page_entries_info @feedbacks
