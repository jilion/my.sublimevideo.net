= title_and_content_header("New #{resource_name} invitation")

= form_for resource, :as => resource_name, :url => "/admin/admins/invitation", :html => { :method => :post } do |f|
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true
    
  .entry.send
    = f.submit "Send", :class => "submit small"