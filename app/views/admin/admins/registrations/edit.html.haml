= title_and_content_header("Edit information")

= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "main_form section" } do |f|
  = render 'admin/admins/form', f: f
.spacer

%h3 Authentication token (?auth_token=...)

%p
  Current auth token:
  = resource.authentication_token || 'None, please reset it if you need one.'

= button_to 'Reset auth token', reset_auth_token_admin_admin_path(resource), method: :patch, data: { confirm: 'Are you sure? The current will be overwritten.' }
