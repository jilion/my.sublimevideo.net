= title("Stats")

%h2#page_title

.stats
  :coffeescript
    $ ->
      window.SVStats.stats = {}
      window.SVStats.statsRouter = new SVStats.Routers.StatsRouter()

      $('#chart').spin(spinOptions)
      Backbone.history.start(pushState: true)

  #chart

  .spacer

  #selectors
    %table
      %tr
        %td#users{ style: 'background: rgba(0,0,255,0.2)' }
          %ul
            %li
              %h3
                %a.selector{ href: "#", data: { value: 'users.all' } } Users
              %ul
                %li
                  %a.selector.active{ href: "#", data: { value: 'users.active' } } Active
