                %li
                  %a.selector{ href: "#", data: { value: 'site_stats.vv.i' } } Invalid
            %li
              %h3 Player Mode & Device
              %ul
                %li
                  %a.selector{ href: "#", data: { value: 'site_stats.md.html5_proportion' } } HTML5 %
                %li
                  %a.selector{ href: "#", data: { value: 'site_stats.md.mobile_proportion' }, title: "Mobile (tablet included) %" } Mobile %

        %td#site_usages{ style: 'background: rgba(0,255,125,0.5)' }
          %h2 Site Usages (old)
          %ul
            %li
              %h3
                %a.selector{ href: "#", data: { value: 'site_usages.lh.all' } } Loader hits
              %ul
