<%
users = User.select("company_employees, COUNT(*) as total").group(:company_employees).map! { |u| [u.company_employees || "Not a company", u.total.to_i] }
%>
<script type = "text/javascript" charset="utf-8">
document.observe("dom:loaded", function() {
  new Highcharts.Chart({
    chart: {
      renderTo: 'employees',
      plotBackgroundColor: null,
      plotBorderWidth: null,
      plotShadow: false
    },
    title: {
      text: 'Number of employees'
    },
    tooltip: {
      formatter: function() {
        return '<b>'+ this.point.name +'</b>: '+ Highcharts.numberFormat(this.y, 0, ',') +' users.';
      }
    },
    plotOptions: {
      pie: {
        allowPointSelect: true,
        cursor: 'pointer',
        dataLabels: {
          enabled: true,
          distance: 30,
          color: 'black',
          formatter: function() {
            return '<b>'+ this.point.name +'</b>: '+ Highcharts.numberFormat(this.percentage, 1, ',') +' %';
          }
        },
        showInLegend: true
      }
    },
    series: [{
      type: 'pie',
      name: 'Number of employees',
      data: <%= raw users.to_json %>
    }],
    credits: {
      enabled: true,
      text: "Generation time: <%= Time.now.to_s(:format => :fully_full) %> / Copyright © <%= Date.today.year %> - SublimeVideo®",
      href: "http://sublimevideo.net"
    }
  });
});
</script>
<div id="employees" style="width:45%; height:350px; float:left;"></div>