<%= title_and_content_header("# of Employees per Company") %>
<%
employees = User.beta.select("company_employees, COUNT(*) as total").group(:company_employees).order("total DESC").map! { |u| [u.company_employees || "Not Available", u.total.to_i] }

employee_with_wrong_label = employees.detect { |e| e[0] == "Company size" }
employee_not_available    = employees.detect { |e| e[0] == "Not Available" }
if employee_with_wrong_label
  employee_not_available[1] += employee_with_wrong_label[1]
  employees.delete(employee_with_wrong_label)
end
%>
<script type = "text/javascript" charset="utf-8">
$(document).ready(function() {
  new Highcharts.Chart({
    chart: {
      renderTo: 'employees',
      backgroundColor: '#EEEEEE',
      animation: false
    },
    title: {
      text: 'Number of employees'
    },
    tooltip: {
      borderWidth: 0,
      backgroundColor: "rgba(0, 0, 0, .70)",
      style: {
      	color: '#FFFFFF',
      	padding: '5px'
      },
      formatter: function() {
        return "<strong>" + this.point.name + "</strong>: " + Highcharts.numberFormat(this.y, 0) + " users";
      }
    },
    plotOptions: {
      pie: {
        allowPointSelect: true,
        cursor: 'pointer',
        dataLabels: {
          enabled: true,
          distance: 30,
          color: 'black',
          formatter: function() {
            return "<strong>" + this.point.name + "</strong>: " + Highcharts.numberFormat(this.percentage, 1) + " %";
          }
        }
      }
    },
    series: [{
      type: 'pie',
      data: <%= raw employees.to_json %>
    }],
    credits: {
      enabled: true,
      text: "Generation time: <%= Time.now.to_s(format: :fully_full) %> / Copyright © <%= Date.today.year %> - SublimeVideo®",
      href: "http://sublimevideo.net"
    }
  });
});
</script>
<div id="employees" style="width:100%"></div>