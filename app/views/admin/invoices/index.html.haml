= title_and_content_header(admin_invoices_page_title(@invoices))

%h3.revenue= "Total revenue: #{display_amount(Invoice.total_revenue)}"

.search_form
  = form_tag [:admin, :invoices], method: :get, id: 'search_form' do
    = text_field_tag :search, '', value: params[:search], id: 'search_input', placeholder: "Search", type: "search", autofocus: true, autocomplete: :off, autosave: "admin_search", results: "5"
.spacer

- cache 'invoices_filter_links', expires_in: 15.minutes do
  = render 'filter_links'

%br

#invoices_table_wrap= render 'invoices'
