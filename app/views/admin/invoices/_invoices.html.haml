%table.main#invoices
  %tr
    %th ID
    %th Reference
    %th= link_to_sort :user
    %th Site
    %th= link_to_sort :date, :default_way => 'desc', :default => true
    %th= link_to_sort :invoice_items_count, :label => "Type"
    %th= link_to_sort :amount
    %th State
  = render @invoices

.pagination_wrap
  = paginate @invoices
  = page_entries_info @invoices
