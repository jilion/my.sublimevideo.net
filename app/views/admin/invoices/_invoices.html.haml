%table.main#invoices
  %tr
    %th Reference
    %th= link_to_sort :user
    %th= link_to_sort :date, :default_way => 'desc', :default => true, :label => "Period"
    %th Site
    %th= link_to_sort :invoice_items_count,  :label => "# Invoice items"
    %th= link_to_sort :amount
    %th= link_to_sort :state
  = render @invoices

.pagination_wrap
  = paginate @invoices
  = page_entries_info @invoices
