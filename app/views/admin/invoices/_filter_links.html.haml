%p.filters
  = link_to "#{content_tag(:strong, Invoice.count)} All".html_safe, admin_invoices_path
  |
  = link_to "#{content_tag(:strong, Invoice.paid.count)} Paid".html_safe, admin_invoices_path(paid: true)
  |
  = link_to "#{content_tag(:strong, Invoice.with_state('failed').count)} Failed".html_safe, admin_invoices_path(with_state: 'failed')
  |
  = link_to "#{content_tag(:strong, Invoice.with_state('open').count)} Open".html_safe, admin_invoices_path(with_state: 'open')
  |
  = link_to "#{content_tag(:strong, Invoice.with_state('waiting').count)} Waiting".html_safe, admin_invoices_path(with_state: 'waiting')
