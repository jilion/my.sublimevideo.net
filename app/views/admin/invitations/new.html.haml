= title_and_content_header("New admin invitation")

= form_for resource, :as => resource_name, :url => invitation_path(resource_name) do |f|
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true
    
  .entry.send
    = f.submit "Send", :class => "submit small"