= title_and_content_header("Set your password")

= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  = f.hidden_field :invitation_token
  
  - if resource_name == :user
    .entry.full_name
      = f.label :full_name, "Full name", :class => "icon"
      = f.text_field :full_name, :class => "text", :placeholder => "Full name", :required => true
      
  .entry.password
    = f.label :password, "", :class => "icon"
    = f.password_field :password, :class => "text show_password", :placeholder => "Password", :required => true
    
  .entry.submit.signup
    = f.submit "Go!"
    .spacer