= content_for :title do
  = "Confirmation Instructions"

%h2= "Confirmation instructions"

= form_for resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :class => "main_form p_bottom" } do |f|
  
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true
  
  .entry.submit
    = f.submit "Resend"
    %p.note.big= "You will receive an email with the confirmation instructions."