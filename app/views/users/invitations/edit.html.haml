= title_and_content_header("Enter the Beta")

= form_for resource, :as => resource_name, :url => "/invitation/accept", :html => { :method => :put } do |f|
  = f.hidden_field :invitation_token
  
  .entry.email
    = f.label :email, "Email", :class => "icon"
    = f.text_field :email, :class => "text", :placeholder => "Email", :required => true
    
  .entry.full_name
    = f.label :full_name, "Full name", :class => "icon"
    = f.text_field :full_name, :class => "text", :placeholder => "Full name", :required => true
    
  .entry.password
    = f.label :password, "", :class => "icon"
    = f.password_field :password, :class => "text show_password", :placeholder => "Password", :required => true
    
  .entry.terms
    .checkbox_wrap
      = f.check_box :terms_and_conditions, :required => true
      = f.label :terms_and_conditions, "I agree to the #{link_to("Terms & Conditions", page_path("terms"))}.".html_safe
    
  .entry.submit.signup
    = f.submit "Join"
    .spacer