= title_and_content_header("Complete your invitation")

= form_for resource, :as => resource_name, :url => update_user_invitation_path, :html => { :method => :put } do |f|
  = f.hidden_field :invitation_token
  
  .entry.full_name
    = f.label :full_name, "Full name", :class => "icon"
    = f.text_field :full_name, :class => "text", :placeholder => "Full name", :required => true
    
  .entry.password
    = f.label :password, "", :class => "icon"
    = f.password_field :password, :class => "text show_password", :placeholder => "Password", :required => true
    
  .entry.submit.signup
    = f.submit "Go!"
    .spacer