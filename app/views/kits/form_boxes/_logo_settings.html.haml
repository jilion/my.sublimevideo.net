- if presenter = KitSettingPresenter.init(kit: kit, design: design, view: self)
  .logo
    - unless presenter.addon_plan.name == 'custom'
      = hidden_field_tag "kit[addons][logo][type]", presenter.settings_template[:type][:default], class: 'previewable', data: { addon: 'logo', setting: 'type' }
      = hidden_field_tag "kit[addons][logo][position]", presenter.settings_template[:position][:default], class: 'previewable', data: { addon: 'logo', setting: 'position' }

    - if presenter.addon_plan.name == 'sublime'
      = presenter.render_input_field(setting_key: 'visibility', show_title: true)

    - elsif presenter.addon_plan.name == 'disabled'
      = presenter.render_master_input_field(setting_key: 'enable') do
        = presenter.render_input_field(setting_key: 'visibility')

    - elsif presenter.addon_plan.name == 'custom'
      = presenter.render_master_input_field(setting_key: 'enable', translation_key: :enable_custom) do
        = presenter.render_input_field(setting_key: 'type')
        = presenter.render_input_field(setting_key: 'image_url', partial: 'image_logo_custom')
