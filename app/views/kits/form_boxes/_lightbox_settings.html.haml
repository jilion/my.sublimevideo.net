- if presenter = KitSettingPresenter.init(kit: kit, design: design, view: self)
  #lightbox_settings.expandable_settings_box
    - kit_settings_expanding_handler('lightbox') do
      = link_to t('kit.lightbox.title'), ''
    - kit_settings_expendable_block('lightbox') do
      = presenter.render_input_field(setting_key: 'on_open', show_title: true)
      = presenter.render_input_field(setting_key: 'overlay_opacity')

      - if presenter.addon_plan_settings_has_key?('close_button_enable')
        = presenter.render_master_input_field(setting_key: 'close_button_enable') do
          = presenter.render_input_field(setting_key: 'close_button_visibility', show_title: true)
          = presenter.render_input_field(setting_key: 'close_button_position', show_title: true)

      .actions.center{style: "padding-bottom: 20px"}
        %a#lightbox-trigger.blue_button.sublime{ href: '#lightbox' } Test the lightbox
        %video#lightbox{ poster: image_path("players/default_poster.png"), width: 640, height: 360, style: 'display:none' }
