#identifier= "##{kit.identifier}"

.entry.text
  = f.label :name, 'Player name', class: 'icon'
  = f.text_field :name, placeholder: 'Player name', required: true, class: 'text no_icon'

#kit_preview
  %h3 Preview

  #preview-standard

  -#= link_to 'Refresh', '', id: 'preview-standard-button', class: 'blue_button'

#kit_settings
  %h3 Edit player settings

  .entry.design.select
    = f.label :app_design_id, 'Player design:'
    = f.select :app_design_id, options_from_collection_for_select(site.app_designs, :id, :title, kit.app_design_id)

  #basic_player_settings.expandable_settings_box
    %h4.expanding_handler
      = link_to 'Basic Player settings', ''
    .left.expandable
      = render 'kits/form_boxes/basic_player_settings', site: site, kit: kit

  #lightbox_settings.expandable_settings_box
    %h4.expanding_handler
      = link_to 'Lightbox settings', ''
    .left.expandable
      = render 'kits/form_boxes/lightbox_settings', site: site, kit: kit

  #logo_settings.expandable_settings_box
    %h4.expanding_handler
      = link_to 'On-Video Logo settings', ''
    .left.expandable
      = render 'kits/form_boxes/logo_settings', site: site, kit: kit

  #sharing_settings.expandable_settings_box
    %h4.expanding_handler
      = link_to 'Social Sharing Buttons settings', ''
    .left.expandable
      = render 'kits/form_boxes/sharing_settings', site: site, kit: kit

  #youtube_settings.expandable_settings_box
    %h4.expanding_handler
      = link_to 'YouTube settings', ''
    .left.expandable
      = render 'kits/form_boxes/youtube_settings', site: site, kit: kit

  #embed_settings.expandable_settings_box
    %h4.expanding_handler
      = link_to 'Embed settings', ''
    .left.expandable
      = render 'kits/form_boxes/embed_settings', site: site, kit: kit

