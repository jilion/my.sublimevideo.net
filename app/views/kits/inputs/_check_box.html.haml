- value = params[:setting] || params[:setting_template][:default]
- id = "kit_setting-#{params[:addon].name}-#{params[:setting_key]}"

.entry.checkbox_wrap
  = hidden_field_tag "kit[addons][#{params[:addon].name}][#{params[:setting_key]}]", 0, data: { addon: params[:addon].name, setting: params[:setting_key] }
  = check_box_tag "kit[addons][#{params[:addon].name}][#{params[:setting_key]}]", 1, value, id: id, class: 'previewable', data: (params[:data] || {}).merge(addon: params[:addon].name, setting: params[:setting_key], default: value)
  = label_tag id, t("kit.#{params[:addon].name}.settings.#{params[:translation_key] || params[:setting_key]}")
.spacer
