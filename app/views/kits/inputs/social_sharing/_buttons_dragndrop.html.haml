- all_buttons = parameters[:addon_plan_settings][:buttons][:item][:values]

%h5= kit_setting_title(parameters)

#sharing_button_sort.sort
  %ul#sharing_active_buttons.drop_zone
    - parameters[:value].each do |button|
      %li.enabled{ data: { value: button }, class: button.gsub('+', '_plus') }
        %span= button.titleize

  %div.spacer
  %p.drag_note= "Drag and drop buttons to enable and order them."

  %ul#sharing_inactive_buttons.drop_zone
    - (all_buttons - parameters[:value]).each do |button|
      %li.disabled{ data: { value: button }, class: button.gsub('+', '_plus') }
        %span= button.titleize
  .arrow_up

= hidden_field_tag kit_setting_input_field_name(parameters), parameters[:value], id: kit_setting_input_field_id(parameters), class: 'previewable', data: kit_setting_data(parameters)

.spacer
