- width_and_height = params[:value].to_s.split('x')

%h5= label_tag kit_setting_input_field_id(params), kit_setting_title(params)
.entry.size
  = text_field_tag kit_setting_input_field_name(params, '[]'), width_and_height[0], size: 4, maxlength: 4, placeholder: 'Width', id: kit_setting_input_field_id(params), class: 'text no_icon previewable', data: kit_setting_data(params)
  x
  = text_field_tag kit_setting_input_field_name(params, '[]'), width_and_height[1], size: 4, maxlength: 4, placeholder: 'Height', id: kit_setting_input_field_id(params), class: 'text no_icon previewable', data: kit_setting_data(params)
.spacer
