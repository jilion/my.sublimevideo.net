- title("Generate Video Code for #{@video_tag.n}")
= render '/layouts/site_header', sites_select: false

.wrap
  .duration
    %small= duration_string(@video_tag.d)
  .thumbnail= playable_lightbox(@video_tag, size: '96x54')
  %h3.name= @video_tag.n
  %p= link_to hostname_or_token(@site), site_video_tags_path(@site)

.spacer
.big_break

= render 'form'
