- if !user_signed_in?
  - @body_class = @body_class.to_s + ' vcg'
  - title('Video Code Generator', prefix: 'SublimeVideo')
  = content_for :header do
    %h2 Video Code Generator
    %p.sub= "Creating your <video> code has never been easier."
    %span.video_code_generator_icon

  .com_text
    %p
      = raw "SublimeVideo's Video Code Generator helps you easily generate properly configured <code>&lt;video&gt;</code> elements for use with SublimeVideo. It's also the easiest way to quickly test SublimeVideo player with your own video sources."
      = raw "#{link_to 'Read more', 'http://blog.jilion.com/2012/04/17/introducing-the-sublimevideo-video-code-generator', onclick: 'window.open(this); return false'}."

- else
  - if early_access?('video')
    - title("Generate Video Code for #{hostname_or_token(@site)}")
    = render '/layouts/site_header'
  - else
    = title_and_content_header('Video Code Generator')
    .com_text
      .help_box
        %p
          = raw "SublimeVideo's Video Code Generator helps you easily generate properly configured <code>&lt;video&gt;</code> elements, avoiding common mistakes and ensuring the optimal viewing experience for your viewers."
          = raw "#{link_to 'Read more', docs_url('video-code-generator'), class: 'hl', onclick: 'window.open(this); return false'}."
      .big_break

= render 'form'
