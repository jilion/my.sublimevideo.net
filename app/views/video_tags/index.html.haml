- title("Videos for #{hostname_or_token(@site)}")
= render '/layouts/site_header'

#site.video_tags

  #video_tags_filter
    -# TODO Octave Search / Filter form design
    = form_tag site_video_tags_path, method: :get, id: 'js-video_tags_filter_form', remote: true do
      - (params.keys & VideoTagsController::SORT_PARAMS).each do |sort_param|
        = hidden_field_tag sort_param, params[sort_param], class: 'js-video_tags_sort_param'
      = text_field_tag :search, params[:search], size: 20, placeholder: "Search", autocomplete: 'off', id: 'js-video_tags_filter_search'
      = select_tag :filter, videos_table_filter_options_for_select, id: 'js-video_tags_filter_select'

  = link_to '#', class: "add_video green_button" do
    %span= "Add a video"

  .spacer

  #video_tags_table_wrap= render 'video_tags'

