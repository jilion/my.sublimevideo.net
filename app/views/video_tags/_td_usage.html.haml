%td.usage
  .wrap
    - plays = video_tag.starts.last(last_starts_days).sum
    - if site.realtime_stats_active?
      = render 'video_tags/usage_sparkline', video_tag: video_tag
      .plays
        %strong= number_with_delimiter(plays)
        %span= 'plays'
      = link_to 'View Stats', site_video_tag_stats_url(site, video_tag), class: 'view_stats'
    - else
      .fake_sparkline
      .plays
        %strong= number_with_delimiter(plays)
        %span= 'plays'
      .title_link
        = link_to 'Add real-time video stats', site_addon_path(site, 'stats', p: 'realtime'), class: 'hl'
      = link_to 'Buy Add-on', site_addon_path(site, 'stats', p: 'realtime'), class: 'buy_addon'
