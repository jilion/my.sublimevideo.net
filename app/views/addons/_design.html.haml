- design_is_sponsored = site.sponsored_to?(design)

%tr
  %td
    - if design.free? || design_is_sponsored
      %h5.checked= design_label_content(design)
    - else
      .checkbox_wrap
        = hidden_field_tag "designs[#{design.name}]", '0'
        = check_box_tag "designs[#{design.name}]", design.id, site.designs.include?(design), id: "designs_#{design.name}", data: { price: design.price }
      = label_tag "designs_#{design.name}", design_label_content(design)
  %td.trial_notice
  %td.price
    - if design_is_sponsored
      = 'sponsored'
    - else
      = billable_item_price(design)
