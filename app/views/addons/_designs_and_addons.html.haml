- if site.plan_id?
  #grandfather_plan{ style: 'display: none' }= render 'addons/grandfather_plan_text', site: site
%table
  %col
  %col.odd
  %col
  %tr
    %th{ colspan: 3 } Player designs
  = render 'addons/design', site: site, app_design: App::Design.get('classic')
  = render 'addons/design', site: site, app_design: App::Design.get('light')
  = render 'addons/design', site: site, app_design: App::Design.get('flat')
  - App::Design.custom.select { |app_design| app_design.available?(site) }.each do |custom_app_design|
    = render 'addons/design', site: site, app_design: custom_app_design

  = render 'addons/addon', site: site, addon: Addon.get('logo')
  = render 'addons/addon', site: site, addon: Addon.get('lightbox')
  = render 'addons/addon', site: site, addon: Addon.get('api')
  = render 'addons/addon', site: site, addon: Addon.get('stats')
  = render 'addons/addon', site: site, addon: Addon.get('support')
  %tr
    %td.break_box{ colspan: 3 }
  %tr
    %td
    %td.trial_notice
      %small= "Est. monthly cost (once all your #{BusinessModel.days_for_trial}-day free trials will be over)"
    %td.price
      %strong#addons_total= display_amount_with_sup(site.total_billable_items_price)
