- title("Add-ons for #{hostname_or_token(@site)}")
= render 'layouts/site_header'
.big_break
.tagline
  %h3= "Each paid add-on has a #{BusinessModel.days_for_trial} days free trial."
  %h4= "No credit card required."
#addons
  #addons_table_wrap
    = form_for @site, url: update_all_site_addons_path, method: 'put', html: { id: 'edit_addons', class: 'disableable' } do |f|
      = render 'addons/designs_and_addons', site: @site, f: f

      .actions.center= submit_tag 'Confirm selection', class: 'submit green_button'
      .spacer
    = render 'addons/footnotes', site: @site
