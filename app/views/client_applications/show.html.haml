= title_and_content_header("Details for '#{@application.name}'")

%p
  %strong Main Application URL:
  %code= @application.url
%p
  %strong Callback URL:
  %code= @application.callback_url

%p
  %strong Consumer Key:
  %code= @application.key
%p
  %strong Consumer Secret:
  %code= @application.secret


%p
  %strong Authorize URL:
  %code
    ="http#{'s' if request.ssl?}://#{request.host_with_port}#{@application.oauth_server.authorize_path}"
%p
  %strong Access Token URL:
  %code
    ="http#{'s' if request.ssl?}://#{request.host_with_port}#{@application.oauth_server.access_token_path}"

