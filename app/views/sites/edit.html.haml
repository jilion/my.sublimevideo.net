= title_and_content_header("Edit #{content_tag(:strong, truncate_middle(@site.hostname, :length => 30))}")

#site.edit
  %ul.segmented_menu
    %li.first.active= link_to "Settings", edit_site_path(@site), :onclick => "MySublimeVideo.makeSticky(this, '.segmented_menu')"
    %li.last= link_to "Change plan", edit_site_plan_path(@site), :onclick => "MySublimeVideo.makeSticky(this, '.segmented_menu')"

  #site_settings_box.section_box
    = form_for @site, :html => { :id => "edit_site_settings", "data-password-protected" => @site.active? } do |f|
      = render 'fields', :f => f
      .actions.center
        = f.submit 'Update settings', :class => "submit big"

  .break_line
  = form_for @site, :html => { :method => :delete, :class => "delete", "data-password-protected" => true } do |f|
    = f.submit "Delete my site", :class => "delete_site"
    %p.desc= "If you delete your site, you will not be refunded (edit text)."
