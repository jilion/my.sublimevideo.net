%ul#addons
  - Addon.all.each do |addon|
    %li
      .checkbox_wrap
        = f.check_box :addon_ids, { :id => "addon_id_#{addon.name}", :name => "site[addon_ids][]" }, addon.id, nil
        = content_tag :label, :for => "addon_id_#{addon.name}" do
          %strong= "SSL serving"
          %span= "#{display_amount(addon.price)} per month"