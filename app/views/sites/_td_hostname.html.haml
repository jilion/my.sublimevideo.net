%td.site.has_domain
  .wrap
    - if site.hostname.present?
      .domain{ style: 'display: inline' }
        = image_tag "https://getfavicon.appspot.com/http://#{hostname_with_path(site)}?defaulticon=https://my.sublimevideo.net/assets/sites/default_favicon.png", alt: "Favicon", size: "16x16", id: "site_favicon_#{site.id}"
        = truncate_middle(site.hostname, length: 35)
    - else
      = link_to "add a hostname", [:edit, site], class: 'domain'

    - if need_path?(site)
      = tooltip_box href: edit_site_path(site), class: 'warning' do
        %span.p= raw t 'site.status.need_path', hostname: hostname_with_path_needed(site)
    - if need_subdomain?(site)
      = tooltip_box href: edit_site_path(site), class: 'warning' do
        %span.p= raw t 'site.status.need_subdomain', hostname: hostname_with_subdomain_needed(site)
    .external_link{ style: 'display: inline' }= link_to '->', url_with_protocol(site.hostname)
    .actions{ style: 'display: inline' }
      -#%select.site_actions{ id: ['site_actions', site.id], data: { token: site.token } }
      -#  %option{ value: '' } Actions
      -#  %option{ value: site_addons_path(site) } Add-ons
      -#  %option{ value: site_kits_path(site) } Players
      -#  %option{ value: 'loader-code' } Loader Code
      -#  - if site.realtime_stats_active?
      -#    %option{ value: site_stats_path(site) } Stats
      -#  %option{ value: edit_site_path(site) } Settings
      -#  %option{ value: site_invoices_path(site) } Invoices
      = link_to '', class: 'quick_access' do
        %span Quick access
      %ul.actions{ id: ['site_actions', site.id], style: 'display:none' }
        %li= link_to 'Add-ons', [site, :addons]
        %li= link_to 'Players', [site, :kits]
        %li= link_to 'Loader Code', '', class: 'loader_code', data: { token: site.token }
        - if site.realtime_stats_active?
          %li= link_to 'Stats', [site, :stats]
        %li= link_to 'Settings', [:edit, site]
        %li= link_to 'Invoices', [site, :invoices]
      %div{ id: "loader_code_popup_content_#{site.token}", style: 'display:none' }= render 'sites/code', site: site
    .spacer
    .token{ style: 'display: inline' }
      %small
        = 'Site token: '
        %code= "##{site.token}"
