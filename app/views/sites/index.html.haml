= content_for :title do
  = "My sites"
  
= content_for :bottom do
  - if current_user.welcome? && !params[:trial]
    = render "layouts/welcome"
    
= content_for :content_header do
  %h2= "My sites"
  %p.title_desc= "Start to add your sites here by adding each of the domains or subdomains you want to use with SublimeVideo."
  
- @site = current_user.sites.build
#new_site_wrap
  = render "new"
  = image_tag "/images/embed/spinner.gif", :class => "spinner", :style => "display:none"

#sites_table_wrap
  = render "sites"
  