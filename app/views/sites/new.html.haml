= title("Choose a plan for your site")

- if current_user.sites.active.empty?
  = render 'layouts/signup_steps', active: 2
- else
  = content_header("Choose a plan for your site")

#site.new
  = form_for @site, html: { class: "full", onsubmit: "$('site_submit').disable();" } do |f|

    = render 'plans/fields', site: @site, f: f

    - if current_user.vat?
      #plan_create_info.update_plan_message_box{ style: "display:none;" }
        %p= vat_price_info("plan_price_vat")

    %h3.headline= "First #{BusinessModel.days_for_trial - 1} Days Are Free."
    %h4.sub_headline= "Now you have no excuses."
    .spacer
    .break_line

    = render 'fields', site: @site, f: f

    .actions.center
      = f.submit (@site.persisted? ? "Update site" : "Create site"), class: "submit big"