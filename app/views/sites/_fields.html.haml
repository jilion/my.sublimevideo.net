#site_setup
  - if f.object.errors[:base].present? && !f.object.errors[:base].include?(t('activerecord.errors.models.site.attributes.base.current_password_needed'))
    .inline_errors
      %span= f.object.errors[:base].first
      
  .entry.site
    .left
      = f.label :hostname, "", :class => "icon"
      = f.text_field :hostname, :class => "text", :placeholder => "yourdomain.com", :autocomplete => :off
    %p.desc= "Add your main domain or leave it empty if you just want to use it in development for now."
    - unless f.object.persisted?
      %a.button{ :href => "", :onclick => "$('site_setup_settings').toggle(); this.toggleClassName('up'); return false", :class => display_text_if("up", conditions_for_show_settings(f.object)) }= "Settings"
    .spacer
  .break_line
  #site_setup_settings.settings{ :style => display_none_if(conditions_for_show_settings(f.object) || f.object.persisted?) }
    .left
      %h4.title= "Extra and development domains"
      %a.add{ :href => "", :onclick => "$('site_setup_extra_hostnames').toggle(); this.toggleClassName('up'); return false", :class => display_text_if("up", f.object.extra_hostnames?) }= "Add staging or alias domains"
      .entry.site#site_setup_extra_hostnames{ :style => display_block_if_or_none_otherwise(f.object.extra_hostnames?) }
        = f.label :extra_hostnames, "", :class => "icon"
        = f.text_field :extra_hostnames, :class => "text", :placeholder => "yourdomain.ch", :autocomplete => :off
        %p.info= "Add extra domains separated by commas. Extra domains are meant to be used exclusively for staging domains and alias domains (multiple domain names for the same content)."

      %a.add{ :href => "", :onclick => "$('site_setup_dev_hostnames').toggle(); this.toggleClassName('up'); return false", :class => display_text_if("up", conditions_for_show_dev_hostnames_div(f.object)) }= "Add development domains"
      .entry.site#site_setup_dev_hostnames{ :style => display_block_if_or_none_otherwise(conditions_for_show_dev_hostnames_div(f.object)) }
        = f.label :dev_hostnames, "", :class => "icon"
        = f.text_field :dev_hostnames, :class => "text", :placeholder => "127.0.0.1, localhost", :autocomplete => :off
        %p.info= "Add (local only) development domains separated by commas."

    .right
      %h4.title= "Advanced settings"
      %p.label_info= "Restrict your player to a specific path"
      .entry.path
        %p
          = f.label :path, "", :class => "icon"
          = f.text_field :path, :class => "text small_icon", :placeholder => "path", :autocomplete => :off
        %p.info= "Path will also be added to extra domains (not to development domains)."
      
      .entry.wildcard
        .checkbox_wrap
          = f.check_box :wildcard
          = f.label :wildcard, "Wildcard (*.yourdomain.com)"
        %p.info= "It will be also added to extra and dev domains."
    .spacer
    .break_line
