  - if site.errors[:base].present? && site.errors[:base].exclude?(t('activerecord.errors.models.site.attributes.base.current_password_needed'))
    .inline_errors
      %span= site.errors[:base].first

  .entry.site
    .left
      = f.label :hostname, '', class: "icon"
      = f.text_field :hostname, class: "text", placeholder: "please-edit.me", autocomplete: :off
