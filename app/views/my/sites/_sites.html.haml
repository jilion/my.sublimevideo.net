- if @sites.all.present?
  .main_table_wrap
    .dark_rounded_corners
      %table.main#sites
        %tr
          %th.site
            .wrap
              %strong
                = image_tag "small_spinner.gif", class: "spinner", id: "table_spinner", style: "display:none"
                Site
              - unless @sites.one?
                .sorting
                  = link_to_sort :date, default_way: 'desc', reverse: true, default: true, label: "latest"
                  = link_to_sort :hostname
          %th.usage
            .box_hovering_zone
              .wrap
                - if @sites.one?
                  Last 30 Days Views
                - else
                  = link_to_sort :last_30_days_billable_video_views, label: "Last 30 Days Views"
              = image_tag 'videos/info_icon.png'
              = info_box do
                Views happening on your development domains are not taken into account.
          %th.code Player Code
          %th.status Status
        = render @sites

  .pagination_wrap
    = paginate @sites
    = page_entries_info @sites
