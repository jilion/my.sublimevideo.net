= title("Choose a plan for your site")

- if current_user.sites.active.empty?
  = render 'layouts/signup_steps', active: 2
- else
  = content_header("Choose a plan for your site")

#site.new
  = form_for @site, html: { class: "full", onsubmit: "$('site_submit').disable();" } do |f|

    = render 'my/plans/fields', site: @site, f: f

    .tagline
      %h3= "All paid plans are free for the first 14 days"
      %h4= "No credit card required"

    .big_break
    = render 'fields', site: @site, f: f
    .big_break

    = render 'skip_trial_box', site: @site, f: f

    = render 'billing_infos_box'

    - if current_user.vat?
      #plan_create_info.update_plan_message_box.notice{ style: "display:none;" }
        %p= vat_price_info("plan_price")

    .actions.center
      = f.submit "#{@site.persisted? ? 'Update' : 'Create'} site", class: "submit green_button", id: 'site_submit'
