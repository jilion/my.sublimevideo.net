= content_for :head, javascript_include_tag('highcharts/prototype-adapter', 'highcharts/highcharts')

= render 'layouts/sticky_notices'
= render 'layouts/hidable_notices'

#sites
  = title_and_content_header("My sites")

  = link_to new_site_path, :class => "add_site small_button" do
    %span= "Add a site"

  - if @billable_views.zero?
    #help_list
      %h4 
        Almost done!
        %em There are only a few things left to do:
      %ol
        %li.complete 1. Choose a plan for your site.
        %li{ class: ('complete' if @loader_hits > 0) }= "2. Add your embed code to your pages. Click on #{@sites.one? ? 'the' : 'the appropriate'} \"Embed Code\" button below."
        %li{ class: ('complete' if @dev_views > 0) }
          = raw "3. Add #{content_tag(:code, '<video>')} elements to your pages. #{link_to "Need help?", page_url('write-proper-video-elements', subdomain: 'docs'), onclick: "window.open(this); return false"}"
          -#= raw "Learn more about our #{link_to "video tag builder", video_tag_builder_path}!"
        %li 4. Deploy your SublimeVideo players on your website in production.

  #sites_table_wrap= render 'sites'
