= title_and_content_header("Login")

= form_for User.new, as: :user, url: user_session_path, html: { method: :post, class: "main_form" } do |f|
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true

  .entry.password
    = f.label :password, "", :class => "icon"
    = f.password_field :password, :class => "text", :placeholder => "Password", :required => true

    .checkbox_wrap
      = f.check_box :remember_me
      = f.label :remember_me

  .entry.submit
    = f.submit "Login"
    -#= render 'devise/shared/links'
  .spacer

#login_right
  .wrap
    %h4= "New to SublimeVideo?"
    %p= link_to "Learn more", "http://sublimevideo.net"
    %p= "or"
    = link_to "Sign Up Now", new_user_registration_url, :class => "button"