%p= flash[:alert]

= form_for @user || User.new, as: :user, url: "http://#{request.domain}/signup", html: { class: "main_form" } do |f|
  .entry
    .name
      = f.label :name, "Name", class: "icon"
      = f.text_field :name, class: "text", placeholder: "Name", required: true, value: params[:user].try(:[], :name)
    .spacer

  .entry.email
    = f.label :email, "Email", class: "icon"
    = f.text_field :email, class: "text", placeholder: "Email", required: true, value: params[:user].try(:[], :email)

  .entry.password
    = f.label :password, "", class: "icon"
    = f.password_field :password, class: "text show_password", placeholder: "Password", required: true

  .entry.terms
    .checkbox_wrap
      = f.check_box :terms_and_conditions
      = f.label :terms_and_conditions, "I agree to the #{link_to("Terms & Conditions", page_url('terms', subdomain: 'my'), onclick: "window.open(this); return false")}.".html_safe

  .entry.submit.signup
    = f.submit "Sign Up"
    .spacer
    
#signup_right
  .wrap
    Already an account?
    = link_to "Login Here", '/?p=login', onclick: "return SublimeVideo.showPopup('login')", class: "button"