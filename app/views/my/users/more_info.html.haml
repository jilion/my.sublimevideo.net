= title("More information about you")

%p.bigger= "Please let us serve you better by telling us more about your and your needs"

.content_left
  = form_for @current_user, url: [:update, :user], html: { method: :put, class: "main_form section", id: "edit_more_info" } do |f|
    %h3.section_title More information about you
    = render 'my/users/more_info_form_fields', f: f

    .entry
      .comment
        %h3.section_title
          = f.label :confirmation_comment, "Write us anything you want:"
        = f.text_area :confirmation_comment, class: "text"
      .spacer

    %p.label
      = "We are not going to share this information, please check our"
      = link_to "Privacy Policy", page_url('privacy', subdomain: 'my'), onclick: "window.open('#{page_url('privacy', subdomain: 'my')}'); return false;"

    .entry.update
      = hidden_field_tag :more_info_form, true
      = f.submit "Continue", id: 'user_submit', class: "submit blue_button"
  .spacer
