%h3.section_title Billing Info

#credit_card_summary.dark_box
  %h4 Credit Card
  - if current_user.cc?
    - if current_user.cc_expire_this_month? || current_user.cc_expired?
      %p.alert
        - if current_user.cc_expired?
          = t("user.credit_card.expired")
        - elsif current_user.cc_expire_this_month?
          = t('user.credit_card.will_expire')
        = raw t('user.credit_card.prevent_charging_problem', link: link_to(t('app.update_it'), [:edit, :billing]))

    = render 'my/billings/cc_summary', user: current_user

  - else
    %p No credit card on file.
  %p.link= link_to "#{current_user.cc? ? 'Update' : 'Register'} credit card", [:edit, :billing]
#billing_infos.dark_box
  %h4 Billing Address
  - if current_user.billable? && !current_user.billing_address_complete?
    %p.alert
      = t("user.billing_address_incomplete")
      = raw t('app.please_link', link: link_to(t('app.update_it'), [:edit, :billing])) + "."

  = simple_format(current_user.billing_address)

  %p.link= link_to "#{current_user.cc? ? 'Update' : 'Register'} billing address", [:edit, :billing]


  