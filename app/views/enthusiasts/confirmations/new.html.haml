= title "SublimeVideo limited release: email confirmation instructions"

= content_header "Confirmations Instructions"

%h3= "for SublimeVideo limited release"

= form_for resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "main_form p_bottom" } do |f|
  
  .entry.email
    = f.label :email, "", :class => "icon"
    = f.email_field :email, :class => "text", :placeholder => "Email", :required => true
  
  .entry.submit
    = f.submit "Resend"
    %p.big= "You will receive an email with the confirmation instructions."