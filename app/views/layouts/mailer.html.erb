<html>
  <body style="margin:0;padding:0;background:#eaeef4;color:#4e5a6c;">
    <style type="text/css">body{font-family:'Helvetica Neue', Helvetica, Arial, sans-serif !important;text-shadow:rgba(255,255,255,0.55) 0 1px 0 !important}a{text-decoration:underline !important;color:#2e8ce3 !important;}td p {line-height:28px !important;padding:8px 0 !important;margin:0 !important;}img{border:none !important}</style>
    <div id="wrap" style="padding:0;margin:0;background:#eaeef4;color:#4e5a6c;font-size:15px;font-family:'Helvetica Neue', Helvetica, Arial, sans-serif;">
      <table  cellspacing="0" cellpadding="0" width="100%" border="0" background="#eaeef4" style="background:#eaeef4">
        <tr width="100%">
          <td width="100%" height="99" background="<%= asset_url('emails/header-background.png') %>" style="height:99px;background:url(<%= asset_url('emails/header-background.png') %>) repeat-x center top">
            <table cellspacing="0" cellpadding="0" width="100%" border="0">
              <tr width="100%">
                <td align="center" valign="center">
                  <h2  style="color:#222222; font-size:26px; font-weight:bold;margin:0;padding:0;">
                    <a href="http://sublimevideo.net"><img src="<%= asset_url('emails/sublimevideo-logo.png') %>" alt="SublimeVideo" border="0"/></a>
                  </h2>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      <div class="content" style="margin:20px 30px">
        <table  cellspacing="0" cellpadding="0" border="0">
          <tr>
            <td valign="top" align="left">
              <p><%= t("mailer.intro_name", name: @user.name_or_email) %></p>

              <%= yield %>

              <p><%= t("mailer.signature") %></p>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </body>
</html>