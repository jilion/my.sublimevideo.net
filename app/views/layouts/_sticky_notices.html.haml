- if !current_user.suspended? && ((current_user.cc_expire_this_month? || current_user.cc_expired?) && current_user.sites.billable.present?)
  #sticky_notice
    %h3 Warning
    %ul
      - if current_user.cc_expire_this_month? || current_user.cc_expired?
        %li
          - if current_user.cc_expired?
            = t('user.credit_card.expired')
          - else
            = raw t('user.credit_card.will_expire')
          = raw t('user.credit_card.prevent_charging_problem', link: link_to(t('app.update_it'), edit_credit_card_path))