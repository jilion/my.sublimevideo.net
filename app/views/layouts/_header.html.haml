#header
  #header_wrap
    %h1
      = link_to user_signed_in? ? sites_path : new_user_session_path do
        %span= "SublimeVideo"
    - if user_signed_in? && controller_name != 'sessions'
      %ul#main_menu
        %li.sites{ :class => ('active' if controller_name == 'sites'), :onclick => "MySublimeVideo.makeSticky(this)" }
          = link_to sites_path do
            %span= "Sites"
    .right
      %ul.extra_links
        %li= link_to "Documentation", page_path("docs")
        %li= link_to "Support", new_ticket_path
        - if user_signed_in? && controller_name != 'sessions'
          %li= link_to "Logout", destroy_user_session_path
      - if user_signed_in? && controller_name != 'sessions'
        = link_to edit_user_registration_path, :class => "user #{'active' if controller_name == 'registrations'}", :onclick => "MySublimeVideo.makeSticky(this)" do
          %strong
            %span.icon= current_user.full_name
          %span.corner
      - else
        - if controller_name != 'sessions'
          = link_to new_user_session_path, :class => "user" do
            %strong
              %span.icon= "Login"
            %span.corner