#header
  #header_wrap
    %h1
      = link_to user_signed_in? ? sites_path : new_user_session_path do
        %span= "SublimeVideo"
    - if user_signed_in?
      %ul#main_menu
        %li.sites{ :class => ('active' if controller_name == 'sites') }
          = link_to sites_path do
            %span= "Sites"
        %li.videos{ :class => ('active' if controller_name == 'videos') }
          = link_to videos_path do
            %span= "Videos"
    
    .right
      %ul.extra_links
        %li= link_to "Documentation", "/docs"
        %li= link_to "Support", "/support"
        - if user_signed_in?
          %li= link_to "Logout", destroy_user_session_path
      - if user_signed_in?
        = link_to edit_user_registration_path, :class => "user" do
          %strong
            %span.icon= current_user.full_name
          %span.corner
      - else
        = link_to new_user_session_path, :class => "user" do
          %strong
            %span.icon= "Login"
          %span.corner