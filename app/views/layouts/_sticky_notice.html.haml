- if user_signed_in? && !current_user.suspended? && ((current_user.cc_expire_this_month? || current_user.cc_expired?) && current_user.sites.billable.present?)
  #sticky_notice
    %h3 Warning
    %ul
      - if current_user.cc_expire_this_month? || current_user.cc_expired?
        %li
          - edit_cc_link = link_to('update it', edit_credit_card_path)
          - if current_user.cc_expired?
            = t("user.credit_card.expired")
            = raw t("please_link", link: edit_cc_link)
          - else
            = raw t("user.credit_card.will_expire", link: edit_cc_link)
            = raw t("please_link", link: edit_cc_link) + " " + t("user.credit_card.prevent_charging_problem")