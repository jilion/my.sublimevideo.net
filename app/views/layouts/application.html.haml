!!! 5
%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= "MySublimeVideo - #{yield :title}"
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "chrome=1" }
    %meta{ "http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8" }
    
    = airbrake_javascript_notifier
    = stylesheet_link_tag 'application'
    = include_stylesheets :style

    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
    /[if lte IE 6]
      %meta{ "http-equiv" => "Refresh", :content => "0;url=http://jilion.com/ie" }
      %style{ :type => "text/css", :media => "screen" }
        == body {background:#fff;display:none;}
    /[if lte IE 8]
      = stylesheet_link_tag 'application_ie'

    - if %w[site_stats video_tag_builder].include?(controller_name)
      = javascript_include_tag 'application_jquery'
    - else
      = javascript_include_tag 'application'
    = yield :head

    = csrf_meta_tag
    = javascript_include_tag "#{request.protocol}use.typekit.com/zwt2duv.js"
    :javascript
      try { Typekit.load(); } catch(e) { }
  %body
    #global
      = render 'layouts/header'
      #main_wrap
        #main
          #rounded_corners_fix
            #white_halo
              #content
                = render 'layouts/flash', :flash => flash if flash.present?
                = yield
      #footer
        %p.right
          = "SublimeVideo® is a service by"
          = link_to "Jilion®", "http://jilion.com"
        %p.links= "#{link_to "SublimeVideo.net", "http://sublimevideo.net"} | #{link_to "Terms & Conditions", page_path(:page => 'terms')} | #{link_to "Privacy Policy", page_path(:page => 'privacy') }".html_safe
        %p.copyright= "Copyright © 2010 - #{Time.now.utc.year} Jilion® — SublimeVideo and Jilion are registered trademarks"

    = yield :bottom
    - if user_signed_in?
      = raw FastPass.script(GetSatisfaction.consumer_key, GetSatisfaction.consumer_secret, current_user.email, current_user.full_name, current_user.id, Rails.env.production?)
    = render 'layouts/gosquared' if Rails.env.production?
