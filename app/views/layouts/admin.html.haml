!!! 5
%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= "MySublimeVideo Admin - #{yield :title}"
    %meta{ "http-equiv" => "X-UA-Compatible", content: "chrome=1" }
    %meta{ "http-equiv" => "Content-Type", content: "text/html;charset=UTF-8" }
    = stylesheet_link_tag 'admin'
    %link{ rel: "shortcut icon", href: "/favicon.ico", type: "image/x-icon" }
    = javascript_include_tag 'admin'
    = csrf_meta_tag
    = javascript_include_tag "#{request.protocol}use.typekit.com/zwt2duv.js"
    :javascript
      try { Typekit.load(); } catch(e) { }
  %body
    #global
      = render 'admin/layouts/admin_header'
      #main
        #content
          = render 'layouts/flash', flash: flash if flash.present?
          = image_tag "spinner.gif", class: "spinner", id: "table_spinner", style: "display:none"
          = yield
      #footer
        %p= "Copyright © 2010 - #{Time.now.utc.year} Jilion® — SublimeVideo and Jilion are registered trademarks"

    = yield :bottom
