- @page_title_prefix = "AdminSublimeVideo"

!!! 5
%html
  %head
    %title= page_title
    %meta{ "http-equiv" => "X-UA-Compatible", content: "chrome=1" }
    %meta{ "http-equiv" => "Content-Type", content: "text/html;charset=UTF-8" }
    = csrf_meta_tag

    = stylesheet_link_tag 'admin'
    %link{ rel: "shortcut icon", href: "/favicon.ico", type: "image/x-icon" }

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/jquery-ui.min.js'
    = javascript_include_tag 'sublimevideo', 'admin'

    = render 'layouts/typekit'

  %body
    #global{ "data-pjax-container" => true }
      = render 'admin/layouts/admin_header'
      #main
        #content
          = render 'layouts/flash', flash: flash if flash.present?
          = image_tag "admin/spinner.gif", class: "spinner", id: "table_spinner", style: "display:none"
          = yield
      #footer
        %p= raw "Copyright &copy; 2010 - #{Time.now.utc.year} Jilion&reg; &mdash; SublimeVideo and Jilion are registered trademarks"

    = yield :bottom
