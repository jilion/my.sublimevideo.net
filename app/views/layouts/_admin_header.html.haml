  %h1
    = link_to admin_signed_in? ? sites_path : new_admin_session_path do
      = "#{"DEV" if Rails.env.development?} MySublimeVideo"
      %em= "Admin"
  - if admin_signed_in?
    -#.popup_menu
    -#  %h3= link_to "Menu", "", :onclick => "return false"
    -#  %ul
    -#    %li.users{ :class => ('active' if controller_name == 'users') }= link_to "Users", admin_users_path
    -#    %li.sites{ :class => ('active' if controller_name == 'sites') }= link_to "Sites", admin_sites_path
