    -#    %li.admins{ :class => ('active' if controller_name == 'admins') }= link_to "Admins", admin_admins_path
    %ul#favorite_links
      - [:sites, :users, [:releases, { :link_text => "Player" }], :delayed_jobs, :admins].each do |r|
        - name = r.is_a?(Array) ? r[0] : r
        - if (current_admin && current_admin.email == "zeno@jilion.com") || name != :releases || Rails.env.development?
          = activatable_menu_item(:li, name, (r.is_a?(Array) ? r[1] : {}).merge(:namespace => 'admin'))
        
  .right
    %ul.extra_links
      - if admin_signed_in?
        %li= link_to "Logout", destroy_admin_session_path
        = activatable_menu_item(:li, :registration, :link_text => current_admin.email, :namespace => %w[edit admin], :controller_name => "registrations", :class => 'user')
      - else
        = link_to "Login", new_admin_session_path, :class => "user"
  .spacer