    -#    %li.admins{ :class => ('active' if controller_name == 'admins') }= link_to "Admins", admin_admins_path
    %ul#favorite_links
      - [:sites, :users, :stats, [:releases, { :link_text => "Player" }], :mails, [:delayed_jobs, { :urls => %w[djs], :link_text => "DJs" }], :admins].each do |r|
        - name = r.is_a?(Array) ? r[0] : r
        - if zeno? || name != :releases || Rails.env.development?
          = activable_menu_item(:li, name, (r.is_a?(Array) ? r[1] : {}).reverse_merge!(:namespace => 'admin'))
          
  .right
    %ul.extra_links
      - if admin_signed_in?
        %li= link_to "Logout", destroy_admin_session_path
        %li= link_to current_admin.email, edit_admin_registration_path
      - else
        = link_to "Login", new_admin_session_path, :class => "user"
  .spacer