!!! 5
%html{ "xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "lang" => "en" }
  %head
    %title= yield(:title) || "SublimeVideo"
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "chrome=1" }
    %meta{ "http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8" }
    
    = include_stylesheets :notify_me
    
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
    
    = yield :header
    = raw include_javascripts(:default)
    = csrf_meta_tag
    = javascript_include_tag "http://use.typekit.com/zwt2duv.js"
    == <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  %body
    - if flash.present?
      #flash
        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:alert]
          .alert= flash[:alert]
    
    #global
      #box
        #header
          %h1
            %span= "SublimeVideo"
          = link_to "demo page", "http://jilion.com/sublime/video", :class => "demo_page"
        #content
          = yield
      #footer
        %p= raw "Copyright &copy; 2010 SublimeVideo&reg;"
    
    = yield :bottom