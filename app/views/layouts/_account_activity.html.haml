- if user_signed_in? 
  - if current_user.trial?
    #trial_box
      %h4= "Free trial"
      %span.percentage= "#{current_user.trial_usage_percentage}%"
      %p.note
        = "You are currently using the trial mode of SublimeVideo."
        - unless current_user.credit_card?
          = "We invite you to add your credit card to prevent any cut in the player delivery."
      - unless current_user.credit_card?
        = link_to "Add a Credit Card", "/credit_card_path", :class => "add_a_credit_card"
  - else
    - if current_user.credit_card?
      - current_invoice = Invoice.current(current_user)
      #account_activity_box
        .current_balance
          %h4= "Your current usage"
          %p.price
            %strong= cents_to_dollars(current_invoice.amount)
        = link_to "Billing reports", invoices_path, :class => "billing_reports"
    - else
      #suspend_box
        %p.note= "Your free trial of SublimeVideo is over. Please add a Credit Card to continue."
        = link_to "Add a Credit Card", "/credit_card_path", :class => "add_a_credit_card"
