%h4.title Countries
.content.content_wrap
  - if stats.empty?
    %p.empty No plays.
  - else
    %ul
      - stats.each do |country_code, data|
        %li
          %span{ class: "bar percent_#{(data[:percent] * 100).to_i}", style: "width: #{data[:percent] * 100}%;"}
          %span.wrap
            %span.country{ style: stats_country_style(country_code) }
            %span.title{ title: stats_country_name(country_code) }= truncate(stats_country_name(country_code), length: 21)
            %span.value
              %span.percent= display_percentage(data[:percent], strip_insignificant_zeros: false)
              %span.metric= formatted_pluralize(data[:count], 'play')
