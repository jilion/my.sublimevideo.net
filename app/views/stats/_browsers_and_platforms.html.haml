%h4.title Browser + OS
.content.content_wrap
  - if stats.empty?
    %p.empty No plays.
  - else
    %ul
      - stats.each do |browser_and_os, data|
        %li
          %span.bar{ class: stats_class_for_visual_percentage(data[:percent]), style: stats_style_for_horizontal_visual_percentage(data[:percent]) }
          %span.wrap
            %span.browser{ style: stats_browser_style(browser_and_os) }
            %span.platform{ style: stats_platform_style(browser_and_os) }
            %span.title= stats_browser_and_os_name(browser_and_os)
            %span.value
              %span.percent= display_percentage(data[:percent], strip_insignificant_zeros: false)
              %span.metric= formatted_pluralize(data[:count], 'play')
