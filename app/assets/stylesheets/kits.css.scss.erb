@import "css3";

#kits, #kit {
  position:relative;
}

#beta_loader_required {
  position:absolute;
  top:40px;
  right:0;
}

#beta_loader_required .tooltip.info {
  position:absolute;
  top:-1px;
  left:-27px;
}

#beta_loader_required h5.label {
  font-size:20px;
  font-style:italic;
  font-weight:normal;
}

ul#kits_wrap {
  list-style-type:none;
  margin-top:10px;
}

ul#kits_wrap li {
  width:415px;
  height:300px;
  float:left;
  margin-bottom:50px;
  position:relative;
  @include gradient(#dbe8ff,#c4d1e8,#cddaf1);
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.9) 0 1px 0, rgba(0,32,79,0.5) 0 1px 4px));
}

ul#kits_wrap li:nth-child(odd) {
  margin-right:50px;
}

ul#kits_wrap li a.name {
  font-size:18px;
  font-weight:600;
  color:#1e3966;
  padding:15px 24px 10px 24px;
  display:block;
}

ul#kits_wrap li a.name strong {
  display:inline-block;
  font-size:16px;
  font-weight:600;
  padding:2px 5px 1px;
  color:#556e97;
  background:rgba(0,36,102,0.14);
  white-space:nowrap;
  @include border-radius(4px);
}

ul#kits_wrap li .preview {
  width:368px;
  height:207px;
  margin:0 auto;
  @include box-shadow(rgba(0,0,0,0.6) 0 1px 4px);
}

ul#kits_wrap li .action_links {
  padding-top:11px;
  text-align:center;
}

ul#kits_wrap li .action_links a, ul#kits_wrap li .action_links button, ul#kits_wrap li .action_links input {
  color:#1e3966;
  font-weight:600;
  border:none;
  background:none;
  font-family:inherit;
  font-size:16px;
  border-bottom:1px solid #7387a6;
  outline:0;
  display:inline;
  cursor:pointer;
  text-shadow:rgba(255,255,255,0.4) 0 1px 0;
}

ul#kits_wrap li .action_links form {
  display:inline;
}

ul#kits_wrap li.add_kit {
  width:409px;
  text-align:center;
  border:3px dashed #567094;
  background:rgba(215,230,255,.10);
  @include box-shadow(none);
}

ul#kits_wrap li.add_kit a.add {
  display:block;
  width:100%;
  height:300px;
  color:#1e3966;
  font-size:28px;
  font-weight:600;
}

ul#kits_wrap li.add_kit a.add span {
  margin-top:130px;
  display:inline-block;
  padding:0 0 0 30px;
  background:url(<%= asset_path "sites/add_player@2x.png" %>) no-repeat 0 50%;
  background-size:18px 19px;
}

ul#kits_wrap li span.default {
  position:absolute;
  top:15px;
  right:24px;
  padding:3px 4px 2px;
  display:inline-block;
  background:rgba(0,67,172,0.5);
  color:#fff;
  font-size:11px;
  font-weight:600;
  text-transform:uppercase;
  letter-spacing:1px;
  text-shadow:rgba(0,0,0,0.3) 0 1px 1px;
  @include border-radius(3px);
  @include box-shadow((inset rgba(0,0,0,0.5) 0 1px 3px, #fff 0 1px 0));
}

/* =============== */
/* = Edit Player = */
/* =============== */

.white_box {
  padding:15px 25px;
  margin:30px 0;
  @include gradient(#dbe8ff,#c4d1e8,#cddaf1);
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.9) 0 1px 0, rgba(0,32,79,0.5) 0 1px 4px));
}

.white_box h4.title {
  text-align:center;
  font-size:20px;
  font-weight:600;
  padding:5px 0 15px;
}

#preview-standard {
  width:640px;
  margin:0 auto 15px;
  @include box-shadow(rgba(0,0,0,0.6) 0 1px 4px);
}

.entry.design.select label {
  font-size:20px;
  font-weight:600;
  margin-right:10px;
}

.expandable_settings_box {
  margin:20px 0 10px;
  background:rgba(47,59,80,0.1);
  @include border-radius(4px);
  @include box-shadow((inset rgba(0,25,66,0.35) 0 1px 3px, rgba(255,255,255,0.5) 0 1px 0))
}

h4.expanding_handler a {
  display:block;
  padding:20px 20px 20px 50px;
  color:#1e3966;
  font-size:24px;
  font-weight:600;
  background:url(<%= asset_path "sites/expandable_box_arrow@2x.png" %>) no-repeat 23px 50%;
  background-size:10px 13px;
}

h4.expanding_handler.expanded a {
  background:url(<%= asset_path "sites/expandable_box_arrow_active@2x.png" %>) no-repeat 22px 50%;
  background-size:12px 11px;
}

.expandable {
  display:none;
  padding:4px 20px 10px;
  border-top:1px solid rgba(30,57,102,0.2);
  @include box-shadow(inset rgba(255,255,255,0.3) 0 1px 0);
}

.expandable.expanded {
  display:block;
}

#kit_settings .indent {
  margin-left:32px;
}

#kit_settings h5 {
  font-size:19px;
  font-weight:600;
  padding:14px 0 3px;
}

#kit_settings input[type='range'] {
  -webkit-appearance: none !important;
  cursor:pointer;
  background:rgba(30,57,102,0.2);
  width:260px;
  height:8px;
  margin-top:14px;
  @include border-radius(4px);
  @include box-shadow((inset rgba(0,0,0,0.3) 0 1px 3px, rgba(255,255,255,0.5) 0 1px 0));
}

#kit_settings input[type='range']::-webkit-slider-thumb {
  -webkit-appearance: none !important;
  height:14px;
  width:14px;
  border:2px solid #001a44;
  @include gradient(#4b6084,#142645,#384e71);
  @include border-radius(50%);
  @include box-shadow(rgba(0,30,79,0.4) 0 1px 4px);
}

#kit_settings .entry.size input.text {
  width:80px;
  text-align:center;
  padding:0;
}

#kit_setting-lightbox-overlay_opacity_value {
  font-size:14px;
  font-weight:600;
  color:#51688f;
  margin:2px 0 0 4px;
}

#kit_settings table#logo_position {
  background:rgba(0,55,147,0.1) url(<%= asset_path "players/logo_position_play_button@2x.png" %>) no-repeat center;
  background-size:33px 39px;
  border:1px solid rgba(30,57,102,0.5);
  margin:10px 0 20px;
}

#kit_settings table#logo_position td {
  width:100px;
  height:60px;
}

#kit_settings table#logo_position tr:first-child td {
  vertical-align:top;
}

#kit_settings table#logo_position tr:last-child td {
  vertical-align:bottom;
}

#kit_settings table#logo_position tr td:first-child .radio_wrap {
  margin-top:2px;
  margin-left:8px;
}

#kit_settings table#logo_position tr td:last-child .radio_wrap {
  float:right;
  margin-right:-8px;
}

.kit_editor a#uploadfiles {
  margin:0 0 25px;
  float:left;
}

.kit_editor #spinner {
  width:50px;
  height:50px;
  position:absolute;
  top:55px;
  left:410px;
}

.kit_editor #dragdrop {
  width:350px;
  padding:30px 20px;
  margin:20px 0;
  color:#51688f;
  background:rgba(0,55,147,0.1);
  border:3px dashed #7085a7;
  font-size:17px;
  font-weight:600;
  text-align:center;
  line-height:24px;
  @include border-radius(4px);
}

.kit_editor #sharing_icon_chooser .radio_wrap {
  float:left;
  margin-right:15px;
}

#sharing_button_sort {
  padding:10px 0 0;
  position:relative;
}

#sharing_button_sort ul.drop_zone {
  list-style-type:none;
  width:520px;
  height:90px;
  background:rgba(81,104,143,0.5);
  @include border-radius(4px);
  @include box-shadow((inset rgba(0,0,0,0.4) 0 1px 3px, rgba(255,255,255,0.35) 0 1px 0));
  @include transition(background-color, 0.2s, linear);
}

#sharing_button_sort ul#social_sharing_inactive_buttons.drop_zone {
  height:56px;
}

#sharing_button_sort ul.drop_zone.highlight {
  -webkit-animation: pulse 0.8s infinite alternate;
}

@-webkit-keyframes pulse {
  0% {background-color: rgba(81,104,143,0.5);}
  100% {background-color: #87baff;}
}

#sharing_button_sort p.drag_note {
  width:320px;
  text-align:center;
  color:#51688f;
  font-size:17px;
  font-weight:600;
  line-height:22px;
  padding:20px 100px;
}

#sharing_button_sort ul.drop_zone li {
  display:block;
  float:left;
  background-repeat:no-repeat;
  background-position:center center;
  cursor:pointer;
  @include border-radius(3px);
  @include box-shadow(rgba(0,0,0,0.5) 0 1px 3px);
  @include transition(opacity, 0.2s, ease-in-out);
}

#sharing_button_sort ul#social_sharing_active_buttons.drop_zone li.ui-sortable-placeholder {
  width:74px !important;
  height:74px !important;
}

#sharing_button_sort ul#social_sharing_inactive_buttons.drop_zone li.ui-sortable-placeholder {
  width:42px !important;
  height:42px !important;
}

#sharing_button_sort ul#social_sharing_inactive_buttons.drop_zone li,
.kit_editor .disabled #sharing_button_sort ul#social_sharing_inactive_buttons.drop_zone li:hover {
  opacity:0.6;
}

#sharing_button_sort ul#social_sharing_inactive_buttons.drop_zone li:hover {
  opacity:1;
}

.kit_editor .disabled #sharing_button_sort ul.drop_zone li {
  opacity:0.6;
  cursor:default;
}

#sharing_button_sort ul.drop_zone li.enabled {
  width:74px;
  height:74px;
  background-color:#243a61;
  margin:8px 0 0 8px;
}

#sharing_button_sort ul.drop_zone li.disabled {
  width:42px;
  height:42px;
  background-color:#243a61;
  margin:7px 0 0 7px;
}

#sharing_button_sort ul.drop_zone li.twitter {
  background-image:url(<%= asset_path "players/twitter_icon@2x.png" %>);
  background-size:49px 41px;
}

#sharing_button_sort ul.drop_zone li.disabled.twitter {
  background-size:29px 24px;
}

#sharing_button_sort ul.drop_zone li.facebook {
  background-image:url(<%= asset_path "players/facebook_icon@2x.png" %>);
  background-size:23px 45px;
}

#sharing_button_sort ul.drop_zone li.disabled.facebook {
  background-size:15px 29px;
}

#sharing_button_sort ul.drop_zone li.google_plus {
  background-image:url(<%= asset_path "players/google_plus_icon@2x.png" %>);
  background-size:48px 48px;
}

#sharing_button_sort ul.drop_zone li.disabled.google_plus {
  background-size:28px 28px;
}

#sharing_button_sort ul.drop_zone li.pinterest {
  background-image:url(<%= asset_path "players/pinterest_icon@2x.png" %>);
  background-size:48px 48px;
}

#sharing_button_sort ul.drop_zone li.disabled.pinterest {
  background-size:28px 28px;
}

#sharing_button_sort ul.drop_zone li span {
  display:none;
}

#sharing_button_sort .arrow_up {
  width:34px;
  height:165px;
  background:url(<%= asset_path "players/arrow_up@2x.png" %>) no-repeat;
  background-size:100%;
  position:absolute;
  bottom:25px;
  left:540px;
}