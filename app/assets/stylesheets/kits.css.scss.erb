@import "css3";

#kits, #kit {
  position:relative;
}

#kit_preview, #kit_settings {
  margin-bottom:20px;
  padding:20px 0;
}

#beta_loader_required {
  position:absolute;
  top:40px;
  right:0;
}

#beta_loader_required .tooltip.info {
  position:absolute;
  top:-1px;
  left:-27px;
}

#beta_loader_required h5.label {
  font-size:20px;
  font-style:italic;
  font-weight:normal;
}

ul#kits_wrap {
  list-style-type:none;
  margin-top:10px;
}

ul#kits_wrap li {
  width:415px;
  height:300px;
  float:left;
  margin-bottom:50px;
  text-align:center;
  @include gradient(#dbe8ff,#c4d1e8,#cddaf1);
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.9) 0 1px 0, rgba(0,32,79,0.5) 0 1px 4px));
}

ul#kits_wrap li:nth-child(odd) {
  margin-right:50px;
}

ul#kits_wrap li a.name {
  font-size:18px;
  font-weight:600;
  color:#1e3966;
  padding:15px 0 10px;
  display:block;
}

ul#kits_wrap li .preview {
  width:368px;
  height:207px;
  margin:0 auto;
  @include box-shadow(rgba(0,0,0,0.6) 0 1px 4px);
}

ul#kits_wrap li .action_links {
  padding-top:11px;
}

ul#kits_wrap li .action_links a, ul#kits_wrap li .action_links button, ul#kits_wrap li .action_links input {
  color:#1e3966;
  font-weight:600;
  border:none;
  background:none;
  font-family:inherit;
  font-size:16px;
  border-bottom:1px solid #7387a6;
  outline:0;
  display:inline;
  cursor:pointer;
  text-shadow:rgba(255,255,255,0.4) 0 1px 0;
}

ul#kits_wrap li .action_links form {
  display:inline;
}

ul#kits_wrap li.add_kit {
  text-align:center;
  border:3px dashed #567094;
  background:rgba(215,230,255,.10);
  @include box-shadow(none);
}

ul#kits_wrap li.add_kit a.add {
  display:block;
  width:100%;
  height:300px;
  color:#1e3966;
  font-size:28px;
  font-weight:600;
}

ul#kits_wrap li.add_kit a.add span {
  margin-top:130px;
  display:inline-block;
  padding:0 0 0 30px;
  background:url(<%= asset_path "sites/add_player@2x.png" %>) no-repeat 0 50%;
  background-size:18px 19px;  
}


// Form
#identifier {
  position:absolute;
  top:50px;
  right:0;
  padding:10px 15px;
  font-size:22px;
}

.expandable_settings_box {
  margin-bottom:20px;
  padding:20px;
  background:rgba(255,255,255,0.3);
  @include border-radius(5px);
}

.expanding_handler:before {
  content:'> ';
}
.expanding_handler.expanded:before {
  content:'v ';
}

.expandable {
  display:none;
}

#kit_settings .indent {
  margin-left:32px;
}

.kit_editor a#uploadfiles {
  position:relative;
  float:left;
}

.kit_editor #spinner {
  position:relative;
  float:left;
  width:50px;
  height:50px;
}

.kit_editor #dragdrop {
  width:350px;
  height:40px;
  padding:20px 15px 0;
  border:1px solid #000;
  color:#f1f6ff;
  text-shadow:rgba(0,0,0,0.6) 0 -1px 0;
  @include gradient(#114492, #207ec3, #1a65ae);
  @include box-shadow((inset rgba(0,0,0,0.9) 0 1px 13px, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(5px);
  -webkit-font-smoothing:antialiased;
}

