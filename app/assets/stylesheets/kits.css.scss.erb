@import "css3";

#kits, #kit {
  position:relative;
  margin-top:20px;
  padding:40px;
}

#kit_preview, #kit_settings {
  margin-bottom:20px;
  padding:20px;
}

#kits, #kit_preview, #kit_settings {
  background:rgba(255,255,255,0.4);
  @include border-radius(5px);
}

#beta_loader_required {
  position:absolute;
  top:0;
  right:0;
  padding:10px 15px;
  font-size:22px;
}

// REMY
#kits ul {
  list-style-type:none;
}

#kits ul li {
  display:block;
  width:350px;
  height:300px;
  padding:10px;
  border:1px solid #576c88;
  @include gradient(rgba(255,255,255,0.4),rgba(255,255,255,0),transparent);
  @include box-shadow((inset #f5f8fc 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(5px);
}

#kits ul li.left {
  float:left;
}
#kits ul li.right {
  float:right;
}

#kits ul li a {
  display:block;
  // height:58px;
  // line-height:58px;
  padding:0 20px;
  color:#1e3966;
  font-size:20px;
  font-weight:600;
  text-shadow:rgba(255,255,255,0.6) 0 1px 0;
}

#kits ul li a.name {
  padding:10px;
}

#kits ul li.add_kit.add_kit a {
  padding-top:125px;
  height:100%;
  text-align:center;
}

#kits ul li.add_kit a span {
  padding-left:25px;
  background:url(<%= asset_path "sites/add_site_cross.png" %>) no-repeat 0 4px;
}

#kits a.edit_kit {
  // position:absolute;
  // bottom:10px;
  // right:11px;
  display:inline-block;
  padding:4px 6px 3px;
  color:#f1f6ff;
  font-size:10px;
/*  font-weight:600;*/
  text-transform:uppercase;
  letter-spacing:1px;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border:1px solid #0e2a55;
  @include gradient(#5f7da6,#2c4a76,#46658f);
  @include box-shadow((inset rgba(255,255,255,0.24) 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(5px);
}

#kits a.edit_kit:active {
  @include gradient(#2c4a76,#5f7da6,#46658f);
}


// Form
#identifier {
  position:absolute;
  top:50px;
  right:0;
  padding:10px 15px;
  font-size:22px;
}

.expandable_settings_box {
  margin-bottom:20px;
  padding:20px;
  background:rgba(255,255,255,0.3);
  @include border-radius(5px);
}

#kit_settings .expanding_handler:before {
  content:'> ';
}
#kit_settings .expanding_handler.expanded:before {
  content:'v ';
}

#kit_settings .expandable {
  display:none;
}

#kit_settings .indent {
  margin-left:32px;
}

.kit_editor a#uploadfiles {
  position:relative;
  float:left;
}

.kit_editor #spinner {
  position:relative;
  float:left;
  width:50px;
  height:50px;
}

.kit_editor #dragdrop {
  width:350px;
  height:40px;
  padding:20px 15px 0;
  border:1px solid #000;
  color:#f1f6ff;
  text-shadow:rgba(0,0,0,0.6) 0 -1px 0;
  @include gradient(#114492, #207ec3, #1a65ae);
  @include box-shadow((inset rgba(0,0,0,0.9) 0 1px 13px, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(5px);
  -webkit-font-smoothing:antialiased;
}

