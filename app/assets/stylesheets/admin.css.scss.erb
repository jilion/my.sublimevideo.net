}

#chart {
  width:100%;
  height:650px;
}

#selectors table {
  border-collapse:collapse;
  background:#333;
  @include border-radius(8px)
}

#selectors table td {
  min-width:200px;
  padding:0;
  vertical-align:top;
  text-align:left;
  text-shadow:rgba(0,0,0,0.6) 0 -1px 0;
  border-left:1px solid #222;
  border-right:1px solid #222;
  @include box-shadow(rgba(255,255,255,0.1) 2px 0 0);
}

#selectors table td:first-child {
  border-left:none;
}

#selectors table td:last-child {
  border-right:none;
  @include box-shadow(none);
}

#selectors table td h2 {
  font-size:16px;
  font-weight:400;
  text-transform:uppercase;
  color:#fff;
/*  text-align:center;*/
  letter-spacing:1px;
  padding:10px 10px 8px;
  border-bottom:1px solid #222;
  @include box-shadow(rgba(255,255,255,0.1) 1px 1px 0);
}

#selectors table td:last-child h2 {
  border-right:none;
  @include box-shadow(rgba(255,255,255,0.1) 0 1px 0);
}

#selectors ul {
  list-style-type:none;
}

#selectors li a, #selectors li h3 {
  display:block;
  color:#888;
  font-size:16px;
  font-weight:600;
