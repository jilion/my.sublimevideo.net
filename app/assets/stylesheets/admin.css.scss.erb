@import "css3";

* {
  margin:0;
  padding:0;
}

html {min-height:100%;}

body {
  font-family:"proxima-nova-1","proxima-nova-2", Helvetica, Arial, sans-serif;
  font-size:14px;
  min-height:100%;
  background:#ddd;
  background:-webkit-gradient(linear,left top,left bottom,from(#eee),to(#ccc));
  background:-moz-linear-gradient(top, #eee, #ccc);
  text-rendering:optimizeLegibility;
}

#header {
  padding:15px;
  position:relative;
  min-width:830px;
  background:#222;
  background:-webkit-gradient(linear,left top,left bottom,from(#444),to(#000));
  background:-moz-linear-gradient(top, #444, #000);
}

#header h1 {
  font-size:28px;
  font-weight:400;
  float:left;
}

#header h1 a {
  color:#fff;
}

#header h1 em {
  color:rgba(255,255,255,0.3);
  font-style:normal;
}

#header .popup_menu {
  float:left;
  position:relative;
  margin:0 0 0 25px;
  z-index:100;
}

#header .popup_menu h3 {
  padding:4px;
  font-size:18px;
  font-weight:600;
  border-radius:13px;
  position:relative;
  z-index:2;
  background:#950041;
  background:-webkit-gradient(linear,left top,left bottom,from(#950041),to(#730033));
  background:-moz-linear-gradient(top, #950041, #730033);
}

#header .popup_menu:hover h3 {
  background:#ddd;
  padding-bottom:0;
  border-top-left-radius:8px;
  border-top-right-radius:8px;
  border-bottom-left-radius:0;
  border-bottom-right-radius:0;
}

#header .popup_menu h3 a {
  color:#fff;
  padding:2px 8px;
  display:block;
  text-shadow:#000 0 -1px 0;
  border-radius:4px;
}
#header .popup_menu:hover h3 a {
  background:#950041;
  background:-webkit-gradient(linear,left top,left bottom,from(#950041),to(#730033));
  background:-moz-linear-gradient(top, #950041, #730033);
  color:#fff;
}

#header .popup_menu ul {
  width:160px;
  position:absolute;
  display:none;
  background:#333;
  list-style-type:none;
  padding:2px 0;
  border-top-right-radius:8px;
  border-bottom-left-radius:8px;
  border-bottom-right-radius:8px;
  background:#eee;
  background:-webkit-gradient(linear,left top,left bottom,from(#ddd),to(#a9a9a9));
  background:-moz-linear-gradient(top, #ddd, #a9a9a9);
  -webkit-box-shadow:rgba(0,0,0,0.8) 0 2px 8px;
}

#header .popup_menu:hover ul {display:block}

#header .popup_menu ul li {
  padding:2px 4px;
  font-size:18px;
  font-weight:800;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
}

#header .popup_menu ul li a {
  display:block;
  padding:6px 8px;
  color:#111;
  border-radius:4px;
}

#header .popup_menu ul li a:hover, #header .popup_menu ul li.active a:hover {
  background:#333;
  color:#fff;
  text-shadow:#000 0 -1px 0;
  -webkit-font-smoothing:antialiased;
}

#header .popup_menu ul li.active a {
  color:#777;
  font-weight:normal;
}

ul.favorite_links {
  list-style-type:none;
  float:left;
  padding:8px 0 0 15px;
}

ul.favorite_links li {
  float:left;
  padding:0 15px 0 0;
}

ul.favorite_links li a {
  font-size:16px;
  padding:8px 12px 7px;
  color:#fff;
  text-shadow:#000 0 -1px 0;
  background:#444;
  background:-webkit-gradient(linear,left top,left bottom,from(#555),to(#333));
  background:-moz-linear-gradient(top, #555, #333);
  border-radius:13px;
}

ul.favorite_links li a:hover {
  color:#fff;
}

ul.favorite_links li.active a {
  background:#777;
  background:-webkit-gradient(linear,left top,left bottom,from(#666),to(#777));
  background:-moz-linear-gradient(top, #666, #777);
  color:#fff;
  text-shadow:rgba(0,0,0,0.4) 0 -1px 0;
  -webkit-box-shadow:inset #000 0 1px 4px, #000 0 0 2px;
}

ul.no_bullet {
  list-style-type:none;
}

#header .right {
  width:280px;
  position:absolute;
  top:10px;
  right:15px;
}

#header .right ul {
  list-style-type:none;
  padding:12px 0 0;
}

#header .right li {
  float:right;
  padding:0 0 0 16px;
}

#header .right li a {
  color:rgba(255,255,255,0.4);
  -webkit-transition:0.3s color;
}

#header .right li a:hover {
  color:#fff;
}

#main {
  padding:15px;
  min-width:1004px;
  margin:15px;
  position:relative; /* remy */
  background:#fff;
  border-radius:10px;
}

#main a.add {
  background:url(<%= asset_data_uri 'admin/add_icon.png' %>) no-repeat;
  padding:2px 0 5px 28px;
  font-size:16px;
  font-weight:600;
}

#main h2 {
  font-size:36px;
  font-weight:600;
  padding:0 0 10px;
}
#main h2.revenue {
  font-size:34px;
  padding:0;
}
#main h3.revenue {
  font-size:24px;
  padding:0;
}

#main table {
  width:100%;
  border-collapse:collapse;
  margin:15px 0 0;
}

#main table tr.alt {
  background:#eee;
}

#main table th {
  padding:8px 0;
  white-space:nowrap;
  background:#ddd;
  background:-webkit-gradient(linear,left top,left bottom,from(#eee),to(#ccc));
  background:-moz-linear-gradient(top, #eee, #ccc);
}

#main table th.left {text-align:left}

#main table td {
  padding:15px 5px;
  text-align:center;
}

#main table tr.recurring td.name {
  background:url(<%= asset_data_uri 'admin/recurring_icon.png' %>) no-repeat 8px 50%;
  padding-left:35px;
}

#main table td.left {text-align:left}

#main table th a.sort:after {content:" ▾";}
#main table th a.sort.up:after {content:" ▴";}

#main table th a.active {
  background:#111;
  background:-webkit-gradient(linear,left top,left bottom,from(#444),to(#555));
  background:-moz-linear-gradient(top, #444, #555);
  color:#fff;
  padding:3px 10px;
  border-radius:20px;
  -webkit-box-shadow:inset #000 0 1px 4px;
}

#main form label {
  display:block;
  font-size:13px;
  font-weight:600;
  margin:10px 0 0;
}

#main form input.text {
  width:400px;
  font-size:16px;
  padding:3px;
}

#main form textarea {
  width:400px;
  padding:3px;
  font-size:16px;
}

#main form .actions input[type=submit] {
  margin:20px 0 0;
}

#main form p.note {
  margin:15px 0 0;
}

#main form .checkbox_wrap input {
  float:left;
  margin:1px 6px 0 0;
}

#footer {
  text-align:center;
  padding:10px 0;
}

.spacer {clear:both;}

a {
  text-decoration:none;
  color:#ca0063;
}

/* Dirty style */

#content table.main td.delete a, #content table.main td.delete input {
  text-indent:-9999px;
  display:block;
  width:20px;
  height:22px;
  background:url(<%= asset_data_uri 'admin/trash_btn.png' %>) no-repeat;
  margin:0 10px;
  border:none;
}

#content form.site input.add, form input.submit.small {
  width:97px;
  height:48px;
  background:url(<%= asset_data_uri 'admin/add_btn.png' %>) no-repeat;
  border:none;
  font-family:"proxima-nova-1","proxima-nova-2", Helvetica, Arial, sans-serif;
  font-size:18px;
  font-weight:600;
  text-align:center;
  color:#4d5563;
  text-shadow:rgba(255,255,255,0.45) 0 1px 0;
  outline:0;
  position:relative;
  left:-5px;
}

form label.icon {
  text-indent:-9999px;
  display:block;
  position:absolute;
}

/* remy */
#main .dashboard_box {
  float:left;
  background:-webkit-gradient(linear,left top,left bottom,from(#888),to(#BBB));
  background:-moz-linear-gradient(top, #888, #BBB);
  width:320px;
  margin:20px;
  padding:10px 10px;
  border-radius:20px;
  -webkit-box-shadow:inset #222 0 1px 4px;
}

/* thibaud */
#search_form {
  float:right;
}
#table_spinner{
  position:absolute;
  left:50%;
}
#timeline {
  margin-bottom:15px;
}

