/*
*= require 'global'
*= require 'docs/coderay'
*/

@import "css3";

body {
  background:#ecf2f8 url(<%= asset_data_uri "www/back_texture.png" %>);
}

.docs header, .docs header .shadow, .docs header .lights {
  height:290px;
}

.docs header h2 {
  text-align:left;
  font-size:44px;
  padding:30px 0 15px;
}

.docs header p.sub {
  padding-right:220px;
}

#content {
  width:960px;
  margin:0 auto;
  padding:40px 0;
  color:#4a648e;
  text-shadow:rgba(255,255,255,0.9) 0 1px 0;
}

#content a {
  color:#1185ff;
}

#content nav {
  width:280px;
  padding-right:40px;
  float:left;
}

#content nav ul {
  list-style-type:none;
}

#content nav ul.pages {
  padding:4px 0;
  margin-bottom:16px;
}

#content nav ul.pages li {
  padding:8px 0 8px 20px;
  line-height:15px;
  background:url(<%= asset_data_uri "docs/menu_bullet.png" %>) no-repeat 0 12px;
}

#content nav ul.pages li.active {
  font-weight:600;
  background-image:url(<%= asset_data_uri "docs/menu_bullet_active.png" %>);
}

#content nav ul.pages li.active a {
  color:#00235a;
}

#content nav ul.pages li.title {
  padding:6px 0;
  background:none;
}

#content nav h3 {
  font-size:17px;
  text-transform:uppercase;
  letter-spacing:1px;
  font-weight:600;
  color:#00235a;
}

#content nav ul.pages li a {
  font-size:15px;
  color:#7690b3;
  font-weight:600;
}

.content_wrapper {
  width:640px;
  float:left;
  padding-bottom:40px;
}

.footnotes {
  border-top:1px solid #A6B6CC;
  width:70%;
  margin-top:20px;
}

.footnotes ol {
  font-size:13px;
  line-height:20px;
  padding:10px 0px 15px 20px;
}

#content .footnotes code {font-size:12px}

.content_wrapper h2.headline {
  padding:40px 0;
  font-size:40px;
  color:#1c263b;
  font-weight:600;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
}

.content_wrapper h2 {
  color:#00235a;
  font-size:30px;
  font-weight:600;
  padding-bottom:10px;
}

.content_wrapper h3 {
  color:#00235a;
  font-size:20px;
  font-weight:600;
  padding:20px 0 12px;
  margin:0 0 5px;
  border-bottom: 3px solid #b8c7d9;
}

.content_wrapper h3 code {
  font-weight:normal;
  font-size:17px;
  background:none;
  display:block;
  margin:20px 0 0;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
}

#content .content_wrapper h2 a, #content .content_wrapper h3 a, #content .content_wrapper h4 a {
  color:#00235a;
}

#content .content_wrapper h2 a:hover, #content .content_wrapper h3 a:hover, #content .content_wrapper h4 a:hover {
  border-bottom:none;
}

.content_wrapper h4 {
  font-size:16px;
  font-weight:600;
  padding:16px 0 4px;
  color:#00235a;
}

.content_wrapper h4 code {
  font-weight:normal;
  font-size:17px;
  background:none;
  padding:0;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
}

.content_wrapper p {
  line-height:24px;
  padding:7px 0;
}

.content_wrapper p strong {
  font-weight:600;
/*  color:#00235a;*/
}

.content_wrapper ul {
  padding:7px 0;
  list-style-type:none;
  line-height:24px;
}

.content_wrapper ul li {
  padding:3px 0 3px 16px;
  background:url(<%= asset_data_uri 'docs/bullet.png' %>) no-repeat 0 11px;
}

.content_wrapper ol {
  padding:7px 0 7px 17px;
  line-height:24px;
}

.content_wrapper ol li {
  padding:3px 0;
}

.content_wrapper code {
  font-family:Monaco, Courier, monospace;
  font-size:13px;
  background:#c8d5f0;
  color:#224579;
  padding:1px 4px;
  text-shadow:none;
  -moz-border-radius:4px;
  -webkit-border-radius:4px;
  border-radius:4px;
}

.content_wrapper strong code {font-weight:normal;}

.content_wrapper span.param code {
  color:#b53148;
}

.content_wrapper a.c:hover {
  border:none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.content_wrapper a code {
  background:#abc1ee;
  border-bottom:1px solid rgba(0,0,0,0.3);
  -o-transition: background 0.25s linear;
  -moz-transition: background 0.25s linear;
  -webkit-transition: background 0.25s linear;
  transition: background 0.25s linear;
}

.content_wrapper a:hover code {
  background:#aadefe;
}

#content .content_wrapper h3 a code, #content .content_wrapper h4 a code {
  color:#00235a;
  background:transparent;
  border-bottom:none;
}

#content .content_wrapper h3 a:hover code, #content .content_wrapper h4 a:hover code {
  background:transparent;
  border-bottom:none;
}

.content_wrapper .code {
  padding:10px 0;
}

.content_wrapper .code .line {
  width:20px;
  float:left;
  padding:0 10px 0 0;
  text-align:left;
}

.content_wrapper .code .line ol {
  line-height:inherit;
  padding:0;
  list-style-type:none;
}

.content_wrapper .code .line li {
  padding:0;
  background:none;
  color:#496594;
}

.content_wrapper .code.two_columns .content {
  width:520px;
  float:left;
}

.content_wrapper .code, .content_wrapper pre {
  font-family:Monaco, Courier, monospace;
  font-size:13px;
  line-height:22px;
}

.content_wrapper pre {
  width:100%;
  overflow:auto;
}

.content_wrapper pre::-webkit-scrollbar {
  width:6px;
  height:6px;
}

.content_wrapper pre::-webkit-scrollbar-button:start:decrement, .content_wrapper code::-webkit-scrollbar-button:end:increment  {
  display:none;
}

.content_wrapper pre::-webkit-scrollbar-track-piece  {
  background-color:#b9c8d8;
  -webkit-border-radius:6px;
}

.content_wrapper pre::-webkit-scrollbar-thumb:horizontal {
  background-color:#657a8f;
  -webkit-border-radius:6px;
}

.content_wrapper pre .line-numbers {
  margin-right:10px;
}


.content_wrapper a:hover {
  padding-bottom:1px;
  border-bottom: 1px solid #81bbfc;
  -moz-box-shadow: rgba(255,255,255,0.5) 0 1px 0;
  -webkit-box-shadow: rgba(255,255,255,0.5) 0 1px 0;
  box-shadow: rgba(255,255,255,0.5) 0 1px 0;
}

.content_wrapper a.zoom:hover {
  border-bottom:none;
  padding-bottom:0;
}

.content_wrapper img.screenshot {
  border:1px solid #fff;
  -moz-box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
  -webkit-box-shadow: rgba(36,60,96,0.7) 0 21px 15px;
  box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
}

.content_wrapper img.icon {
  position:relative;
  top:3px;
}

.content_wrapper .breakline {
  margin:20px 0 0;
  height:0px;
  border-top:2px solid #b8c7d9;
  border-bottom:1px solid rgba(255,255,255,0.5);
}

.content_wrapper span.red {
  color:#cf0039;
}

.content_wrapper h3 span.paid_plans_only {
  background:#9d2224;
  font-size:11px;
  color:#fff;
  padding:3px 5px;
  text-shadow:none;
  position:relative;
  top:-2px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
}

.content_wrapper span.label {
  text-transform:uppercase;
  font-size:10px;
  font-weight:600;
  color:#fff;
  padding:3px 3px 0;
  line-height:10px;
  letter-spacing:1px;
  text-shadow:none;
  float:left;
  width:57px;
  height:12px;
  margin:4px 6px 0 0;
  display:block;
  text-align:right;
  -moz-border-radius:4px;
  -webkit-border-radius:4px;
  border-radius:4px;
}

.content_wrapper span.label.new {background-color:#59b374}
.content_wrapper span.label.improved {background-color:#d88345}
.content_wrapper span.label.fixed {background-color:#a050b0}

.content_wrapper .video_wrap {
  width:640px;
  border:1px solid #fff;
  -moz-box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
  -webkit-box-shadow: rgba(36,60,96,0.7) 0 21px 15px;
  box-shadow: rgba(36,60,96,0.7) 0 2px 15px;
}

#releases ul {
  padding:13px 0 17px;
  border-bottom: 1px solid rgba(0, 48, 121, 0.24);
  -moz-box-shadow:rgba(255,255,255,0.4) 0 1px 0;
  -webkit-box-shadow:rgba(255,255,255,0.4) 0 1px 0;
  box-shadow:rgba(255,255,255,0.4) 0 1px 0;
}

#releases ul:last-child {
  border:none;
  -moz-box-shadow:none;
  -webkit-box-shadow:none;
  box-shadow:none;
}

.content_wrapper table.simple {
  width:100%;
  border-collapse:collapse;
  margin:10px 0;
}

.content_wrapper table.simple th {
  color:#1c263b;
  font-weight:600;
}

.content_wrapper table.simple th, .content_wrapper table.simple td {
  padding:8px;
  border:1px solid #a6b6cc;
  text-align:left;
  -moz-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  -webkit-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
}

#supported_browsers {
  margin:20px 0;
}

#supported_browsers, #supported_browsers table {
  width:100%;
  border-collapse:collapse;
}

/*#supported_browsers col.alt {
  background:rgba(0,0,0,0.05);
}
*/

#supported_browsers tr.alt {
  background:rgba(0,0,0,0.02);
}

#supported_browsers th, #supported_browsers td {
  padding:4px;
  border:1px solid #8a9ab2;
  -moz-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  -webkit-box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
  box-shadow:inset rgba(255,255,255,0.5) 0 1px 0;
}

#supported_browsers th {
  color:#1c263b;
  font-weight:600;
  border-color:#51637d;
  background:rgba(0,0,0,0.04);
  font-size:13px;
  -moz-box-shadow:inset rgba(255,255,255,0.3) 0 1px 0;
  -webkit-box-shadow:inset rgba(255,255,255,0.3) 0 1px 0;
  box-shadow:inset rgba(255,255,255,0.3) 0 1px 0;
}

#supported_browsers table th, #supported_browsers table td {
  border:none;
}

#supported_browsers .platform {text-align:center;border-bottom:none;}
#supported_browsers tr.last .platform {border-bottom:1px solid #8a9ab2;}
#supported_browsers .platform.empty {
  border-bottom:none;
  border-top:none;
  -moz-box-shadow:none;
  -webkit-box-shadow:none;
  box-shadow:none;
}
#supported_browsers .browser {
  font-size:13px;
  text-align:center;
}

#supported_browsers .html5, #supported_browsers .flash {
  padding:0;
  text-align:center;
  font-size:12px;
  text-transform:uppercase;
}

#supported_browsers .html5 th, #supported_browsers .flash th {
  text-transform:none;
}

#supported_browsers .html5 span, #supported_browsers .flash span {
  display:none;
}

#supported_browsers td.html5.yes, #supported_browsers td.flash.yes {
  background:#cff1d1;
  color:#006a06;
  width:90px;
}

#supported_browsers td.html5.yes.partial {
  background:#f1ebcf;
  color:#6a4800;
}

#supported_browsers td.html5.yes td.icon, #supported_browsers td.flash.yes td.icon {
  height:40px;
  background:url(<%= asset_data_uri 'docs/check_icon.png' %>) no-repeat center;
}

#supported_browsers td.html5.yes.partial td.icon {background:url(<%= asset_data_uri 'docs/warning_icon.png' %>) no-repeat center;}

#supported_browsers tr.labels td {
  width:30px;
  border:1px solid #77aa78;
  border-bottom:none;
}

#supported_browsers tr.labels td:first-child {
  border-left:none;
}

#supported_browsers td.html5.no, #supported_browsers td.flash.no {
  background:#f1cfcf;
}

#supported_browsers td.notes {
  width:190px;
  font-size:12px;
  line-height:14px;
}

#supported_browsers strong {
  color:#1c263b;
  font-weight:600;
}

#zoomable a {
  display:block;
  width:180px;
  height:76px;
  background:#000;
  position:relative;
  -webkit-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  -moz-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
}

#zoomable a:hover {
  padding-bottom:0;
  border-bottom:0;
  -webkit-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  -moz-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
}

#zoomable a span.zoom_icon {
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  background:url(<%= asset_data_uri 'docs/demo/zoom_icon.png' %>) no-repeat bottom right;
  opacity:0.3;
  -o-transition:opacity 0.25s;
  -moz-transition:opacity 0.25s;
  -webkit-transition:opacity 0.25s;
  transition:opacity 0.25s;
}

#zoomable a:hover span.zoom_icon {opacity:1}
