@import "css3";

#addons table {
  margin:10px 0 0;
  width:100%;
  border-collapse:collapse;
  border:none;
  @include gradient(#dbe8ff,#c4d1e8,#cddaf1);
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.9) 0 1px 0, rgba(0,32,79,0.5) 0 1px 4px));
}

#addons table th {
  background:#20355a;
  padding:14px 20px;
  color:#c5dbff;
  font-size:20px;
  font-weight:600;
  text-align:left;
  text-shadow:rgba(0,0,0,0.9) 0 -1px 0;
}

#addons table th a {
  color:#c5dbff;
}

#addons table th a .icon-arrow {
  margin-left:3px;
}

#addons table tr:first-child th {
  @include border-radius(4px 4px 0 0);
}

#addons table td {
  padding:15px 20px;
  border-bottom:1px solid #83a3d4;
  @include box-shadow(rgba(255,255,255,0.5) 0 2px 0);
}

#addons table td h5.checked {
  font-size:16px;
  font-weight:600;
  padding-left:32px;
  background:url(<%= asset_path "addons/checked_icon@2x.png" %>) no-repeat 0 50%;
  background-size:22px 17px;
}

#addons table tr.highlight {
  background:#98cdff;
}

#addons table tr:last-child td {
  border-bottom:none;
  @include box-shadow(none);
}

#addons table td.trial_notice {
  width:220px;
  text-align:right;
}

#addons table td.price {
  width:130px;
  text-align:center;
  font-size:18px;
  font-weight:600;
  color:#1e3966;
  border-left:1px solid #83a3d4;
}

#addons table td.price em {
  font-size:16px;
}

#addons .trial_days_remaining {
  color:#51688f;
  font-style:italic;
  font-size:14px;
  font-weight:600;
}

#addons table td.break_box {
  padding:6px;
  background:rgba(113,134,172,0.45);
}

#addons_total {
  font-size:25px;
  font-weight:600;
}
