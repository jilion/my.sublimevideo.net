@import "css3";

body {
  background:#8ea6c2 url(<%= asset_data_uri "my/back_texture.png" %>);
}

header, header .shadow, header .lights {
  height:268px;
}


.notices ul {
  list-style-type:none;
}

.notice {
  position:relative;
  padding:10px 12px;
  margin:7px 0;
  font-size:14px;
  color:#6e4b00;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
  @include gradient(#fcf3cc,#f8e9a1,#faedb3);
  @include border-radius(4px);
  @include box-shadow((inset #fff 0 1px 0, rgba(0,33,68,0.5) 0 1px 3px));
}

.notice a {
  color:#6e4b00;
  font-weight:600;
  border-bottom: 1px solid #d6c482;
}

.notice button.close {
  position:absolute;
  top:35%;
  right:12px;
  width:13px;
  height:14px;
  border:none;
  cursor:pointer;
  background:url(<%= asset_data_uri "my/notice_hide_arrow.png" %>);
}

.notice button.close span {display:none}

#flash {
  position:absolute;
  width:880px;
  height:40px;
  margin:0 auto;
  left:0;
  right:0;
  top:120px;
  overflow:hidden;
}

#flash div {
  margin:0;
  padding:8px 12px 10px;
}

#flash .alert {
  color:#6e0000;
  @include gradient(#fccccc,#f8a1a1,#fcc1c1);
}

#content {
  width:968px;
  margin:-120px auto 0;
  background:url(<%= asset_path "my/top_rounded_box.png" %>) no-repeat;
  color:#1e3966;
  text-shadow:rgba(255,255,255,0.25) 0 1px 0;
  position:relative;
  z-index:2;
  min-height:606px;
}

.content_wrapper {
  width:880px;
  margin:0 auto;
  padding-top:20px;
}

#content h2 {
  color:#1e3966;
  font-size:48px;
  font-weight:100;
  padding:20px 0;
}

#content h2 select {
  height:60px;
  padding:0 30px 0 10px;
  background:url(<%= asset_data_uri "my/big_select_back.png" %>) no-repeat right top;
  font-family:inherit;
  color:#1e3966;
  font-size:48px;
  font-weight:100;
  border: 1px solid #5e75a2;
  text-shadow:rgba(255,255,255,0.25) 0 1px 0;
  @include box-shadow(rgba(255,255,255,0.2) 0 1px 0);
  -webkit-appearance:none;
}

#content .tooltip {
  position:relative;
  display:block;
  padding-top:2px;
  top:-2px;
}

#content .tooltip .icon {
  display:block;
  cursor:pointer;
}

#content .tooltip.warning .icon {
  width:22px;
  height:22px;
  background:url(<%= asset_data_uri "my/warning_icon.png" %>) no-repeat;
}

#content .tooltip .icon span {
  display:none;
}

#content .tooltip .content {
  display:none;
  position:absolute;
  bottom:30px;
  left:-54px;
  z-index:10;
  width:130px;
  font-size:12px;
  line-height:14px;
  text-align:center;
  color:#c5d4eb;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border: 1px solid #182437;
  @include gradient(#46536c,#222f48,#35425b);
  @include border-radius(5px);
  @include box-shadow((inset rgba(255,255,255,0.2) 0 1px 0, #00183a 0 1px 5px));
}

#content .tooltip:hover .content {display:block;}

#content .tooltip .content a {
  color:#c5d4eb;
  text-decoration:underline;
}

#content .tooltip .content .arrow {
  display:block;
  width:13px;
  height:8px;
  background:url(<%= asset_data_uri "my/tooltip_bottom_arrow.png" %>) no-repeat;
  position:absolute;
  bottom:-7px;
  left:0;
  right:0;
  margin:0 auto;
}

#content .tooltip .content .p {
  display:block;
  padding:8px 6px 9px;
}

#content .tagline {
  padding:0 0 25px;
  text-align:center;
}

#content .tagline h3 {
  font-size:36px;
  font-weight:600;
}

#content .tagline h4 {
  font-size:30px;
  font-weight:100;
  padding-top:5px;
}

form .entry {
  position:relative;
  margin:10px 0;
}

form label.icon {
  display:block;
  position:absolute;
  text-indent:-9999px;
  overflow:hidden;
  z-index:2;
}

form .entry input.text {
  width:385px;
  height:40px;
  background:#f1f6ff;
  text-shadow:#fff 0 1px 0;
  border:1px solid #335994;
  font-size:22px;
  font-family:inherit;
  color:#1e3966;
  padding:0 5px 0 40px;
  @include border-radius(5px);
  @include box-shadow((inset rgba(0,34,85,0.3) 0 1px 3px, rgba(255,255,255,0.4) 0 1px 0));
}

form .entry ::-webkit-input-placeholder, form .entry input.text.placeholder {
  color:#7690b3;
}

form .entry input:-moz-placeholder, form .entry textarea:-moz-placeholder {
  color:#7690b3;
}

form .entry .text:focus {
  outline:0;
  @include box-shadow((inset rgba(0,34,85,0.3) 0 1px 3px, rgba(255,255,255,0.1) 0 1px 0, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

.radio_wrap, .checkbox_wrap {
  position:relative;
}

.radio_wrap input, .checkbox_wrap input {
  position:relative;
  top:0;
  left:0;
  opacity:0;
  width:34px;
  height:34px;
  z-index:2;
  float:left;
}

.checkbox_wrap label {
  position:relative;
  display:block;
  height:24px;
  padding:10px 0 0 40px;
  left:-6px;
  background:url(<%= asset_data_uri "my/custom_checkbox.png" %>) no-repeat;
}

.radio_wrap span.bg {
  display:block;
  position:absolute;
  z-index:1;
  top:0;
  left:0;
  width:34px;
  height:34px;
  background:url(<%= asset_data_uri "my/custom_radio.png" %>) no-repeat;
}

.checkbox_wrap input:checked + label, .radio_wrap input:checked + span.bg {background-position:0 -34px}
.checkbox_wrap input:focus + label, .radio_wrap input:focus + span.bg {background-position:0 -68px}
.checkbox_wrap input:focus:checked + label, .radio_wrap input:focus:checked + span.bg {background-position:0 -102px}


.big_break {
  width:868px;
  height:21px;
  margin:0 auto;
  background:url(<%= asset_data_uri "my/big_break.png" %>);
}

.green_button {
  font-family:inherit;
  color:#fff;
  text-shadow:rgba(0,0,0,0.9) 0 -1px 0;
  border:1px solid #1a4224;
  @include gradient(#00b95a,#007d31,#009843);
  @include box-shadow((inset #00e896 0 1px 0, #001a41 0 1px 4px));
  @include border-radius(6px);
}

.green_button:active {
  @include gradient(#007d31,#00b95a,#009843);
}

.green_button:focus {
  outline:0;
  @include box-shadow((inset #00e896 0 1px 0, #001a41 0 1px 4px, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

/* ======== */
/* = Site = */
/* ======== */

form .entry.site {
  margin:25px 0;
}

form .entry.site .left {
  float:left;
}

form .site label.icon {
  width:20px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/domain_icon.png" %>) no-repeat;
  top:12px;
  left:10px;
}

form .entry.site p.desc {
  float:left;
  padding:12px 0 0 18px;
  font-size:18px;
}

form .entry.site .checkbox_wrap {
  margin:10px 0;
}

form .actions.center {
  padding:35px 0 45px;
  text-align:center;
}

form .actions.center .submit {
  display:inline-block;
  padding:15px 22px;
  font-size:26px;
  @inline border-radius(12px);
}

.update_plan_message_box {
  margin-bottom:20px;
}

#billing_infos {
  margin:15px 0;
  width:398px;
  padding:12px 16px;
  line-height:22px;
  background:#94a5c1;
  background:rgba(30,57,102,0.1);
  @include box-shadow((inset rgba(0,47,99,0.6) 0 1px 3px, inset rgba(255,255,255,0.2) 0 1px 0));
  @include border-radius(4px);
}

#billing_infos a {
  color:#1e3966;
  font-weight:600;
  border-bottom:1px solid #7387a6;
}

#credit_card_summary p.card {
  margin-top:10px;
  padding:4px 50px 8px;
  background-repeat:no-repeat;
}

#credit_card_summary p.visa {background-image:url(<%= asset_data_uri "my/credit_cards/visa.png" %>)}
#credit_card_summary p.master {background-image:url(<%= asset_data_uri "my/credit_cards/mastercard.png" %>)}




