/*
*= require 'global'
*/

@import "css3";

body {
  background:#8ea6c2 url(<%= asset_data_uri "my/back_texture.png" %>);
}

header, header .shadow, header .lights {
  height:268px;
}

#content {
  width:968px;
  margin:-120px auto 0;
  background:url(<%= asset_path "my/top_rounded_box.png" %>) no-repeat;
  color:#1e3966;
  text-shadow:rgba(255,255,255,0.25) 0 1px 0;
}

.content_wrapper {
  width:880px;
  margin:0 auto;
}

#content h2 {
  color:#1e3966;
  font-size:48px;
  font-weight:100;
  padding:40px 0;
}

#site_quick_switch, #trial {display:none;}

.stats #period_selectors {
  list-style-type:none;
}

.stats #period_selectors li {
  width:138px;
  height:82px;
  padding:8px 10px;
  margin-right:18px;
  float:left;
  border: 1px solid #192d4c;
  text-align:center;
  color:#d5e5ff;
  text-shadow:#000 0 -1px 0;
  @include gradient(rgba(56,71,100,0.8),rgba(29,46,79,0.8),#405371);
  @include border-radius(5px);
  @include box-shadow((inset #6981a6 0 1px 0, #283953 0 1px 5px));
}

.stats #period_selectors li.selected {
  border-color:#0a1b37;
  @include gradient(rgba(16,53,118,0.8),rgba(28,76,171,0.8),#164292);
  @include box-shadow((inset rgba(0,0,0,0.8) 0 1px 18px, rgba(255,255,255,0.2) 0 1px 0));
}

.stats #period_selectors li:last-child {
  margin-right:0;
}

.stats #period_selectors li * {cursor:pointer}

.stats #period_selectors li span.title {
  display:block;
  font-size:12px;
  text-transform:uppercase;
  letter-spacing:1px;
  padding:0 0 4px;
}

.stats #period_selectors li span.vv_total {
  display:block;
  font-size:18px;
  font-weight:500;
  padding:5px 0 0;
}

.stats #dates_range {
  position:relative;
}

.stats #dates_range_title {
  float:left;
  margin:25px 0;
  font-weight:normal;
}

.stats #dates_range_title.editable {
  position:relative;
  padding:12px 25px 10px 15px;
  border: 1px solid #5e75a2;
  cursor:pointer;
  @include gradient(rgba(255,255,255,0.25), rgba(255,255,255,0), #98acc6);
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.6) 0 1px 0, rgba(255,255,255,0.2) 0 1px 0))
}

.stats #dates_range_title.editable:active {
  @include gradient(rgba(255,255,255,0), rgba(255,255,255,0.25), transparent);
}

.stats #dates_range_title.editable .arrow {
  display:block;
  width:9px;
  height:7px;
  background:url(<%= asset_data_uri "my/select_arrow.png" %>) no-repeat;
  position:absolute;
  right:13px;
  top:48%;
}

.stats #dates_range_title .left, .stats #dates_range_title .right {
  display:block;
  float:left;
  padding:0 10px 0 0;
}

.stats #dates_range_title .middle {
  display:block;
  float:left;
  padding:0 10px 0 0;
}

.stats #dates_range_title .day {
  font-size:24px;
  font-weight:600;
  display:block;
}

.stats #dates_range_title .time {
  display:block;
  font-size:16px;
  color:#465b7d;
  font-weight:normal;
  padding:0 0 0 16px;
  background:url(<%= asset_data_uri "my/stats/clock_icon.png" %>) no-repeat 0 4px;
}

.stats #date_pickers {
  display:none;
  position:absolute;
  top:25px;
  left:0;
  z-index:20;
  width:600px;
/*  height:350px;*/
  border: 1px solid #395176;
  @include gradient(#c8d6eb, #b4c7e3, #bfcfe7);
  @include border-radius(5px);
  @include box-shadow((inset #fff 0 1px 0, rgba(0,36,92,0.75) 0 1px 10px));
}

.stats #date_pickers .box {
  width:280px;
  float:left;
  padding:0 0 0 14px;
}

.stats #date_pickers h4 {
  font-size:17px;
  font-weight:600;
  padding:15px 0 10px;
  text-shadow:#fff 0 1px 0;
}

.stats #date_pickers .picker {
  width:279px;
  padding-bottom:6px;
  @include gradient(#e0e8f3, #c5d4e9, #d5dfef);
  @include border-radius(5px);
  @include box-shadow((inset #fff 0 1px 0, rgba(0,41,105,0.72) 0 1px 3px));
}

.stats #date_pickers .ui-datepicker-header {
  padding:15px 0 6px;
}

.stats #date_pickers .ui-datepicker-prev, .stats #date_pickers .ui-datepicker-next {
  display:block;
  width:16px;
  height:16px;
  margin:0 16px;
  float:left;
  margin-top:2px;
  cursor:pointer;
  background:url(<%= asset_data_uri "my/stats/date_picker_arrow_left.png" %>) no-repeat;
}

.stats #date_pickers .ui-datepicker-next {
  float:right;
  background:url(<%= asset_data_uri "my/stats/date_picker_arrow_right.png" %>) no-repeat;
}

.stats #date_pickers .ui-datepicker-header .ui-state-disabled {
  cursor:default;
  opacity: 0.3;
  filter: alpha(opacity=30);
}

.stats #date_pickers .ui-datepicker-prev span, .stats #date_pickers .ui-datepicker-next span {display:none}

.stats #date_pickers .ui-datepicker-title {
  width:176px;
  margin:0 auto;
}

.stats #date_pickers .ui-datepicker-title select {
  width:80px;
  height:21px;
  padding-left:5px;
  border:1px solid #9aaac4;
  font-family:inherit;
  font-size:14px;
  color:#4a648e;
  text-shadow:#fff 0 1px 0;
  background:url(<%= asset_data_uri "my/stats/date_picker_select_back.png" %>) no-repeat 100% 0;
  @include border-radius(4px);
  @include box-shadow(rgba(255,255,255,0.4) 0 1px 0);
  -webkit-appearance:none;
}

.stats #date_pickers .ui-datepicker-month {
  margin-right:10px;
}

.stats #date_pickers .ui-datepicker-calendar {
  border-collapse:collapse;
  width:266px;
  text-align:center;
  margin:0 6px;
}

.stats #date_pickers .ui-datepicker-calendar th {
  font-size:13px;
  color:#4a648e;
}

.stats #date_pickers .ui-datepicker-calendar td {
  width:36px;
  height:36px;
  font-size:18px;
  font-weight:600;
  color:#1e3966;
  border: 1px solid #acbad1;
  @include gradient(#dbe4f4,#c1cfe3,#cdd9ec);
  @include box-shadow(inset rgba(255,255,255,0.2) 1px 1px 0)
}

.stats #date_pickers .ui-datepicker-calendar td a, .stats #date_pickers .ui-datepicker-calendar td span {
  color:#1e3966;
  display:block;
  width:37px;
  height:36px;
  line-height:38px;
}

.stats #date_pickers .ui-datepicker-calendar td a.ui-state-active {
  color:#f1f6ff;
  text-shadow:rgba(0,0,0,0.5) 0 -1px 0;
  @include gradient(#1d52aa,#3a7cd3,#2a67bf);
  @include box-shadow(inset rgba(0,0,0,1) 0 1px 9px);
}

.stats #date_pickers .ui-datepicker-calendar td.ui-state-disabled span {
  color:#a7b7d0;
}

.stats #date_pickers .actions {
  float:right;
  padding:14px;
}

.stats #date_pickers button.cancel {
  background:none;
  border:none;
  outline:0;
  font-family:inherit;
  color:#4a648e;
  font-weight:600;
  font-size:14px;
  display:inline;
  cursor:pointer;
  border-bottom:1px solid #9aafce;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
}

.stats #date_pickers button.apply {
  margin-left:10px;
  font-family:inherit;
  font-size:18px;
  font-weight:600;
  color:#f1f6ff;
  border:1px solid #263c5e;
  text-shadow:rgba(0,0,0,0.5) 0 -1px 0;
  padding:6px 12px;
  @include gradient(#8b9cb8,#4a5e7e,#637898);
  @include border-radius(5px);
  @include box-shadow((inset rgba(255,255,255,0.22) 0 1px 0, #001d3d 0 1px 4px));
}

.stats #date_pickers button.apply:active {
  @include gradient(#4a5e7e,#8b9cb8,#637898);
}


