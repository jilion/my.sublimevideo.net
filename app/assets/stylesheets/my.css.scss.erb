/*
*= require 'global'
*= require 'sites'
*= require 'stats'
*= require 'plans'
*/

@import "css3";

body {
  background:#8ea6c2 url(<%= asset_data_uri "my/back_texture.png" %>);
}

header, header .shadow, header .lights {
  height:268px;
}


.notices ul {
  list-style-type:none;
}

.notice {
  position:relative;
  padding:10px 12px;
  margin:7px 0;
  font-size:14px;
  color:#6e4b00;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
  @include gradient(#fcf3cc,#f8e9a1,#faedb3);
  @include border-radius(4px);
  @include box-shadow((inset #fff 0 1px 0, rgba(0,33,68,0.5) 0 1px 3px));
}

.notice a {
  color:#6e4b00;
  font-weight:600;
  border-bottom: 1px solid #d6c482;
}

.notice button.close {
  position:absolute;
  top:35%;
  right:12px;
  width:13px;
  height:14px;
  border:none;
  cursor:pointer;
  background:url(<%= asset_data_uri "my/notice_hide_arrow.png" %>);
}

.notice button.close span {display:none}

#flash {
  position:absolute;
  width:880px;
  height:40px;
  margin:0 auto;
  left:0;
  right:0;
  top:120px;
  overflow:hidden;
}

#flash div {
  margin:0;
  padding:8px 12px 10px;
}

#flash .alert {
  color:#6e0000;
  @include gradient(#fccccc,#f8a1a1,#fcc1c1);
}

#content {
  width:968px;
  margin:-120px auto 0;
  background:url(<%= asset_path "my/top_rounded_box.png" %>) no-repeat;
  color:#1e3966;
  text-shadow:rgba(255,255,255,0.25) 0 1px 0;
  position:relative;
  z-index:2;
  min-height:606px;
}

.content_wrapper {
  width:880px;
  margin:0 auto;
  padding-top:20px;
}

#content h2 {
  color:#1e3966;
  font-size:48px;
  font-weight:100;
  padding:20px 0;
}

#content h2 select {
  height:60px;
  padding:0 30px 0 10px;
  background:url(<%= asset_data_uri "my/big_select_back.png" %>) no-repeat right top;
  font-family:inherit;
  color:#1e3966;
  font-size:48px;
  font-weight:100;
  border: 1px solid #5e75a2;
  text-shadow:rgba(255,255,255,0.25) 0 1px 0;
  @include box-shadow(rgba(255,255,255,0.2) 0 1px 0);
  -webkit-appearance:none;
}

#content .tooltip {
  position:relative;
  display:block;
  padding-top:2px;
  top:-2px;
}

#content .tooltip .icon {
  display:block;
  cursor:pointer;
}

#content .tooltip.warning .icon {
  width:22px;
  height:22px;
  background:url(<%= asset_data_uri "my/warning_icon.png" %>) no-repeat;
}

#content .tooltip .icon span {
  display:none;
}

#content .tooltip .content {
  display:none;
  position:absolute;
  bottom:30px;
  left:-54px;
  z-index:10;
  width:130px;
  font-size:12px;
  line-height:14px;
  text-align:center;
  color:#c5d4eb;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border: 1px solid #182437;
  @include gradient(#46536c,#222f48,#35425b);
  @include border-radius(5px);
  @include box-shadow((inset rgba(255,255,255,0.2) 0 1px 0, #00183a 0 1px 5px));
}

#content .tooltip:hover .content {display:block;}

#content .tooltip .content a {
  color:#c5d4eb;
  text-decoration:underline;
}

#content .tooltip .content .arrow {
  display:block;
  width:13px;
  height:8px;
  background:url(<%= asset_data_uri "my/tooltip_bottom_arrow.png" %>) no-repeat;
  position:absolute;
  bottom:-7px;
  left:0;
  right:0;
  margin:0 auto;
}

#content .tooltip .content .p {
  display:block;
  padding:8px 6px 9px;
}

#content .tagline {
  padding:0 0 25px;
  text-align:center;
}

#content .tagline h3 {
  font-size:36px;
  font-weight:600;
}

#content .tagline h4 {
  font-size:30px;
  font-weight:100;
  padding-top:5px;
}

#content .content_left {
  width:432px;
  padding-right:80px;
  float:left;
}

#content .content_right {
  width:368px;
  float:left;
/*  position:relative;*/
}

form .entry {
  position:relative;
  margin:10px 0;
}

form .entry .left_field, form .entry .right_field {
  float:left;
}


form label.icon {
  display:block;
  position:absolute;
  text-indent:-9999px;
  overflow:hidden;
  z-index:2;
}

form .entry input.text {
  width:385px;
  height:40px;
  background:#f1f6ff;
  text-shadow:#fff 0 1px 0;
  border:1px solid #335994;
  font-size:22px;
  font-family:inherit;
  color:#1e3966;
  padding:0 5px 0 40px;
  @include border-radius(5px);
  @include box-shadow((inset rgba(0,34,85,0.3) 0 1px 3px, rgba(255,255,255,0.4) 0 1px 0));
}

form .entry input.text.no_icon {
  width:415px;
  padding-left:10px;
}

form .entry.small_field input.text {
  width:104px;
}

form .entry .left_field input.text, form .entry .left_field input.text.no_icon {
  width:194px;
  margin-right:10px;
}

form .entry .right_field input.text, form .entry .right_field input.text.no_icon {
  width:194px;
}

form .entry input.text.errors {
  background:#ffd9d9;
}

form .entry ::-webkit-input-placeholder, form .entry input.text.placeholder {color:#7690b3}
form .entry .errors::-webkit-input-placeholder, form .entry input.text.errors.placeholder {color:#b37676}
form .entry input:-moz-placeholder, form .entry textarea:-moz-placeholder {color:#7690b3}
form .entry input.errors:-moz-placeholder, form .entry textarea.errors:-moz-placeholder {color:#b37676}

form .entry .text:focus {
  outline:0;
  @include box-shadow((inset rgba(0,34,85,0.3) 0 1px 3px, rgba(255,255,255,0.1) 0 1px 0, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

form .entry.select select {
  height:41px;
  font-family:inherit;
  font-size:22px;
  color:#4a648e;
  padding:0 24px 0 10px;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
  background:url(<%= asset_data_uri "my/custom_select.png" %>) no-repeat right top;
  border:1px solid #335994;
  @include border-radius(5px);
  @include box-shadow((inset rgba(255,255,255,0.8) 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
  -webkit-appearance:none;
}

form .entry.select select:focus {
  @include box-shadow((inset rgba(255,255,255,0.8) 0 1px 0, rgba(255,255,255,0.1) 0 1px 0, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

form .entry.select .left_field select, form .entry.select .right_field select {width:211px}

.radio_wrap, .checkbox_wrap {
  position:relative;
  margin-top:4px;
}

.radio_wrap input, .checkbox_wrap input {
  position:relative;
  top:0;
  left:0;
  opacity:0;
  width:34px;
  height:34px;
  z-index:2;
  float:left;
}

.checkbox_wrap label {
  position:relative;
  display:block;
  height:24px;
  padding:10px 0 0 40px;
  left:-6px;
  background:url(<%= asset_data_uri "my/custom_checkbox.png" %>) no-repeat;
}

.radio_wrap span.bg, form .entry .radio_wrap label {
  display:block;
  position:absolute;
  z-index:1;
  top:0;
  left:0;
  width:34px;
  height:34px;
  background:url(<%= asset_data_uri "my/custom_radio.png" %>) no-repeat;
}

.checkbox_wrap input:checked + label, form .entry .radio_wrap input:checked + label, .radio_wrap input:checked + span.bg {background-position:0 -34px}
.checkbox_wrap input:focus + label, form .entry .radio_wrap input:focus + label, .radio_wrap input:focus + span.bg {background-position:0 -68px}
.checkbox_wrap input:focus:checked + label, form .entry .radio_wrap input:focus:checked + label, .radio_wrap input:focus:checked + span.bg {background-position:0 -102px}

form .inline_errors span {
  padding:2px 5px 2px;
  font-size:13px;
  color:#fff;
  text-shadow:rgba(0,0,0,0.4) 0 -1px 0;
  display:inline;
  position:relative;
  top:-1px;
  left:10px;
  border:1px solid #264067;
  z-index:2;
  @include gradient(#df001b,#8c0006,#b40011);
  @include border-radius(0 0 4px 4px);
  @include box-shadow((inset #f4002d 0 1px 0, rgba(0,0,0,0.4) 0 1px 3px))
}

form .inline_errors.plan span, #content form .entry.card .inline_errors span {
  @include border-radius(4px);
}

.big_break {
  width:868px;
  height:21px;
  margin:0 auto;
  background:url(<%= asset_data_uri "my/big_break.png" %>);
}

.green_button, .blue_button {
  font-family:inherit;
  color:#fff;
  text-shadow:rgba(0,0,0,0.9) 0 -1px 0;
  border:1px solid #1a4224;
  @include gradient(#00b95a,#007d31,#009843);
  @include box-shadow((inset #00e896 0 1px 0, #001a41 0 1px 4px));
  @include border-radius(6px);
}

.blue_button {
  display:inline-block;
  padding:10px 18px;
  font-size:24px;
  font-size:22px;
  border-color:#15253b;
  @include gradient(#6685ae,#314f78,#4b6a93);
  @inline border-radius(12px);
  @include box-shadow((inset #8da4c3 0 1px 0, #001a41 0 1px 4px));
}

.green_button:active {
  @include gradient(#007d31,#00b95a,#009843);
}

.blue_button:active {
  @include gradient(#314f78,#6685ae,#4b6a93); 
}

.green_button:focus, .blue_button:focus {
  outline:0;
  @include box-shadow((inset #00e896 0 1px 0, #001a41 0 1px 4px, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

.blue_button:focus {  
  @include box-shadow((inset #8da4c3 0 1px 0, #001a41 0 1px 4px, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

.green_button:disabled, .blue_button:disabled {
  opacity:0.5;
  filter:alpha(opacity=50);
}

/* =============== */
/* = Label Icons = */
/* =============== */

form .site label.icon {
  width:20px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/domain_icon.png" %>) no-repeat;
  top:12px;
  left:10px;
}

form .entry.password label.icon {
  width:16px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/password_icon.png" %>) no-repeat;
  top:10px;
  left:12px;
}

form .entry.email label.icon {
  width:20px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/email_icon.png" %>) no-repeat;
  top:12px;
  left:10px;
}

form .name label.icon {
  width:18px;
  height:18px;
  background:url(<%= asset_data_uri "my/fields/user_icon.png" %>) no-repeat;
  top:12px;
  left:12px;
}

form .entry.card_number label.icon {
  width:20px;
  height:16px;
  background:url(<%= asset_data_uri "my/fields/card_icon.png" %>) no-repeat;
  top:14px;
  left:12px;
}

/* ================== */
/* = Forms & Extras = */
/* ================== */

h3.section_title {
  font-size:20px;
  font-weight:600;
  padding:15px 0 5px;
}

form .entry.update {
  padding:10px 0 20px;
}

form .entry.use {
  padding-top:10px;
}

form .break, .small_note .break {
  height:1px;
  margin:15px 0 10px;
  background:#728aab;
  border-bottom:1px solid rgba(255,255,255,0.4);
}

form p.note {
  margin:20px 0 -4px;
  font-size:13px;
  font-weight:600;
  padding:2px 0 2px 22px;
  background:url(<%= asset_data_uri "my/note_icon.png" %>) no-repeat;
}

.dark_box {
  line-height:22px;
  margin:5px 0 12px;
  padding:14px 16px 12px;
  background:#94a5c1;
  background:rgba(30,57,102,0.1);
  @include box-shadow((inset rgba(0,47,99,0.6) 0 1px 4px, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(4px);
}

.dark_box a {
  color:#1e3966;
  font-weight:600;
  border-bottom:1px solid #7387a6;
}

.dark_box h4 {
  font-size:18px;
  font-weight:600;
  padding:0 0 10px;
}

.dark_box p.link {
  padding:10px 0 0;
}

.dark_box p.alert {
  color:#9e0000;
  padding:0 0 10px;
}

.dark_box p.alert a {
  color:#9e0000;
  border-color:#a67373;
}

#content .content_right .dark_box {
  width:336px;
}

/* ======== */
/* = Site = */
/* ======== */

form .entry.site {
  margin:25px 0;
}

form .entry.site .left {
  float:left;
}

form .entry.site p.desc {
  float:left;
  padding:12px 0 0 18px;
  font-size:18px;
}

form .entry.site .checkbox_wrap {
  margin:10px 0;
}

form .actions.center {
  padding:35px 0 45px;
  text-align:center;
}

form .actions.center .submit {
  display:inline-block;
  padding:15px 22px;
  font-size:26px;
  @inline border-radius(12px);
}

form .entry.card .radio_wrap {
  float:left;
  margin-right:32px;
}

form .entry.card label {
  height:25px;
  padding:9px 0 0 36px;
  position:relative;
}

form .entry.card label span {
  display:block;
  text-indent:-9999px;
  width:43px;
  height:29px;
  position:relative;
  top:-6px;
}

form .entry.card label.visa span {
  background-repeat:no-repeat;
}

form .entry.float, form .entry.small_field {
  float:left;
}

form .entry.small_field {
  margin-left:20px;
}

form .entry.float label, form .entry.small_field label {
  display:block;
  font-size:13px;
  font-weight:600;
  padding:0 0 4px;
}

form .entry.float select {
  margin-right:5px;
}

#content form .entry .radio_wrap .inline_errors {
  position:absolute;
  left:200px;
  top:7px;
  white-space:nowrap;
}

.update_plan_message_box {
  margin-bottom:20px;
}

#balance p.current {
  font-size:17px;
}

#balance p.desc {
  font-size:13px;
  padding:6px 0 0;
  line-height:18px;
}

#billing_info {
  width:398px;
}

#billing_address {
  padding-bottom:10px;
}

#credit_card_summary p.card {
  padding:4px 50px 8px;
  background-repeat:no-repeat;
}

#credit_card_summary p.visa, form .entry.card label.visa span {background-image:url(<%= asset_data_uri "my/credit_cards/visa.png" %>)}
#credit_card_summary p.master, form .entry.card label.master span {background-image:url(<%= asset_data_uri "my/credit_cards/mastercard.png" %>)}

#delete_account {
  font-size:13px;
  line-height:18px;
}

#delete_account h3.section_title {
  padding-bottom:10px;
}

#delete_account ul {
  padding:0 20px;
}

#delete_account input.delete {
  border:none;
  background:url(<%= asset_data_uri "my/delete_account_cross.png" %>) no-repeat;
  cursor:pointer;
  font-family:inherit;
  text-shadow:rgba(255,255,255,0.3) 0 1px 0;
  color:#9e0000;
  font-size:13px;
  font-weight:600;
  padding:0 0 4px 22px;
}

#content .content_right .dark_box.info_secure_note {
  width:270px;
  padding-left:82px;
  font-size:14px;
  background-image:url(<%= asset_data_uri "my/credit_cards/secure_icon.png" %>);
  background-repeat:no-repeat;
  background-position:20px 50%;
}

.small_note {
  width:430px;
  font-size:12px;
  line-height:20px;
  padding:0 0 20px;
}

a.hl {
  color:#1e3966;
  font-weight:600;
  border-bottom:1px solid #7387a6;
}

