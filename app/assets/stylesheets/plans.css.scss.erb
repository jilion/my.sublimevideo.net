@import "css3";

#plans {
  padding:25px 0 0;
}

#plans ul {
  list-style-type:none;
}

#plans > ul > li {
  float:left;
  width:260px;
  height:500px;
  position:relative;
  background:url(<%= asset_path "sites/help_list_back.png" %>);
  @include border-radius(4px);
  @include box-shadow((inset #fff 0 1px 0, rgba(0,53,137,0.78) 0 1px 5px));
}

#plans > ul > li.plus {
  margin:0 50px;
  background-position:-100px;
}

#plans > ul > li.premium {
  background-position:300px;
}

#plans li h3.title {
  width:276px;
  height:74px;
  background:url(<%= asset_path "plans/plan_banner_1.png" %>) no-repeat;
  position:relative;
  left:-8px;
  margin-top:10px;
  text-align:center;
  color:#f1f7ff;
  font-size:38px;
  font-weight:normal;
  line-height:74px;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
}

#plans li.plus h3.title, #plans li.premium h3.title {
  background:url(<%= asset_path "plans/plan_banner_2.png" %>) no-repeat;
}

#plans ul.features {
  width:236px;
  margin:0 auto;
}

#plans ul.features li {
  padding:13px 0;
  background:url(<%= asset_path "plans/features_break.png" %>) no-repeat center bottom;
}

#plans ul.features li.ssl {background:none;}

#plans ul.features li .icon {
  display:block;
  width:54px;
  height:40px;
  float:left;
  margin-right:4px;
  background-position:center;
  background-repeat:no-repeat;
}

#plans ul.features li.plays .icon {background-image:url(<%= asset_path "plans/plays_icon.png" %>)}
#plans ul.features li.stats .icon {background-image:url(<%= asset_path "plans/stats_icon.png" %>)}
#plans ul.features li.support .icon {background-image:url(<%= asset_path "plans/support_icon.png" %>)}
#plans ul.features li.ssl .icon {background-image:url(<%= asset_path "plans/ssl_icon.png" %>)}

#plans ul.features li .right {
  float:left;
}

#plans ul.features li h4 {
  font-size:21px;
  font-weight:600;
  color:#00235a;
  padding-top:8px;
}

#plans ul.features li.stats h4, #plans ul.features li.plays h4 {
  padding-top:0;
}

#plans ul.features li.stats h4 {
  margin-top:-2px;
}

#plans ul.features li p.small_desc {
  font-size:12px;
  color:#6c95d1;
}

#plans ul.features li p.value {
  font-size:15px;
  font-weight:600;
  color:#6c95d1;
}

#plans ul.features li p.value span {
  color:#00235a;
}

#plans .select_box_wrap {
  width:260px;
  height:150px;
  position:absolute;
  bottom:0;
  left:0;
}

#plans .select_box {
  position:relative;
  width:130px;
  height:150px;
  float:left;
  border-top:1px solid #a3bbe2;
  text-shadow:#fff 0 1px 0;
  @include gradient(#e5f0ff,#d8e3f2,#e0ebfa);
  @include border-radius(0 0 0 4px);
  @include box-shadow(inset rgba(255,255,255,0.8) 0 1px 0);
}

#plans .select_box.yearly {
  width:129px;
  border-left:1px solid #a3bbe2;
  @include border-radius(0 0 4px 0);
  @include box-shadow(inset rgba(255,255,255,0.8) 1px 1px 0);
}

#plans li.free .select_box {
  width:260px;
  float:none;
  @include border-radius(0 0 4px 4px);
}

#plans .select_box.active {
  text-shadow:rgba(0,0,0,0.6) 0 -1px 0;
  @include gradient(#183460,#25416d,#1d3a65);
  @include box-shadow(inset #000 0 1px 21px);
}

#plans .select_box * {
  cursor:pointer;
}

#plans .select_box label {
  display:block;
  width:100%;
  height:150px;
}

#plans .select_box .radio_wrap {
  width:34px;
  height:34px;
  position:absolute;
  bottom:10px;
  left:0;
  right:0;
  top:auto;
  margin:0 auto;
}

#plans .select_box span.title, #plans .select_box span.pricing {
  display:block;
  position:absolute;
  top:40px;
  text-align:center;
  width:100%;
}

#plans .select_box span.title {
  top:45px;
}

#plans .select_box span.title, #plans .select_box span.pricing strong {
  color:#00235a;
  font-size:34px;
  font-weight:600;
}

#plans .select_box.active span.title, #plans .select_box.active span.pricing strong {
  color:#deebff;
  -webkit-font-smoothing:antialiased;
}

#plans .select_box span.pricing strong sup {
  font-size:16px;
}

#plans .select_box span.details_label {
  display:block;
  color:#4a76bb;
  font-size:13px;
}

#plans .select_box.active span.details_label {
  color:#bad4fa;
}

#plans .select_box span.name {display:none;}

#plans .select_box span.save_label {
  position:absolute;
  top:18px;
  left:0;
  right:0;
  margin:0 auto;
  display:block;
  width:100px;
  text-align:center;
  font-size:10px;
  letter-spacing:1px;
  color:#fff;
  padding:3px 0 2px;
  text-transform:uppercase;
  text-shadow:rgba(0,0,0,0.5) 0 -1px 0;
  @include gradient(#3496ff,#1e80e9,#298bf4);
  @include border-radius(4px);
  @include box-shadow(rgba(89,153,255,0.75) 0 1px 2px);
}

#plans .select_box.active span.save_label {
  @include box-shadow(rgba(0,0,0,0.75) 0 1px 2px);
}

#plans .select_box span.old_price {
  position:absolute;
  top:12px;
  left:0;
  right:0;
  margin:0 auto;
  display:block;
  width:100px;
  text-align:center;
  color:#728bb2;
  font-size:19px;
  font-weight:600;
}

#plans .select_box span.old_price .bar {
  width:51px;
  height:2px;
  background:#00235a;
  position:absolute;
  top:9px;
  left:25px;
  @include rotate(-25deg);
}

#plans .select_box.active span.old_price .bar {
  background:#deebff;
}

#plans .current_label {
  font-size:9px;
  color:#224375;
  text-transform:uppercase;
  letter-spacing:1px;
  display:inline-block;
  position:absolute;
  top:0;
  left:0;
  padding:2px 3px;
  text-shadow:rgba(255,255,255,0.3) 0 1px 0;
  @include gradient(#c0d5f5,#8fa5c5,#a6bcdc);
  @include border-radius(0 0 3px 0);
}

#need_more {
  padding:30px 0 20px;
  text-align:center;
}

#need_more a {
  color:#1e3966;
  font-weight:600;
  border-bottom:1px solid #7387a6;
}
