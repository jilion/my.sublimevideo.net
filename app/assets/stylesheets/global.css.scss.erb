@import "css3";

* {
  margin:0;
  padding:0;
}

body {
  font-family:proxima-nova-1,proxima-nova-2, Helvetica, Arial, sans-serif;
  font-size:16px;
  text-rendering:optimizeLegibility;
/*  -webkit-font-smoothing:antialiased;*/
}

header {
  min-width:1000px;
  height:583px;
  background:url(<%= asset_data_uri "global/header_repeat.png" %>) repeat-x;
}

header .lights {
  background:url(<%= asset_path "global/header_back_light.png" %>) center top no-repeat;
  height:583px;
}

header .shadow {
  height:583px;
  background:url(<%= asset_data_uri "global/header_inner_shadow.png" %>) bottom repeat-x;
}

header .stars {
  background:url(<%= asset_path "global/header_stars.png" %>) center top no-repeat;
}

header .wrap {
  width:960px;
  margin:0 auto;
  padding:34px 20px 0;
  position:relative;
}

header h1 a {
  display:block;
  width:312px;
  height:51px;
  background:url(<%= asset_data_uri 'global/sublimevideo_logo.png' %>) no-repeat;
}

header h1 a span {display:none}

header h2 {
  color:#c1d3f0;
  font-size:40px;
  font-weight:600;
  text-align:center;
  padding:40px 0;
  text-shadow:#001941 0 1px 4px;
  -webkit-font-smoothing:antialiased;
}

header p.sub {
  font-size:22px;
  color:#afceff;
  line-height:33px;
  text-shadow:rgba(0,0,0,0.8) 0 1px 3px;
  -webkit-font-smoothing:antialiased;
}

header p.sub a {
  color:#e4efff;
}

#menu {
  position:absolute;
  top:50px;
  right:0;
}

#menu ul {
  list-style-type:none;
}

#menu li {
  float:left;
}

#menu li a {
  display:block;
  padding:6px 10px 3px;
  color:#cde5fe;
  font-size:14px;
  text-transform:uppercase;
  letter-spacing:1px;
  border:1px solid transparent;
  text-shadow:#000 0 1px 2px;
  font-weight:100;
  @include transition(color,0.25s,linear);
}

#menu li a:hover {
  color:#fff;
}

#menu li.active a {
  border-color:#000;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  @include border-radius(20px);
  @include gradient(#114492, #207ec3, #1a65ae);
  @include box-shadow((inset rgba(0,0,0,0.93) 0 1px 4px, rgba(144,191,255,0.2) 0 1px 0));
}

#menu li a.user {
  text-transform:none;
  letter-spacing:0;
}

#menu li a.user .icon {
  background:url(<%= asset_data_uri "my/user_header_icon.png" %>) no-repeat 0 2px;
  padding:0 0 0 20px;
}

#menu li.active a.user .icon {
  background:url(<%= asset_data_uri "my/user_header_icon_active.png" %>) no-repeat 0 2px;
}

#menu li.signup a {
  padding:7px 0 0;
  width:74px;
  height:23px;
  font-size:13px;
  font-weight:500;
  color:#fff;
  text-shadow:#000 0 1px 2px;
  background:url(<%= asset_data_uri "global/header_signup_btn.png" %>) no-repeat;
  text-align:center;
}

#menu li.signup a:active {background-position:0 -30px;}

footer {
  min-width:1000px;
  height:331px;
  background:#24334b url(<%= asset_data_uri "global/footer_texture.png" %>) repeat-x;
  text-shadow:#000 0 -1px 0;
  color:#9eb5ce;
  -webkit-font-smoothing:antialiased;
}

footer a {
  color:#c3daff;
  @include transition(color,0.25s,linear);
}

footer a:hover {color:#fff}

footer .wrap {
  width:900px;
  margin:0 auto;
  padding:45px 0 0;
}

footer nav {
  width:500px;
  float:left;
}

footer .col {
  float:left;
  padding:0 16px 40px;
}

footer .col h4 {
  color:#667b9f;
  font-size:16px;
  font-weight:600;
  padding:0 0 12px;
}

footer .col ul {
  list-style-type:none;
  font-size:14px;
  line-height:25px;
}

footer .right {
  float:left;
  font-size:20px;
  padding:26px 0 0 40px;
}

footer a.jilion {
  display:inline-block;
  background:url(<%= asset_data_uri "global/jilion.png" %>) no-repeat;
  width:89px;
  height:23px;
  position:relative;
  top:4px;
  left:2px;
}

footer a.jilion span {display:none}

footer p.twitter {
  margin:10px 0 0;
  padding:4px 0 0 48px;
  background:url(<%= asset_data_uri "global/twitter.png" %>) no-repeat;
}

footer p.twitter a {
  color:#38ceff;
}

footer .footer_break {
  clear:both;
  width:669px;
  height:14px;
  margin:0 auto;
  background:url(<%= asset_data_uri "global/footer_break.png" %> );
}

footer p.copyright {
  padding:5px 0 0;
  font-size:12px;
  text-align:center;
}

/* ========= */
/* = Forms = */
/* ========= */

form .entry {
  position:relative;
  margin:10px 0;
}

form .entry .left_field, form .entry .right_field {
  float:left;
}


form label.icon {
  display:block;
  position:absolute;
  text-indent:-9999px;
  overflow:hidden;
  z-index:2;
}

form .entry input.text, form .entry textarea {
  width:385px;
  height:40px;
  background:#f1f6ff;
  text-shadow:#fff 0 1px 0;
  border:1px solid #335994;
  font-size:22px;
  font-family:inherit;
  color:#1e3966;
  padding:0 5px 0 40px;
  @include border-radius(5px);
  @include box-shadow((inset rgba(0,34,85,0.3) 0 1px 3px, rgba(255,255,255,0.4) 0 1px 0));
}

form .entry textarea {
  width:410px;
  height:100px;
  padding:8px 10px;
  resize:vertical;
}

form .entry input.text.no_icon {
  width:415px;
  padding-left:10px;
}

form .entry.small_field input.text {
  width:104px;
}

form .entry .left_field input.text, form .entry .left_field input.text.no_icon {
  width:194px;
  margin-right:10px;
}

form .entry .right_field input.text, form .entry .right_field input.text.no_icon {
  width:194px;
}

form .entry input.text.errors {
  background:#ffd9d9;
}

form .entry ::-webkit-input-placeholder, form .entry input.text.placeholder {color:#7690b3}
form .entry .errors::-webkit-input-placeholder, form .entry input.text.errors.placeholder {color:#b37676}
form .entry input:-moz-placeholder, form .entry textarea:-moz-placeholder {color:#7690b3}
form .entry input.errors:-moz-placeholder, form .entry textarea.errors:-moz-placeholder {color:#b37676}

form .entry .text:focus, form .entry textarea:focus {
  outline:0;
  @include box-shadow((inset rgba(0,34,85,0.3) 0 1px 3px, rgba(255,255,255,0.1) 0 1px 0, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

form .entry.select select {
  height:41px;
  font-family:inherit;
  font-size:22px;
  color:#4a648e;
  padding:0 24px 0 10px;
  text-shadow:rgba(255,255,255,0.8) 0 1px 0;
  background:url(<%= asset_data_uri "my/custom_select.png" %>) no-repeat right top;
  border:1px solid #335994;
  @include border-radius(5px);
  @include box-shadow((inset rgba(255,255,255,0.8) 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
  -webkit-appearance:none;
}

form .entry.select select:focus, #content h2 select:focus {
  border:1px solid #000;
  @include box-shadow((inset rgba(255,255,255,0.8) 0 1px 0, rgba(255,255,255,0.1) 0 1px 0, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

form .entry.select .left_field select, form .entry.select .right_field select {width:211px}

.radio_wrap, .checkbox_wrap {
  position:relative;
  margin-top:4px;
}

.radio_wrap input, .checkbox_wrap input {
  position:relative;
  top:0;
  left:0;
  opacity:0;
  width:34px;
  height:34px;
  z-index:2;
  float:left;
}

.checkbox_wrap label {
  position:relative;
  display:block;
  font-weight:600;
  height:24px;
  padding:9px 0 0 38px;
  left:-6px;
  background:url(<%= asset_data_uri "my/custom_checkbox.png" %>) no-repeat;
}

.radio_wrap span.bg, form .entry .radio_wrap label {
  display:block;
  position:absolute;
  z-index:1;
  top:0;
  left:0;
  width:34px;
  height:34px;
  background:url(<%= asset_data_uri "my/custom_radio.png" %>) no-repeat;
}

.checkbox_wrap input:checked + label, form .entry .radio_wrap input:checked + label, .radio_wrap input:checked + span.bg {background-position:0 -34px}
.checkbox_wrap input:focus + label, form .entry .radio_wrap input:focus + label, .radio_wrap input:focus + span.bg {background-position:0 -68px}
.checkbox_wrap input:focus:checked + label, form .entry .radio_wrap input:focus:checked + label, .radio_wrap input:focus:checked + span.bg {background-position:0 -102px}

form .inline_errors span, .inline_alert {
  padding:2px 5px 2px;
  font-size:13px;
  color:#fff;
  text-shadow:rgba(0,0,0,0.4) 0 -1px 0;
  display:inline;
  position:relative;
  top:-1px;
  left:10px;
  border:1px solid #264067;
  z-index:2;
  @include gradient(#df001b,#8c0006,#b40011);
  @include border-radius(0 0 4px 4px);
  @include box-shadow((inset #f4002d 0 1px 0, rgba(0,0,0,0.4) 0 1px 3px))
}

form .inline_errors.plan span, #content form .entry.card .inline_errors span, form .entry.terms .inline_errors span, .inline_alert {
  @include border-radius(4px);
}

/* =============== */
/* = Label Icons = */
/* =============== */

form .site label.icon {
  width:20px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/domain_icon.png" %>) no-repeat;
  top:12px;
  left:10px;
}

form .entry.password label.icon {
  width:16px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/password_icon.png" %>) no-repeat;
  top:10px;
  left:12px;
}

form .entry.email label.icon {
  width:20px;
  height:21px;
  background:url(<%= asset_data_uri "my/fields/email_icon.png" %>) no-repeat;
  top:12px;
  left:10px;
}

form .name label.icon {
  width:18px;
  height:18px;
  background:url(<%= asset_data_uri "my/fields/user_icon.png" %>) no-repeat;
  top:12px;
  left:12px;
}

form .entry.card_number label.icon {
  width:20px;
  height:16px;
  background:url(<%= asset_data_uri "my/fields/card_icon.png" %>) no-repeat;
  top:14px;
  left:12px;
}

form .entry.path label.icon {
  width:11px;
  height:19px;
  background:url(<%= asset_data_uri "my/fields/path_icon.png" %>) no-repeat;
  top:12px;
  left:14px;
}

form .entry.ticket_subject label.icon {
  width:21px;
  height:19px;
  background:url(<%= asset_data_uri "my/fields/ticket_icon.png" %>) no-repeat;
  top:12px;
  left:12px;
}

ul.form_list {
  list-style-type:none;
  margin:40px 0 5px;
  padding:10px 13px;
  line-height:20px;
  font-size:14px;
  text-align:left;
  background:#94a5c1;
  background:rgba(30,57,102,0.1);
  @include box-shadow((inset rgba(0,47,99,0.6) 0 1px 4px, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(4px);
}

ul.form_list li a {
  color:#224375;
  border-bottom:1px solid #708aa5;
}

/* =========== */
/* = Buttons = */
/* =========== */

.green_button, .blue_button, #help #gsfn_search_results input {
  font-family:inherit;
  color:#fff;
  text-shadow:rgba(0,0,0,0.9) 0 -1px 0;
  border:1px solid #1a4224;
  @include gradient(#00b95a,#007d31,#009843);
  @include box-shadow((inset #00e896 0 1px 0, #001a41 0 1px 4px));
  @include border-radius(6px);
}

.blue_button, #help #gsfn_search_results input {
  display:inline-block;
  padding:10px 18px;
  font-size:24px;
  font-size:22px;
  border-color:#15253b;
  @include gradient(#6685ae,#314f78,#4b6a93);
  @inline border-radius(12px);
  @include box-shadow((inset #8da4c3 0 1px 0, #001a41 0 1px 4px));
}

.green_button:active {
  @include gradient(#007d31,#00b95a,#009843);
}

.blue_button:active, #help #gsfn_search_results input:active {
  @include gradient(#314f78,#6685ae,#4b6a93); 
}

.green_button:focus, .blue_button:focus, #help #gsfn_search_results input:focus {
  outline:0;
  @include box-shadow((inset #00e896 0 1px 0, #001a41 0 1px 4px, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

.blue_button:focus, #help #gsfn_search_results input:focus {  
  @include box-shadow((inset #8da4c3 0 1px 0, #001a41 0 1px 4px, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

.green_button:disabled, .blue_button:disabled, #help #gsfn_search_results input:disabled {
  opacity:0.5;
  filter:alpha(opacity=50);
}

/* ========= */
/* = Popup = */
/* ========= */

.popup {
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  bottom:0;
  right:0;
  z-index:100000;
  color:#224375;
  text-shadow:rgba(255,255,255,0.25) 0 1px 0;
  background-color:rgba(0,0,0,0.3);
  -ms-filter:"progid:DXImageTransform.Microsoft.gradient(startColorstr=#4C000000,endColorstr=#4C000000)"; /* IE8 */
  filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#4C000000,endColorstr=#4C000000);   /* IE6 & 7 */
  zoom:1;
}

.popup .popup_wrap {
  position:absolute;
  top:16%;
  left:0;
  right:0;
  margin:0 auto;
  width:512px;
  background:#8ea6c2 url(<%= asset_data_uri "my/back_texture.png" %>);
  @include border-radius(5px);
  @include box-shadow((inset rgba(255,255,255,0.6) 0 1px 0, #000d20 0 10px 40px));
}

.popup .lights {
  @include gradient(rgba(255,255,255,0.3),rgba(255,255,255,0),transparent);
  @include border-radius(5px);
  padding:30px 40px;
}

.popup a.close {
  display:block;
  width:18px;
  height:19px;
  background:url(<%= asset_data_uri "global/close_popup.png" %>) no-repeat;
  position:absolute;
  top:5px;
  right:5px;
}

.popup a.close span {display:none}

.popup h2.title {
  font-size:36px;
  font-weight:600;
  padding:5px 0 25px;
  color:#1e3966;
  text-align:center;
}

.popup .break {
  width:413px;
  height:21px;
  background:url(<%= asset_data_uri "global/popup_break.png" %>) no-repeat;
  margin:0 auto;
}

.popup .entry.terms {
  text-align:center;
  margin-top:0;
}

.popup .checkbox_wrap {
  display:inline-block;
}

.popup .checkbox_wrap a {
  color:#224375;
  border-bottom:1px solid #708aa5;
}

.popup .entry.sign_up {
  padding:20px 0 0;
  text-align:center;
}

.popup .entry.sign_up input {
  text-align:center;
  width:150px;
  height:56px;
  background:url(<%= asset_data_uri "global/popup_sign_up_btn.png" %>) no-repeat;
  color:#fff;
  font-family:inherit;
  font-size:29px;
  font-weight:500;
  text-align:center;
  border:none;
  text-shadow:rgba(0,0,0,0.4) 0 1px 0;
  @include border-radius(9px);
  @include box-shadow(rgba(0,36,89,0.65) 0 1px 8px);
}

.popup .entry.sign_up input:active {background-position:0 -56px}

.popup .entry.sign_up input:focus {
  outline:0;
  @include box-shadow((rgba(0,36,89,0.65) 0 1px 8px, #2a93ff 0 0 9px, #2a93ff 0 0 9px, #2a93ff 0 0 9px));
}

.popup .entry.login {
  padding:20px 0 0;
}

.popup .entry.login .blue_button {
  float:left;
  padding:20px 0;
  font-size:28px;
  width:164px;
}

.popup .entry.login ul.form_list {
  width:226px;
  float:left;
  font-size:13px;
  padding:8px 11px;
  margin:0 0 0 19px;
}

.popup .alert {
  text-align:center;
}

.popup .inline_alert {
  left:auto;
  top:-13px;
}

.spacer {clear:both}

.capitalize {text-transform:capitalize}

a {
  text-decoration:none;
}

header, section, nav, aside {display:block}

input::-moz-focus-inner, button::-moz-focus-inner {border: 0}

img {
  border:none;
  -moz-user-select: none;
  -webkit-user-select: none;
  -webkit-user-drag: none;
}

