@import "css3";

.video_tag_header .poster {
  width:130px;
  height:75px;
  margin:16px 15px 15px 0;
  float:left;
  position:relative;
  border:1px solid rgba(0,0,0,0.9);
  @include border-radius(4px);
  @include box-shadow(rgba(255,255,255,0.5) 0 1px 0);
}

.video_tag_header .poster img {
  @include border-radius(3px);
}

.video_tag_header .duration {
  position:absolute;
  top:0;
  left:0;
  padding:2px 3px;
  color:#fff;
  font-size:10px;
  font-weight:600;
  text-shadow:#000 0 1px 2px;
  background:rgba(0,0,0,0.5);
  @include border-radius(2px 0 4px 0);
}

.video_tag_header .name {
  color:#1e3966;
  font-size:26px;
  font-weight:600;
  padding-top:27px;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
}

.video_tag_header .site {
  font-size:14px;
  color:#4a648e;
  padding-top:3px;
}


#video_code {
  position:relative;
}

#video_code #preview .video_wrap {
  margin:0 auto;
  @include box-shadow(rgba(0,0,0,0.6) 0 1px 4px);
}

#video_code table.sources {
  width:100%;
  border-collapse:collapse;
}

#video_code table.sources td.field {
  width:438px;
}

#video_code table.sources td.label {
  text-align:right;
  font-weight:600;
  width:60px;
  padding-right:10px;
}

#video_code table.sources td.notes {
  width:270px;
  text-align:left;
}

#video_embed_type_selector {
  float:left;
  margin:0 0 30px;
}

#video_embed_type_selector .radio_wrap, #initial_link .radio_wrap {
  float:left;
  margin-right:20px;
}

#video_code_form .big_break {
  margin-top:30px;
}

#content #video_code_form .content_left {
  padding-right:17px;
}

#video_code_form .expandable h4 {
  font-size:20px;
  font-weight:600;
  padding:20px 0 5px;
}

#video_code_form .expandable h4 small {
  font-size:14px;
}

#video_code_form h5 {
  font-size:16px;
  font-weight:600;
  padding:15px 0 0;
}

#video_code_form .entry input.text {
  width:415px;
  padding-left:10px;
}

#video_code_form .entry.valid input.text {
  width:385px;
  padding-left:40px;
}

#video_code_form .entry.size input.text {
  width:80px;
  text-align:center;
  padding:0;
}

#video_code_form .entry label.icon {
  opacity:0;
  @include transition(opacity,0.5s,ease);
}

#video_code_form .entry.valid label.icon {
  opacity:1;
  width:18px;
  height:18px;
  background:url(<%= asset_path "fields/valid_icon.png" %>) no-repeat;
  top:12px;
  left:12px;
}

#code {
  text-align:center;
  padding:30px 0 60px;
}

/* Lightbox */
a.zoomable {
  display:block;
  margin:0 auto;
  background:#000;
  position:relative;
  -webkit-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  -moz-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
}

a.reset {
  font-size:13px;
}

#video_code p.info {
  padding-top:10px;
  line-height:20px;
}

#popup_code .popup_wrap {
  width:900px;
}

#popup_code form .entry textarea {
  width:800px;
}

#popup_code .entry.embed_code textarea {
  font-size:14px;
  color:#4a648e;
  line-height:20px;
  resize:none;
  text-shadow:none;
}

#popup_code .entry.embed_code textarea {
  height:200px;
}

#popup_code .entry.embed_code textarea.small_height {
  height:60px;
}
