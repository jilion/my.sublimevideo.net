@import "css3";

span.beta_badge {
  display:block;
  width:60px;
  height:28px;
  background:url(<%= asset_path "stats/beta_badge.png" %>) no-repeat;
  position:absolute;
  top:58px;
  right:44px;
}

#trial .wrap {
  width:960px;
  height:42px;
  position:relative;
  top:-17px;
  left:-41px;
  border: 1px solid #000;
  text-align:center;
  font-size:17px;
  text-shadow:rgba(0,0,0,0.5) 0 -1px 0;
  @include gradient(#2f5790,#1d3659,#264675);
  @include border-radius(4px 4px 0 0);
  @include box-shadow((inset #4783c8 0 1px 0, inset rgba(81,152,255,0.58) 0 0 20px, inset rgba(81,152,255,0.58) 0 0 20px));
}

#trial .wrap.during {
  @include gradient(#d34a0f,#b72e09,#c53c0c);
  @include box-shadow((inset #fec72c 0 1px 0, inset #ff7d1d 0 0 20px, inset #ff7d1d 0 0 20px));
}

#trial .before {
  color:#bfd8ff;
}

#trial .during {
  color:#ffe6dd;
}

#trial .before p {
  padding:8px 0 0;
}

#trial .during p {
  padding:11px 0 0;
}

#trial p strong, #trial a {
  color:#fff;
  font-weight:600;
}

#trial a {
  font-weight:bold;
  border-bottom:1px solid rgba(255,255,255,0.3);
}

#trial button {
  font-family:inherit;
  color:#fff;
  font-size:15px;
  font-weight:600;
  padding:4px 12px;
/*  margin-left:10px;*/
  cursor:pointer;
  text-shadow:rgba(0,0,0,0.5) 0 1px 2px;
  border: 1px solid #14325f;
  @include gradient(#f69619,#bc1704,#da580f);
  @include border-radius(20px);
  @include box-shadow((inset #fbcb26 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
}

#trial button:active {
  @include gradient(#bc1704,#f69619,#da580f);
  @include box-shadow(rgba(255,255,255,0.3) 0 1px 0);
}

.stats {
  padding-bottom:40px;
}

.stats #sticky_notice {
  width: 872px;
  margin: 0px 0 20px 0;
}

.stats #dates_range {
  position:relative;
  float:left;
}

.stats #export {
  float:left;
  margin:10px 20px 10px 15px;
}

.stats #export button, .stats #export a {
  display:inline-block;
  border: 1px solid #5e75a2;
  font-family:inherit;
  font-size:14px;
  font-weight:600;
  color:#213866;
  padding:3px 7px;
  cursor:pointer;
  text-shadow:rgba(255,255,255,0.3) 0 1px 0;
  @include gradient(rgba(255,255,255,0.25), rgba(255,255,255,0), #98acc6);
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.6) 0 1px 0, rgba(255,255,255,0.2) 0 1px 0))
}

.stats #export button:active, .stats #export a:active {
  @include gradient(rgba(255,255,255,0), rgba(255,255,255,0.25), transparent);
}

.stats #export button:disabled, .stats #export a:disabled {
  cursor:default;
  opacity:0.5;
}

.stats #export button span.icon, .stats #export a span.icon {
  padding:2px 0 2px 18px;
  background:url(<%= asset_path "stats/export_icon.png" %>) no-repeat 0 50%;
}

#content #export.tooltip .content.hidden {display:none}

#content #export.tooltip .content {
  bottom:38px;
  left:-13px
}

#content #export_wrap p.desc {
  font-size:14px;
  color:#465B7D;
  line-height:20px;
  margin:4px 0 0 15px;
  padding-right:100px;
}

.stats #plays_and_loads_graph_legend {
  float:right;
  list-style-type:none;
  padding-top:70px;
  margin-bottom:25px;
}

.stats.free #plays_and_loads_graph_legend {padding-top:45px}

.stats #plays_and_loads_graph_legend li {
  float:left;
  font-size:22px;
  padding:0 0 0 35px;
  margin:0 10px;
}

.stats #plays_and_loads_graph_legend li.video_plays {
  background:url(<%= asset_path "stats/video_plays_label.png" %>) no-repeat;
}

.stats #plays_and_loads_graph_legend li.page_visits {
  background:url(<%= asset_path "stats/page_visits_label.png" %>) no-repeat;
}

.stats #plays_and_loads_graph_legend li span {
  font-size:16px;
}

.stats #plays_and_loads {
  min-height:100px;
  padding:16px 16px 4px;
  background:#6a86a8;
  background:rgba(0,36,91,0.25);
  @include border-radius(5px);
  @include box-shadow((rgba(255,255,255,0.3) 0 1px 0, inset rgba(0,27,68,0.5) 0 1px 4px));
}

.stats #plays_and_loads p.note {
  font-size:11px;
  text-align:right;
  position:relative;
  right:-10px;
  padding-bottom:1px;
}

.stats h3.title {
  font-size:34px;
  font-weight:600;
  padding:15px 0 10px;
}

#last_60_minutes_plays_and_loads {
  float:left;
  width:39%;
  margin:35px 0 0;
}

#last_60_minutes_loads, #last_60_minutes_plays {
  height:80px;
  padding:8px 0;
}

#last_60_minutes_plays_and_loads .sum {
  float:left;
  width:100px;
  font-weight:600;
  text-align:center;
}

#last_60_minutes_plays_and_loads .sum strong {
  display:block;
  font-size:23px;
  font-weight:600;
}

#last_60_minutes_plays_and_loads .sparkline {
  float:left;
  width:200px;
  height:50px;
  text-align:center;
  color:#d5e5ff;
  text-shadow:#000 0 -1px 0;
  @include border-radius(5px);
}

#last_plays {
  float:right;
  width:59%;
}

#last_plays h4.title {
  padding-bottom:8px;
  font-size:16px;
  font-weight:600;
}

.stats .graph_box {
  float:left;
  width:260px;
  margin-bottom:40px;
}

.stats #last_plays .graph_box {
  margin-bottom:0;
}

.stats #browsers_and_platforms.graph_box, .stats #countries.graph_box {
  margin-right:40px;
}

.stats .graph_box h3.title {
  text-align:center;
  padding-bottom:5px;
}

.stats .graph_box h5.sub_title {
  text-align:center;
  font-size:16px;
  font-weight:normal;
  color:#465b7d;
}

.stats .graph_box .content {
  margin-top:20px;
  min-height:100px;
}

.stats .graph_box .content_wrap {
  overflow:hidden;
  background:#8fa0c1;
  background:rgba(0,36,91,0.1);
  @include border-radius(5px);
  @include box-shadow((rgba(255,255,255,0.3) 0 1px 0, inset rgba(0,27,68,0.6) 0 1px 4px));
}

.stats .graph_box p.empty {
  color:#465b7d;
  font-weight:600;
  padding:30px 10px;
  text-align:center;
}

.stats .graph_box ul {
  list-style-type:none;
}

.stats .graph_box li {
  height:58px;
  position:relative;
  border-bottom:1px solid #657a9e;
  @include box-shadow(rgba(255,255,255,0.14) 0 1px 0);
}

.stats .graph_box li:last-child {
  border-bottom:none;
  @include box-shadow(none);
}

.stats .graph_box li li {
  height:29px;
}

.stats .graph_box li .bar {
  display:block;
  position:absolute;
  top:0;
  left:0;
  height:58px;
  background:#83acae;
  background:rgba(116,255,131,0.18);
  background-image:url(<%= asset_path "stats/chart_highlight_bar.png" %>);
  background-position:right top;
  background-repeat:repeat-y;
}

.stats .graph_box li:first-child .bar {@include border-radius(5px 0 0 0)}
.stats .graph_box li:first-child .bar.percent_100,
.stats .graph_box li:first-child .bar.percent_99 {@include border-radius(5px 5px 0 0)}
.stats .graph_box li:first-child li .bar {@include border-radius(0 0 0 0)}

.stats .graph_box li li .bar {
  height:29px;
}

.stats .graph_box li .wrap {
  display:block;
  position:relative;
  z-index:2;
  padding-left:6px;
}

.stats .graph_box li .browser,
.stats .graph_box li .platform,
.stats .graph_box li .country {
  display:block;
  width:40px;
  height:58px;
  float:left;
  background-image:url(<%= asset_path "stats/icons/default.png" %>);
  background-position:center;
  background-repeat:no-repeat;
}

.stats .graph_box li.site .wrap {
  padding-right:6px;
}

.stats #last_plays.graph_box li.site .browser,
.stats #last_plays.graph_box li.site .platform,
.stats #last_plays.graph_box li.site .country {
  float:right;
  height:43px;
  margin-top:15px;
}

.stats .graph_box li .browser {background-image:url(<%= asset_path "stats/icons/browser_default.png" %>);}
.stats .graph_box li.b_fir .browser {background-image:url(<%= asset_path "stats/icons/fir.png" %>);}
.stats .graph_box li.b_iex .browser {background-image:url(<%= asset_path "stats/icons/iex.png" %>);}
.stats .graph_box li.b_chr .browser {background-image:url(<%= asset_path "stats/icons/chr.png" %>);}
.stats .graph_box li.b_saf .browser {background-image:url(<%= asset_path "stats/icons/saf.png" %>);}
.stats .graph_box li.b_ope .browser {background-image:url(<%= asset_path "stats/icons/ope.png" %>);}
.stats .graph_box li.b_saf.p_iph .browser,
.stats .graph_box li.b_saf.p_ipa .browser {background-image:url(<%= asset_path "stats/icons/saf_mob.png" %>);}

.stats .graph_box li.p_osx .platform {background-image:url(<%= asset_path "stats/icons/osx.png" %>);}
.stats .graph_box li.p_win .platform {background-image:url(<%= asset_path "stats/icons/win.png" %>);}
.stats .graph_box li.p_lin .platform {background-image:url(<%= asset_path "stats/icons/lin.png" %>);}
.stats .graph_box li.p_and .platform {background-image:url(<%= asset_path "stats/icons/and.png" %>);}
.stats .graph_box li.p_iph .platform {background-image:url(<%= asset_path "stats/icons/iph.png" %>);}
.stats .graph_box li.p_ipa .platform {background-image:url(<%= asset_path "stats/icons/ipa.png" %>);}

.stats .graph_box li li.desktop .icon {background-image:url(<%= asset_path "stats/icons/desktop.png" %>);}
.stats .graph_box li li.mobile .icon {background-image:url(<%= asset_path "stats/icons/smartphone.png" %>);}
.stats .graph_box li li.tablet .icon {background-image:url(<%= asset_path "stats/icons/tablet.png" %>);}

.stats .graph_box li .title {
  display:block;
  float:left;
  font-size:14px;
  font-weight:600;
  padding:20px 0 0 6px;
}

.stats .graph_box li .poster {
  display:block;
  float:left;
  width:63px;
  height:35px;
  margin-top:11px;
  border:1px solid rgba(0,0,0,0.9);
  @include border-radius(4px);
}

.stats .graph_box li .poster img {
  @include border-radius(2px);
}


.stats .graph_box li .title abbr.timeago {
  position:absolute;
  top:6px;
  right:10px;
  font-size:10px;
}

.stats .graph_box li .value {
  display:block;
  position:absolute;
  top:10px;
  right:10px;
  text-align:right;
}

.stats .graph_box li .value .metric {
  font-size:13px;
  color:#465b7d;
}

.stats #mobile_desktop.graph_box .values {
  display:block;
  text-align:center;
  margin-top:5px;
}

.stats #last_plays.graph_box li .title {
  padding:13px 0 0 6px;
  line-height:17px;
}

.stats #last_plays.graph_box .content_wrap {
  overflow:hidden;
}

.stats p.empty {
  text-align:center;
}

.stats #browsers_and_platforms.graph_box .content_wrap,
.stats #countries.graph_box .content_wrap,
.stats #mobile_desktop.graph_box .content_wrap {
  height:493px;
  overflow:auto;
}

.stats #browsers_and_platforms.graph_box li .title {
  font-size:11px;
  padding:17px 0 0 6px;
}

.stats #mobiles_and_desktops_chart {
  margin-top:20px;
}

.stats #mobile_desktop.graph_box .value {
  display:block;
  padding-bottom:15px;
}

.stats #mobile_desktop.graph_box .values em {
  font-style:normal;
  font-weight:normal;
  color:#465B7D;
}

.stats .graph_box li .value .percent,
.stats #mobile_desktop.graph_box .value .percent {
  display:block;
  font-size:18px;
  font-weight:600;
}

.stats #dates_range_and_source {
  float:left;
  margin:-18px 0 15px;
}

.stats #last_stats_by_hour_or_day #plays_and_loads_graph_legend {
  padding-top:0;
}

