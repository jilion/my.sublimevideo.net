@import "css3";

#video_tags {
  padding-top:15px;
}

#video_tags_filter {
  float:left;
}

#video_tags .main_table_wrap {
  background:#6c88b5;
  margin-top:25px;
  @include box-shadow(rgba(0,26,65,0.53) 0 1px 6px);
  @include border-radius(5px);
}

#video_tags table.main {
  width:100%;
  border-collapse:collapse;
}

#video_tags table.main col.usage {
  background:rgb(0,52,110);
}

#video_tags table.main col.odd {
  background:rgba(0,52,110,0.4);
}

#video_tags table.main th {
  height:38px;
  color:#f1f6ff;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  font-weight:500;
  line-height:38px;
}

#video_tags table.main th .wrap {
  position:relative;
  width:100%;
  height:100%;
  border:1px solid #000;
  border-left:none;
  border-right:none;
  @include gradient(#2c456a,#132c51,#1e375d);
  @include box-shadow((inset #466ea9 0 1px 0));
}

#video_tags table.main th.video .wrap {
  border-left:1px solid #000;
  @include border-radius(5px 0 0 0);
}

#video_tags table.main th.status .wrap {
  border-right:1px solid #000;
  @include border-radius(0 5px 0 0);
}

#video_tags table.main th.video {
  width:370px;
  text-align:left;
}

#video_tags table.main th.videos {
  width:100px;
}

#video_tags table.main th.stats {
  width:160px;
  padding-bottom: 0px;
}

//#video_tags table.main th.code {
//  width:158px;
//}

#video_tags table.main th.code {
  width:138px;
}

//#video_tags table.main th.status {
//  width:94px;
//}

#video_tags table.main th.status {
  width:64px;
}

#video_tags table.main th strong {
  font-weight:500;
}

#video_tags table.main th.video strong {
  position:relative;
  padding:0 10px;
}

#video_tags table.main th.video strong img {
  position:relative;
  top:2px;
}

#video_tags table.main th .sorting {
  line-height:13px;
  padding-top:6px;
}

#video_tags table.main th.video .sorting {
  position:absolute;
  top:0;
  right:10px;
}

#video_tags table.main th .sorting a {
  display:inline-block;
  color:#f1f6ff;
  letter-spacing:1px;
  font-size:12px;
  font-weight:normal;
  text-transform:uppercase;
  padding:5px 8px;
  border:1px solid #0f213b;
  @include gradient(rgba(255,255,255,0.12),rgba(0,0,0,0.12),transparent);
  @include border-radius(20px);
  @include box-shadow((inset #5876a3 0 1px 0, #405573 0 1px 0));
}

#video_tags table.main th .sorting a:active {
  @include gradient(rgba(0,0,0,0.12),rgba(255,255,255,0.12),transparent);
}

#video_tags table.main th .sorting a.active {
  border-color:#001b45;
  color:#deeeff;
  @include gradient(#175ebb,#1d73c7,#1a69c1);
  @include box-shadow((inset rgba(0,27,58,0.85) 0 1px 5px, #405573 0 1px 0));
}

#video_tags table.main th .sorting a .arrow {
  padding:0 14px 0 0;
  background:url(<%= asset_path "sites/sort_arrow_down.png" %>) no-repeat 100% 4px;
}

#video_tags table.main th .sorting a.up .arrow {background-image:url(<%= asset_path "sites/sort_arrow_up.png" %>)}

#video_tags table.main th.video .sorting a {
  margin-left:8px;
}

#video_tags table.main td {
  height:80px;
  background:rgba(237,245,255,0.6);
}

#video_tags table.main tr.alt td {
  background:rgba(210,220,231,0.6);
}

#video_tags table.main td .wrap {
  width:100%;
  height:100%;
  border-width:0;
  border-color:#4b5f7e;
  border-style:solid;
  position:relative;
}

#video_tags table.main td.video_tag .wrap {
  border-left-width:1px;
}

#video_tags table.main td.status .wrap {
  border-right-width:1px;
}

#video_tags table.main tr:last-child .wrap {
  border-bottom-width:1px;
}

#video_tags table.main tr:last-child td.video_tag, #video_tags table.main tr:last-child td.video .wrap {
  @include border-radius(0 0 0 5px);
}

#video_tags table.main tr:last-child td.status, #video_tags table.main tr:last-child td.status .wrap {
  @include border-radius(0 0 5px 0);
}

#video_tags table.main td.video_tag .poster {
  float:left;
  width:84px;
  height:47px;
  margin:16px 15px 0 15px;
  position:relative;
  border:1px solid rgba(0,0,0,0.9);
  @include border-radius(4px);
  @include box-shadow(rgba(255,255,255,0.5) 0 1px 0);
}

#video_tags table.main td.video_tag .poster img {
  @include border-radius(3px);
}

#video_tags table.main td.video_tag .duration {
  position:absolute;
  top:0;
  left:0;
  padding:2px 3px;
  color:#fff;
  font-size:10px;
  font-weight:600;
  text-shadow:#000 0 1px 2px;
  background:rgba(0,0,0,0.5);
  @include border-radius(2px 0 4px 0);
}

#video_tags table.main td.video_tag .title {
  color:#1e3966;
  font-size:19px;
  font-weight:600;
  padding-top:20px;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
}

#video_tags table.main td.video_tag .hosted_on {
  font-size:12px;
  color:#4a648e;
  padding-top:3px;
}

#video_tags table.main td.video_tag .uid {
  position:absolute;
  bottom:3px;
  right:5px;
  font-size:11px;
  color:#4a648e;
  display:none;
}

#video_tags table.main tr:hover td.video_tag .uid {display:block}

#video_tags table.main td.video_tag .uid strong {
  font-weight:600;
}

#video_tags table.main td.stats {
  padding-bottom: 0px;
}

#video_tags table.main td.stats .sparkline {
  width:190px;
  height:28px;
  margin:0 auto;
  position:relative;
  top:10px;
}

#video_tags table.main td.stats .fake_sparkline {
  width:186px;
  height:27px;
  background:url(<%= asset_path "sites/fake_stats@2x.png" %>) no-repeat;
  background-size:186px 27px;
  margin:0 auto;
  position:relative;
  top:10px;
}

#video_tags table.main td.stats .plays {
  position:absolute;
  bottom:6px;
  left:10px;
  line-height:12px;
}

#video_tags table.main td.stats .plays strong {
  font-weight:normal;
  font-size:16px;
  display:block;
}

#video_tags table.main td.stats .plays span {
  font-size:9px;
  letter-spacing:1px;
  text-transform:uppercase;
  color:#4a648e;
}

#video_tags table.main td.stats a.view_stats, #video_tags table.main td.stats a.buy_addon {
  position:absolute;
  bottom:10px;
  right:11px;
  display:inline-block;
  padding:4px 6px 3px;
  color:#f1f6ff;
  font-size:10px;
/*  font-weight:600;*/
  text-transform:uppercase;
  letter-spacing:1px;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border:1px solid #0e2a55;
  @include gradient(#5f7da6,#2c4a76,#46658f);
  @include box-shadow((inset rgba(255,255,255,0.24) 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(5px);
}

#video_tags table.main td.stats a.view_stats:active {
  @include gradient(#2c4a76,#5f7da6,#46658f);
}

#video_tags table.main td.stats a.buy_addon {
  color:#fff;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 1px;
  border:1px solid #1a4224;
  @include gradient(#068e2c,#045a1c,#057524);
  @include box-shadow((inset #08b23a 0 1px 0, rgba(255,255,255,0.4) 0 1px 0));
  @include border-radius(6px);
}

#video_tags table.main td.stats a.buy_addon:active {
  @include gradient(#045a1c,#068e2c,#057524);
}

#video_tags table.main td.stats .title_link {
  font-size:14px;
  line-height:15px;
  padding:0 20px;
  text-align:center;
  position:absolute;
  top:17px;
  left:0;
  right:0;
}

#video_tags table.main td.code {
  text-align:center;
}

#video_tags table.main td.code a.embed_code {
  display:inline-block;
  margin-top:23px;
  padding:8px 10px;
  color:#fff;
  font-size:14px;
  text-transform:uppercase;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border:1px solid #194a7f;
  @include gradient(#1e93e2,#135bd7,#1976dc);
  @include box-shadow((inset #4ca9e8 0 1px 0, rgba(0,24,51,0.5) 0 1px 5px));
  @include border-radius(5px);
}

#video_tags table.main td.code a.embed_code:active {
  @include gradient(#135bd7,#1e93e2,#1976dc);
}

#video_tags table.main td.video_tag .tooltip {
  float:left;
  margin:0 5px 0 0;
}

#video_tags table.main td.status .tooltip {
  margin:0 auto;
  top:30px;
}

#video_tags table.main td.status .tooltip.not-found {width:18px}
#video_tags table.main td.status .tooltip.not-found .icon {
  width:18px;
  height:17px;
  background:url(<%= asset_path "alert_icon.png" %>) no-repeat;
}

#video_tags table.main td.status .tooltip.content-type-error {width:27px}
#video_tags table.main td.status .tooltip.content-type-error .icon {
  width:27px;
  height:25px;
  background:url(<%= asset_path "video_tag/warning.png" %>) no-repeat;
}

#video_tags table.main td.status .tooltip.ok {width:23px}
#video_tags table.main td.status .tooltip.ok .icon {
  width:23px;
  height:18px;
  background:url(<%= asset_path "sites/check_icon.png" %>) no-repeat;
}

#video_tags table.main td.status .tooltip.in_progress {width:15px}
#video_tags table.main td.status .tooltip.in_progress .icon {
  width:15px;
  height:15px;
  background:url(<%= asset_path "sites/dot_loading.gif" %>) no-repeat center;
}

#video_tags .pagination_wrap {
  font-size:13px;
  color:#4c6790;
  padding:12px 20px 0;
}

#video_tags .pagination_wrap a {
  color:#00235a;
}

#video_tags .pagination_wrap nav {
  position:relative;
  z-index:2;
}

#video_tags .pagination .next {
  float:right;
}

#video_tags .pagination_wrap .page_info {
  text-align:center;
  position:relative;
  top:-15px;
  z-index:1;
}

#content #video_tags .tooltip .content {
  left:-52px;
  bottom:35px;
}

.no_video_tag {
  padding:0 20px;
  text-align:center;
  font-weight:600;
  font-size:22px;
  color:#4A648E;
  @include border-radius(0 0 4px 4px)
}

/* thibaud */

#video_tags a.add_a_video {
  float: right;
  display:inline-block;
  padding:10px 15px;
  font-size:22px;
  margin-top:6px;
}

#video_tags a.add_a_video span {
  padding-left:25px;
  background:url(<%= asset_path "sites/add_site_cross.png" %>) no-repeat 0 4px;
}
