@import "css3";

.video_code_generator {
  position:relative;
  padding:18px 0px 20px;
}

#video_embed_type_selector {
  float:left;
  margin:0 0 30px;
}

#video_embed_type_selector .radio_wrap, #initial_link .radio_wrap {
  float:left;
  margin-right:20px;
}

#demo_bootstrap {
  float:right;
  position:absolute;
  top:18px;
  right:0;
}

button#use_demo_assets {
  padding:10px 16px;
  font-size:20px;
}

#content #demo_bootstrap .tooltip {
  position:absolute;
  left:-38px;
  top:10px;
}

#content #demo_bootstrap a.reset {
  position:absolute;
  bottom:-23px;
  right:50px;
}

.video_code_generator .intro {
  font-size:18px;
  line-height:26px;
  color:#3a5a8c;
}

.video_code_generator .intro p {
  padding-top:20px;
}

#video_code_form .big_break {
  margin-top:30px;
}

#content #video_code_form .content_left {
  padding-right:17px;
}

#video_code_form h4 {
  font-size:20px;
  font-weight:600;
  padding-top:20px;
}

#video_code_form h5 {
  font-size:16px;
  font-weight:600;
  padding:15px 0 0;
}

#video_code_form .entry input.text {
  width:415px;
  padding-left:10px;
}

#video_code_form .entry.valid input.text {
  width:385px;
  padding-left:40px;
}

#video_code_form .entry.size input.text {
  width:80px;
  text-align:center;
  padding:0;
}

#video_code_form .entry label.icon {
  opacity:0;
  @include transition(opacity,0.5s,ease);
}

#video_code_form .entry.valid label.icon {
  opacity:1;
  width:18px;
  height:18px;
  background:url(<%= asset_path "fields/valid_icon.png" %>) no-repeat;
  top:12px;
  left:12px;
}

#preview {
  padding:20px 0;
  text-align:center;
}
#preview .video_wrap {
  margin:0 auto;
}

#video_code_form #preview h4 {
  padding:0 0 20px;
}

#preview .big_break {
  margin-top:30px;
}

#code {
  text-align:center;
  padding:30px 0 60px;
}

/* Lightbox */
a.zoomable {
  display:block;
  margin:0 auto;
  background:#000;
  position:relative;
  -webkit-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  -moz-box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
  box-shadow:rgba(0,0,0,0.4) 0 4px 10px;
}

a.reset {
  font-size:13px;
}

.video_code_generator p.info {
  padding-top:10px;
}

#popup_code .popup_wrap {
  width:900px;
}

#popup_code form .entry textarea {
  width:800px;
}

#popup_code .entry.embed_code textarea {
  font-size:14px;
  color:#4a648e;
  line-height:20px;
  resize:none;
  text-shadow:none;
}

#popup_code .entry.embed_code textarea {
  height:200px;
}

#popup_code .entry.embed_code textarea.small_height {
  height:60px;
}

