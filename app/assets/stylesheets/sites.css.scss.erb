@import "css3";

#sites {
  position:relative;
  padding-bottom:40px;
}

a.add_site {
  position:absolute;
  top:25px;
  right:0;
  display:inline-block;
  padding:10px 15px;
  font-size:22px;
}

a.add_site span {
  padding-left:25px;
  background:url(<%= asset_path "sites/add_site_cross.png" %>) no-repeat 0 4px;
}

#sites a.generate_code {
  font-size:14px;
  position:absolute;
  top:80px;
  right:12px;
}

#help_list, .help_list {
  margin-top:16px;
  text-shadow:#fff 0 1px 0;
  background:url(<%= asset_path "sites/help_list_back.png" %>);
  padding:13px 15px 8px;
  @include border-radius(4px);
  @include box-shadow((inset #fff 0 1px 0, rgba(19,57,125,0.72) 0 1px 3px));
}

.help_list {
  margin-top:10px;
}

#help_list h4 {
  font-weight:600;
  font-size:22px;
}

#help_list h4 em {
  font-weight:normal;
  font-style:normal;
  color:#7690b3;
}

#help_list ol {
  padding:5px 0 0;
  line-height:23px;
  font-size:15px;
  list-style-type:none;
}

#help_list li {
  display:block;
}

#help_list li .wrap {
  display:inline-block;
}

#help_list li.complete .wrap {
  color:#7690b3;
  padding-right:15px;
  background:url(<%= asset_path "sites/check_icon_small.png" %>) no-repeat right center;
}

#help_list li a {
  color:#1e3966;
  font-weight:600;
  border-bottom:1px solid #a7b3c7;
}

#help_list li.complete a {
  color:#7690b3;
}

.help_list p {
/*  color:#7690b3;*/
  padding:5px 0 8px;
}

#sites .main_table_wrap {
  background:#6c88b5;
  margin-top:25px;
  @include box-shadow(rgba(0,26,65,0.53) 0 1px 6px);
  @include border-radius(5px);
}

#sites table.main {
  width:100%;
  border-collapse:collapse;
}

#sites table.main col.usage {
  background:rgb(0,52,110);
}

#sites table.main col.odd {
  background:rgba(0,52,110,0.4);
}

#sites table.main th {
  height:38px;
  color:#f1f6ff;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  font-weight:500;
  line-height:38px;
}

#sites table.main th .wrap {
  position:relative;
  width:100%;
  height:100%;
  border:1px solid #000;
  border-left:none;
  border-right:none;
  @include gradient(#2c456a,#132c51,#1e375d);
  @include box-shadow((inset #466ea9 0 1px 0));
}

#sites table.main th.site .wrap {
  border-left:1px solid #000;
  @include border-radius(5px 0 0 0);
}

#sites table.main th.status .wrap {
  border-right:1px solid #000;
  @include border-radius(0 5px 0 0);
}

#sites table.main th.site {
  width:420px;
  text-align:left;
}

.early_access_video #sites table.main th.site {
  width:370px;
  text-align:left;
}

.early_access_video #sites table.main th.videos {
  width:100px;
}

#sites table.main th.code {
  width:158px;
}

.early_access_video #sites table.main th.code {
  width:138px;
}

#sites table.main th.status {
  width:94px;
}

.early_access_video #sites table.main th.status {
  width:64px;
}

#sites table.main th strong {
  font-weight:500;
}

#sites table.main th.site strong {
  position:relative;
  padding:0 10px;
}

#sites table.main th.site strong img {
  position:relative;
  top:2px;
}

#sites table.main th .sorting {
  line-height:13px;
  padding-top:6px;
}

#sites table.main th.site .sorting {
  position:absolute;
  top:0;
  right:10px;
}

#sites table.main th .sorting a {
  display:inline-block;
  color:#f1f6ff;
  letter-spacing:1px;
  font-size:12px;
  font-weight:normal;
  text-transform:uppercase;
  padding:5px 8px;
  border:1px solid #0f213b;
  @include gradient(rgba(255,255,255,0.12),rgba(0,0,0,0.12),transparent);
  @include border-radius(20px);
  @include box-shadow((inset #5876a3 0 1px 0, #405573 0 1px 0));
}

#sites table.main th .sorting a:active {
  @include gradient(rgba(0,0,0,0.12),rgba(255,255,255,0.12),transparent);
}

#sites table.main th .sorting a.active {
  border-color:#001b45;
  color:#deeeff;
  @include gradient(#175ebb,#1d73c7,#1a69c1);
  @include box-shadow((inset rgba(0,27,58,0.85) 0 1px 5px, #405573 0 1px 0));
}

#sites table.main th .sorting a .arrow {
  padding:0 14px 0 0;
  background:url(<%= asset_path "sites/sort_arrow_down.png" %>) no-repeat 100% 4px;
}

#sites table.main th .sorting a.up .arrow {background-image:url(<%= asset_path "sites/sort_arrow_up.png" %>)}

#sites table.main th.site .sorting a {
  margin-left:8px;
}

#sites table.main td {
  height:80px;
  background:rgba(237,245,255,0.6);
}

#sites table.main tr.alt td {
  background:rgba(210,220,231,0.6);
}

#sites table.main td .wrap {
  width:100%;
  height:100%;
  border-width:0;
  border-color:#4b5f7e;
  border-style:solid;
  position:relative;
}

#sites table.main td.site .wrap {
  border-left-width:1px;
}

#sites table.main td.status .wrap {
  border-right-width:1px;
}

#sites table.main tr:last-child .wrap {
  border-bottom-width:1px;
}

#sites table.main tr:last-child td.site, #sites table.main tr:last-child td.site .wrap {
  @include border-radius(0 0 0 5px);
}

#sites table.main tr:last-child td.status, #sites table.main tr:last-child td.status .wrap {
  @include border-radius(0 0 5px 0);
}

#sites table.main td.site .domain {
  position:relative;
  display:inline-block;
  padding:6px 8px;
  margin:17px 0 0 7px;
  color:#1e3966;
  font-size:20px;
  font-weight:600;
  float:left;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
}

#sites table.main td.site.empty .domain {
  padding-top:7px;
  margin-top:22px;
  color:#4a648e;
}

#sites table.main td.site .domain .img_wrap {
  display:inline-block;
  position:relative;
  top:2px;
  margin-right:4px;
  padding:10px;
  line-height:10px;
  background:rgba(255,255,255,0.5);
  @include border-radius(50%);
}

#sites table.main td.site .tooltip {
  float:left;
  margin:33px 0 0;
}

#sites table.main td.site .show_button {
  display:block;
  background:rgba(9,23,69,0.1) url(<%= asset_path "sites/settings_icon@2x.png" %>) no-repeat 4px 6px;
  background-size:24px;
  width:17px;
  height:29px;
  padding:5px 0 0 34px;
  position:absolute;
  top:22px;
  right:22px;
  @include border-radius(4px);
}

#sites table.main td.site .show_button span {
  display:none;
}

#sites table.main td.site ul.actions {
  position:absolute;
  right:22px;
  top:60px;
  z-index:9999;
  list-style-type:none;
  background:#bfd0e8;
  @include border-radius(4px);
  @include box-shadow(rgba(9,23,69,0.6) 0 2px 8px);
}

#sites table.main td.site ul.actions li a {
  display:block;
  padding:5px 30px 5px 10px;
  background:#bfd0e8;
  color:#1E3966;
  font-size:14px;
  font-weight:600;
  @include transition(background, .25s, linear);
}

#sites table.main td.site ul.actions li.alt a {background:#dae5f6}
#sites table.main td.site ul.actions li a:hover {background:#f2f7ff}

#sites table.main td.site ul.actions li:first-child a {
  @include border-radius(4px 4px 0 0);
  @include box-shadow(inset rgba(255,255,255,0.3) 0 1px 0)
}

#sites table.main td.site ul.actions li:last-child a {
  @include border-radius(0 0 4px 4px)  
}

#sites table.main td.site .token {
  position:absolute;
  bottom:3px;
  right:22px;
  font-size:13px;
  color:#4a648e;
}

#sites table.main td.site .token strong {
  font-weight:600;
}

#sites table.main td.usage .sparkline {
  width:190px;
  height:28px;
  margin:0 auto;
  position:relative;
  top:10px;
}

#sites table.main td.usage .plays {
  position:absolute;
  bottom:6px;
  left:10px;
  line-height:12px;
}

#sites table.main td.usage .plays strong {
  font-weight:normal;
  font-size:16px;
  display:block;
}

#sites table.main td.usage .plays span {
  font-size:9px;
  letter-spacing:1px;
  text-transform:uppercase;
  color:#4a648e;
}

#sites table.main td.usage a.view_stats {
  position:absolute;
  bottom:10px;
  right:11px;
  display:inline-block;
  padding:4px 6px 3px;
  color:#f1f6ff;
  font-size:10px;
/*  font-weight:600;*/
  text-transform:uppercase;
  letter-spacing:1px;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border:1px solid #0e2a55;
  @include gradient(#5f7da6,#2c4a76,#46658f);
  @include box-shadow((inset rgba(255,255,255,0.24) 0 1px 0, rgba(255,255,255,0.3) 0 1px 0));
  @include border-radius(5px);
}

#sites table.main td.usage a.view_stats:active {
  @include gradient(#2c4a76,#5f7da6,#46658f);
}

.early_access_video #sites table.main td.videos {
  text-align:center;
}

.early_access_video #sites table.main td.videos a.add_a_video {
  display:block;
  padding:50px 0 0;
  background:url(<%= asset_path "sites/default_videos_icon.png" %>) no-repeat center 16px;
}

.early_access_video #sites table.main td.videos a.add_a_video span {
  color:#2e4b68;
  font-weight:600;
  font-size:13px;
  border-bottom:1px solid #8095ad;
}

.early_access_video #sites table.main td.videos a.video_number {
  display:block;
  padding:28px 0 0;
}

.early_access_video #sites table.main td.videos a.video_number strong {
  font-size:21px;
  font-weight:600;
  color:#2e4b68;
  display:block;
  line-height:11px;
}

.early_access_video #sites table.main td.videos a.video_number em {
  font-size:12px;
  font-weight:600;
  font-style:normal;
  color:#4a648e;
}

#sites table.main td.code {
  text-align:center;
}

#sites table.main td.code a.embed_code {
  display:inline-block;
  margin-top:23px;
  padding:8px 10px;
  color:#fff;
  font-size:14px;
  text-transform:uppercase;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  border:1px solid #194a7f;
  @include gradient(#1e93e2,#135bd7,#1976dc);
  @include box-shadow((inset #4ca9e8 0 1px 0, rgba(0,24,51,0.5) 0 1px 5px));
  @include border-radius(5px);
}

#sites table.main td.code a.embed_code:active {
  @include gradient(#135bd7,#1e93e2,#1976dc);
}

#sites table.main td.status .tooltip {
  margin:0 auto;
  top:30px;
}

#sites table.main td.status .tooltip.payment_issue {width:18px}
#sites table.main td.status .tooltip.payment_issue .icon {
  width:18px;
  height:17px;
  background:url(<%= asset_path "alert_icon.png" %>) no-repeat;
}

#sites table.main td.status .tooltip.payment_waiting {width:18px}
#sites table.main td.status .tooltip.payment_waiting .icon {
  width:18px;
  height:17px;
  background:url(<%= asset_path "warning_triangle_icon.png" %>) no-repeat;
}

#sites table.main td.status .tooltip.ok {width:23px}
#sites table.main td.status .tooltip.ok .icon {
  width:23px;
  height:18px;
  background:url(<%= asset_path "sites/check_icon.png" %>) no-repeat;
}

#sites table.main td.status .tooltip.in_progress {width:15px}
#sites table.main td.status .tooltip.in_progress .icon {
  width:15px;
  height:15px;
  background:url(<%= asset_path "sites/dot_loading.gif" %>) no-repeat center;
}

#sites .pagination_wrap {
  font-size:13px;
  color:#4c6790;
  padding:12px 20px 0;
}

#sites .pagination_wrap a {
  color:#00235a;
}

#sites .pagination_wrap nav {
  position:relative;
  z-index:2;
}

#sites .pagination .next {
  float:right;
}

#sites .pagination_wrap .page_info {
  text-align:center;
  position:relative;
  top:-15px;
  z-index:1;
}

// REMY

.site_select {
  display:block;
  background:url(<%= asset_path "select_arrow.png" %>) no-repeat 0 8px;
  width:100px;
  height:17px;
  padding-left:10px;
}
.site_select span {
  display:none;
}

ul.site_select li {
  margin-left:40px;
}
