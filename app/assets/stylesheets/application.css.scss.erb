* {
  margin:0;
  padding:0;
}

html {min-height:100%;}

body {
  font-family:"proxima-nova-1","proxima-nova-2", Helvetica, Arial, sans-serif;
  font-size:14px;
  color:#4d5563;
  min-height:100%;
  background:#5d6778;
  background:-webkit-gradient(linear,left top,left bottom,from(#778091),to(#5d6778));
  background:-moz-linear-gradient(top, #778091, #5d6778);
  text-rendering:optimizeLegibility; /*HUGELY IMPORTANT*/
}

#header {
  min-width:1000px;
  height:61px;
  background:url(<%= asset_data_uri 'header_background.png' %>) repeat-x;
}

#header_wrap {
  width:960px;
  margin:0 auto;
  padding:0 20px;
  position:relative;
}

#header h1 a {
  display:block;
  float:left;
  width:239px;
  height:32px;
  background:url(<%= asset_data_uri 'sublimevideo.png' %>) no-repeat;
  position:relative;
  top:12px;
}

#header h1 a span {display:none;}

#main_menu {
  list-style-type:none;
  float:left;
  padding:16px 0 0 30px;
}

#main_menu li {
  float:left;
  padding-right:14px;
}

#main_menu li a {
  display:block;
  width:85px;
  height:24px;
  padding-top:5px;
  background:url(<%= asset_data_uri 'main_menu_background.png' %>) no-repeat;
  color:#e9ddef;
  font-size:15px;
  letter-spacing:1px;
  font-weight:bold;
  text-align:center;
  text-shadow:#000 0 1px 0;
}

#main_menu li.active a, #main_menu li a:active {background-position:0 -29px;}

#header .right {
  position:absolute;
  right:20px;
  top:16px;
}

#header .right ul.extra_links {
  list-style-type:none;
  float:left;
  padding:8px 20px 0 0;
}

#header .right ul.extra_links li {
  float:left;
  font-size:12px;
  padding:0 10px 2px;
  border-left:1px solid #45384b;
}

#header .right ul.extra_links li:first-child {
  border-left:none;
}

#header .right ul.extra_links li a {
  color:#bfabc9;
  border-bottom:1px solid #45384b;
  -webkit-transition:0.6s color;
  -moz-transition:0.6s color;
}

#header .right ul.extra_links li a:hover {
  color:#fff;
}

#header .right a.user {
  float:left;
  display:block;
  height:29px;
  padding-right:6px;
  font-weight:600;
  font-size:13px;
  letter-spacing:1px;
  color:#e9ddef;
  text-shadow:#000 0 1px 0;
  position:relative;
}

#header .right a.user strong {
  background:url(<%= asset_data_uri 'header_btn_back_left.png' %>) no-repeat;
  height:22px;
  padding:7px 4px 0 6px;
  display:block;
}

#header .right a.user span.icon {
  background:url(<%= asset_data_uri 'user_btn_icon.png' %>) no-repeat 0 0;
  padding:0 0 1px 22px;
}

#header .right a.user span.corner {
  display:block;
  width:6px;
  height:29px;
  background:url(<%= asset_data_uri 'header_btn_back_right.png' %>) no-repeat;
  position:absolute;
  top:0;
  right:0;
}

#header .right a.user:active strong, #header .right a.user:active span.corner, #header .right a.user.active strong, #header .right a.user.active span.corner {
  background-position:0 -29px;
}

#main_wrap {
  width:960px;
  margin:20px auto;
  padding:0 20px;
}

#main {
  background:url(<%= asset_data_uri 'textured_background.jpg' %>);
  border:1px solid #313741;
  -webkit-border-radius:10px;
  -moz-border-radius:10px;
  border-radius:10px;
  -webkit-box-shadow:rgba(0,0,0,0.45) 0 3px 12px;
  -webkit-box-shadow:rgba(0,0,0,0.45) 0 3px 12px, inset 0 2px 1px rgba(255,255,255,0.8);
  -moz-box-shadow:rgba(0,0,0,0.45) 0 3px 12px, inset 0 1px 2px rgba(255,255,255,0.8);
  box-shadow:rgba(0,0,0,0.45) 0 3px 12px, inset 0 1px 2px rgba(255,255,255,0.8);
}

@media screen and (-webkit-min-device-pixel-ratio:0){

  #main {
    border:none;
  }

  #rounded_corners_fix {
    border:1px solid #313741;
    -webkit-border-radius:9px;
    padding:1px;
    margin:-1px;
  }

}

#white_halo {
  background:url(<%= asset_data_uri 'white_halo.png' %>) center -300px no-repeat;
}

#content {
  padding:50px;
  text-shadow:rgba(255,255,255,0.75) 0 1px 0;
  position:relative;
}

#flash {
  position:absolute;
  top:-1px;
  left:40px;
  width:860px;
  height:40px;
  padding:0 10px;
  overflow:hidden;
}

#flash div {
  padding:9px 10px 0;
  height:22px;
  position:relative;
  font-weight:600;
  -webkit-box-shadow:rgba(0,0,0,0.3) 0 1px 3px;
  -moz-box-shadow:rgba(0,0,0,0.3) 0 1px 3px;
  box-shadow:rgba(0,0,0,0.3) 0 1px 3px;
  -webkit-border-bottom-left-radius:4px;
  -webkit-border-bottom-right-radius:4px;
  -moz-border-radius:0 0 4px 4px;
  border-radius:0 0 4px 4px;
}

#flash .notice {
  color:#6e5c33;
  background:#ffebbe;
  background:-webkit-gradient(linear,left top,left bottom,from(#fff1d1),to(#ffe9b4));
  background:-moz-linear-gradient(top, #fff1d1, #ffe9b4);
}

#flash .alert {
  color:#940000;
  text-shadow:rgba(255,255,255,0.5) 0 1px 0;
  background:#ffbebe;
  background:-webkit-gradient(linear,left top,left bottom,from(#ffd1d1),to(#ffb4b4));
  background:-moz-linear-gradient(top, #ffd1d1, #ffb4b4);
}

#sticky_notice {
  margin:0 0 20px;
  padding:10px 13px;
  font-weight:600;
  color:#6e5c33;
  text-shadow:rgba(255,255,255,0.9) 0 1px 0;
  background:#ffebbe;
  background:-webkit-gradient(linear,left top,left bottom,from(#fff1d1),to(#ffe9b4));
  background:-moz-linear-gradient(top, #fff1d1, #ffe9b4);
  -moz-border-radius:4px;
  -webkit-border-radius:4px;
  border-radius:4px;
  -webkit-box-shadow:rgba(0,0,0,0.35) 0 1px 5px;
  -webkit-box-shadow:rgba(0,0,0,0.35) 0 1px 5px, inset 0 1px 1px rgba(255,255,255,0.95);
  -moz-box-shadow:rgba(0,0,0,0.35) 0 1px 5px, inset 0 1px 1px rgba(255,255,255,0.95);
  box-shadow:rgba(0,0,0,0.35) 0 1px 5px, inset 0 1px 1px rgba(255,255,255,0.95);
}

#sticky_notice h3 {
  font-size:20px;
  padding:0 0 5px;
  color:#453513;
}

#sticky_notice ul {
  list-style-type:none;
}

#sticky_notice ul li {
  background:url(<%= asset_data_uri 'sticky_notice_bullet.png' %>) no-repeat 0 7px;
  padding:2px 0 6px 16px;
}

#sticky_notice a {
  font-weight:bold;
  color:#453513;
  border-bottom:1px solid #c6af79;
}

#sticky_notice ul li small {
  display:block;
  font-weight:400;
  margin-top:2px;
}

#content h2 {
  font-weight:100;
  font-size:46px;
  letter-spacing:-1px;
  line-height:35px;
  padding-bottom:30px;
}

#content form.main_form {
