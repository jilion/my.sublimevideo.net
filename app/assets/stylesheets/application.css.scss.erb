.site_select_wrap {
  float:left;
  position:relative;
  margin:39px 0 0 20px;
}

.site_select {
  display:block;
  background:url(<%= asset_path "select_arrow.png" %>) no-repeat 50% 56%;
  width:25px;
  height:24px;
  border:1px solid #576c88;
  @include border-radius(4px);
  @include box-shadow((inset rgba(255,255,255,0.4) 0 1px 0, rgba(255,255,255,0.4) 0 1px 0));
}

.site_select span {
  display:none;
}

.site_select_wrap ul.actions {
  position:absolute;
  right:0;
  top:30px;
  z-index:9999;
  list-style-type:none;
  background:#bfd0e8;
  @include border-radius(4px);
  @include box-shadow(rgba(9,23,69,0.6) 0 2px 8px);
}

.site_select_wrap ul.actions li a {
  display:block;
  padding:8px 50px 8px 10px;
  min-width:120px;
  background:#bfd0e8;
  color:#1E3966;
  font-size:18px;
  font-weight:600;
  @include transition(background, .25s, linear);
}

.site_select_wrap ul.actions li.alt a {background:#dae5f6}
.site_select_wrap ul.actions li a:hover {background:#f2f7ff}

.site_select_wrap ul.actions li:first-child a {
  @include border-radius(4px 4px 0 0);
  @include box-shadow(inset rgba(255,255,255,0.3) 0 1px 0)
}

.site_select_wrap ul.actions li:last-child a {
  @include border-radius(0 0 4px 4px)
}

