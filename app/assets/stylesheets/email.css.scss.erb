body {
  font-family:'Helvetica Neue', Helvetica, Arial, sans-serif;
  text-shadow:rgba(255,255,255,0.55) 0 1px 0;
  margin:0;
  padding:0;
  background:#eaeef4;
  color:#4e5a6c;
}

a {
  text-decoration:underline;
  color:#2e8ce3;
}

td p {
  line-height:27px;
  padding:8px 0;
  margin:0;
  color:#7e8ea7;
  font-size:16px;
}

img {
  border:none
}

h2 {
  font-weight:bold;
  margin:0;
}

h2.logo {
  color:#222222;
  font-size:26px;
}

table.wrapper {
  background:#eaeef4;
}

td.header {
  height:99px;
  background:url(<%= asset_path('emails/header-background.png') %>) repeat-x center top;
}

.content {
  margin:20px 30px;
}

/* Welcome email */

h2.welcome {
  font-size:30px;
  padding:20px 0 0;
}

td p.thank_you {
  color:#7e8ea7;
  font-size:19px;
  line-height:27px;
  margin:0;
  padding:0;
}

h3 {
  font-size:25px;
  margin:0;
}

h3.whats_next {
  padding:20px 0 5px;
}

h3.follow {
  font-weight:bold;
  padding:20px 20px 5px;
}

table.inner_table {
  margin-top:30px;
}

table.follow {
  background:#fff;
  border-radius:8px;
}

td p.bigger {
  font-size:18px;
  line-height:28px;
}

td p.follow {
  line-height:24px;
  padding:0 20px;
}

td p.follow_twitter {
  line-height:20px;
  padding:10px 30px 0;
}

td p.follow_blog {
  line-height:20px;
  padding:10px 40px 0;
}

td p.follow_newsletter {
  line-height:20px;
  padding:16px 30px 0;
}

td p.small {
  font-size:15px;
}

td ul.small li {
  font-size:14px;
  line-height:21px;
  padding:0 0 10px;
  color:#7e8ea7;
}

td p.footer {
  font-size:11px;
  padding:0 0 20px;
}